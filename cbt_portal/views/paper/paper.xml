<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="cbt_paper" name="">
        <t t-call="web.layout">
            <t t-set="head">
                <t t-call-assets="portal_assets.assets_dashboard" t-js="false"/>

                <script src="/cbt_portal/static/js/jquery-2.1.4.min.js"/>
                <script src="/cbt_portal/static/js/paginga_jquery.js"/>
                <link rel="stylesheet" href="/cbt_portal/static/css/paper.css"/>
                <style>
                    #fix_align p img {
                    height: 45px;
                    margin-top: -82%;
                    margin-bottom: -19%;
                    margin-right: -20%;
                    margin-left: 10%;
                    }
                    .green{
                    color:green !important;
                    }
                    .pager .pageNumbers a.active{
                    color: green !important;
                    font-weight: bold;
                    }
                    .pager .pageNumbers a {
                    display: inline-block;
                    padding: 0 10px;
                    color: orange !important;
                    }
                    .firstPage{
                    background-color:#6666ff;
                    color:white;
                    }
                    .previousPage{
                    background-color:#6666ff;
                    color:white;
                    }
                    .nextPage{
                    background-color:#6666ff;
                    color:white;
                    }
                    .lastPage{
                    background-color:#6666ff;
                    color:white;
                    }
                    .firstPage:hover{
                    background-color:grey;
                    color: white;
                    cursor: pointer;
                    }
                    .previousPage:hover{
                    background-color:grey;
                    color: white;
                    cursor: pointer;
                    }
                    .nextPage:hover{
                    background-color:grey;
                    color: white;
                    cursor: pointer;
                    }
                    .lastPage:hover{
                    background-color:grey;
                    color: white;
                    cursor: pointer;
                    }
                </style>
            </t>
            <body class="sidebar_main_swipe header_full">
                <div id="" onmousedown="return false" onselectstart="return false">
                    <div class="row">
                        <div class="col s12">
                            <div class="">

                                <div class="section section-form-wizard">
                                    <t t-call="cbt_portal.cbt_widgets"/>
                                    <t t-call="cbt_portal.cbt_sections"/>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <t t-call-assets="portal_assets.assets_dashboard" t-css="false"/>

                <script src="/cbt_portal/static/js/paper.js"/>


            </body>
        </t>
    </template>
