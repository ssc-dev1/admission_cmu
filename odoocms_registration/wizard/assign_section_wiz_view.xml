<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

		<record id="view_odoocms_assign_section_wiz_form" model="ir.ui.view">
			<field name="name">odoocms.assign.section.wiz.form</field>
			<field name="model">odoocms.assign.section.wiz</field>
			<field name="arch" type="xml">
				<form string="Assign Section">
					<group>
						<field name="batch_id" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
						<field name="batch_section_id" domain="[('batch_id','=',batch_id)]" widget="many2many_tags"
							groups="odoocms_registration.group_batch_section"
							   options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
					</group>
					<notebook>
						<page string="Students">
							<group>
								<field name="student_ids" colspan="4" nolabel="1">
									<tree string="Students">
										<field name="code" />
										<field name="name" />
										<field name="gender"/>
										<field name="email"/>
										<field name="mobile"/>
										<field name="program_id" />
										<field name="term_id" />
										<field name="semester_id" />
										<field name="state" invisible="1"/>
									</tree>
								</field>
							</group>
						</page>
					</notebook>

					<footer>
						<button name="assign_section" string="Assign Section" type="object" class="btn-primary"/>
						<button string="Cancel" class="btn-default" special="cancel" />
					</footer>
			   </form>
			</field>
		</record>

		<record id="action_odoocms_assign_section_wiz" model="ir.actions.act_window">
            <field name="name">Assign Section</field>
            <field name="res_model">odoocms.assign.section.wiz</field>
            <field name="view_mode">form</field>
			<field name="target">new</field>
        </record>


        <menuitem
                id="menu_odoocms_assign_section"
                name="Assign Section"
                action="action_odoocms_assign_section_wiz"
                parent="menu_odoocms_registration_main"
				groups="odoocms_registration.group_batch_section"
                sequence="300"/>


    </data>
</odoo>
