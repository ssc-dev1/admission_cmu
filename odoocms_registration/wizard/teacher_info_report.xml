<?xml version='1.0' encoding='utf-8'?>
<odoo>



    <record id="teacher_info_report_form" model="ir.ui.view">
        <field name="name">teacher.info.report.form</field>
        <field name="model">teacher.info.report</field>
        <field name="arch" type="xml">
            <form string="Teacher Info Report">
                    <group>
                        <group>
                            <field name="faculty_id"
                                options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        </group>
                    </group>
                <footer>
                    <button name="print_report" string="Print Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="teacher_info_report_action" model="ir.actions.act_window">
        <field name="name">Teacher Info Report</field>
        <field name="res_model">teacher.info.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
            id="teacher_info_menu_cms"
            name="Teacher Info Report"
            action="teacher_info_report_action"
            parent="odoocms.menu_odoocms_faculty_root" />

