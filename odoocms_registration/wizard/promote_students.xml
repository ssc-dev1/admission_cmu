<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_odoocms_promote_student_form" model="ir.ui.view">
            <field name="name">odoocms.promote.student.form</field>
            <field name="model">odoocms.promote.student</field>
            <field name="arch" type="xml">
                <form string="Promote Students">
                    <group>
                        <field name="batch_id"
                            options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        <field name="term_id"
                            options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                    </group>
                    <footer>
                        <button name="promote_students" string="Promote" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="act_odoocms_promote_students" model="ir.actions.act_window">
            <field name="name">Promote Students</field>
            <field name="res_model">odoocms.promote.student</field>
			<field name="binding_model_id" ref="model_odoocms_batch"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

