<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

		<record id="view_odoocms_assign_teacher_wiz_form" model="ir.ui.view">
			<field name="name">odoocms.assign.teacher.wiz.form</field>
			<field name="model">odoocms.assign.teacher.wiz</field>
			<field name="arch" type="xml">
				<form string="Assign Teacher">
					<group>
						<group>
							<field name="batch_id"/>
						</group>
						<group>
							<field name="term_id"/>
						</group>
					</group>

					<footer>
						<button name="assign_teacher" string="Assign Teachers" type="object" class="btn-primary"/>
						<button string="Cancel" class="btn-default" special="cancel" />
					</footer>
			   </form>
			</field>
		</record>

		<record id="action_odoocms_assign_teacher_wiz" model="ir.actions.act_window">
            <field name="name">Assign Teachers</field>
            <field name="res_model">odoocms.assign.teacher.wiz</field>
            <field name="view_mode">form</field>
			<field name="target">new</field>
        </record>


        <menuitem
                id="menu_odoocms_assign_teacher"
                name="Assign Teachers"
                action="action_odoocms_assign_teacher_wiz"
                parent="menu_odoocms_registration_main"
                sequence="350"/>


    </data>
</odoo>
