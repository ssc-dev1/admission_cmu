<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_odoocms_merge_section_form" model="ir.ui.view">
            <field name="name">odoocms.merge.section.form</field>
            <field name="model">odoocms.merge.section</field>
            <field name="arch" type="xml">
                <form string="Marge Section">
                    <group>
                        <group>
                            <field name="term_id" domain="['|',('current','=',True),('enrollment_planning','=',True)]"
                                options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        </group>
                        <group>
                            <field name="primary_class_id" domain="[('term_id','=',term_id)]"
                                options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                            <field name="merge_with" domain="[('term_id','=',term_id),('is_parent','=',True)]"
                                options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="merge_section" string="Merge Section" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_odoocms_merge_section" model="ir.actions.act_window">
            <field name="name">Merge Section</field>
            <field name="res_model">odoocms.merge.section</field>
			<field name="binding_model_id" ref="model_odoocms_class_primary"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>


    </data>
</odoo>
