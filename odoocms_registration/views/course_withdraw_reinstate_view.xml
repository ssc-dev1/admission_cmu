<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="odoocms_student_course_withdraw_view_tree" model="ir.ui.view">
        <field name="name">odoocms.student.course.withdraw.view.tree</field>
        <field name="model">odoocms.student.course.withdraw</field>
        <field name="arch" type="xml">
            <tree string="Course WithDraw" create="false">
                <field name="student_id" />
                <field name="program_id"/>
                <field name="batch_id"/>
                <field name="term_id"/>
                <field name="date_request"/>
                <field name="date_effective"/>
                <field name="date_approve"/>
                <field name="state"/>
            </tree>
        </field>
     </record>

     <record id="view_odoocms_student_course_withdraw_form" model="ir.ui.view">
        <field name="name">odoocms.student.course.withdraw.form</field>
        <field name="model">odoocms.student.course.withdraw</field>
        <field name="arch" type="xml">
            <form string="Student Course Withdraw">
                <header>
                    <button name="action_submit" string="Submit" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight" states="submit"/>
                    <button name="action_cancel" string="Cancel" type="object" states="submit"/>
                    <field name="state" statusbar_visible="draft,approve,done" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field default_focus="1" name="name" placeholder="Name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="student_id" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                            <field name="program_id"/>
                            <field name="batch_id"/>
                        </group>
                        <group>
                            <field name="type"/>
                            <field name="term_id"/>
                        </group>
                        <group>
                            <field name="registration_id" readonly="1"/>
                            <field name="reason_id"
                                   attrs="{
                                    'required':[('type','=','withdraw')],
                                    'invisible':[('type','=','reinstate')],
                                    }"
                                   options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        </group>
                        <group>
                            <field name="date_request"/>
                            <field name="date_effective"/>
                            <field name="date_approve"/>

                        </group>
                    </group>
                    <group>
                        <field name="withdraw_registration_ids" widget="many2many_tags"
                                   domain="[('student_id','=',student_id),('term_id','=',term_id),('state','in',('draft','current'))]"
                                   options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"
                                   attrs="{
                                    'required': [('type','=','withdraw')],
                                    'invisible': [('type','!=','withdraw')]
                                   }"
                            />
                            <field name="reinstate_registration_ids" widget="many2many_tags"
                                   domain="[('student_id','=',student_id),('term_id','=',term_id),('state','=','withdraw')]"
                                   options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"
                                   attrs="{
                                    'required': [('type','=','reinstate')],
                                    'invisible': [('type','!=','reinstate')]
                                   }"
                            />
                    </group>
                    <group>
                        <field name="description" required="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field groups="base.group_user" name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
     </record>

     <!-- Search View -->
     <record model="ir.ui.view" id="odoocms_student_course_withdraw_search">
        <field name="name">odoocms.student.course.withdraw.search</field>
        <field name="model">odoocms.student.course.withdraw</field>
        <field name="arch" type="xml">
            <search>
                <field name="program_id"/>
                <field name="batch_id"/>
                <group>
                    <filter name="Program" string="Program" context="{'group_by':'program_id'}"/>
                    <filter name="Batch" string="Batch" context="{'group_by':'batch_id'}"/>
                </group>
            </search>
        </field>
     </record>

     <record id="odoocms_student_course_withdraw_action" model="ir.actions.act_window">
        <field name="name">Student Course Withdraw</field>
        <field name="res_model">odoocms.student.course.withdraw</field>
        <field name="domain">[('type','=','withdraw')]</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('odoocms_student_course_withdraw_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_odoocms_student_course_withdraw_form')})]"/>
     </record>
     <record id="odoocms_student_course_reinstate_action" model="ir.actions.act_window">
        <field name="name">Student Course Reinstate</field>
        <field name="res_model">odoocms.student.course.withdraw</field>
        <field name="domain">[('type','=','reinstate')]</field>
        <field name="view_mode">tree,form</field>
     </record>

     <menuitem
         id="menu_odoocms_student_course_withdraw"
         name="Student Course Withdraw"
         action="odoocms_student_course_withdraw_action"
         parent="odoocms_registration.menu_odoocms_registration_registration"
         sequence="21"/>

     <menuitem
         id="menu_odoocms_student_course_reinstate"
         name="Student Course Reinstate"
         action="odoocms_student_course_reinstate_action"
         parent="odoocms_registration.menu_odoocms_registration_registration"
         sequence="22"/>

</odoo>
