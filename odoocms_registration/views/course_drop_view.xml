<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
		<record id="view_odoocms_course_drop_tree" model="ir.ui.view">
			<field name="name">odoocms.course.drop.tree</field>
			<field name="model">odoocms.course.drop</field>
			<field name="arch" type="xml">
				<tree string="Shift Course">
					<field name="name"/>
					<field name="class_id"/>
					<field name="term_id"/>
					<field name="batch_id"/>
					<field name="state"/>
				</tree>
			</field>
		</record>

		<record id="view_odoocms_course_drop_form" model="ir.ui.view">
			<field name="name">odoocms.course.drop.form</field>
			<field name="model">odoocms.course.drop</field>
			<field name="arch" type="xml">
				<form string="Drop Course">
					<header>
						<button name="fetch_students" states="draft" string="Fetch Students" type="object" class="btn-primary"/>
						<button name="action_submit" states="draft" string="Submit" type="object" class="btn-primary"/>
						<button name="drop_course" states="submit" string="Drop Course" type="object" class="btn-primary"/>
						<button name="action_draft" states="submit" string="Reset to Draft" type="object"/>
						<button name="action_cancel" states="draft,submit" string="Cancel" type="object"/>
						<field name="state" widget="statusbar" statusbar_visible="draft,submit,done"/>
					</header>
					<sheet>
						 <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
						<group>
							<group>
								<field name="batch_id" required="1"
									options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
								<field name="term_id" required="1"
									options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
							</group>
							<group>
								<field name="class_id" required="True"
									domain="[('term_id','=',term_id),('batch_id','=',batch_id)]"
									options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
								<field name="dropped_class" readonly="1"
									   attrs="{'invisible': [('state','!=','done')]}"/>
							</group>
						</group>
						<group string="Students">
							<field name="student_ids" widget="many2many_tags" nolabel="1"
								domain="[('batch_id','=',batch_id)]"
								options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
						</group>
					</sheet>
			   </form>
			</field>
		</record>

		<record id="action_odoocms_course_drop" model="ir.actions.act_window">
            <field name="name">Drop Course</field>
            <field name="type">ir.actions.act_window</field>
			<field name="res_model">odoocms.course.drop</field>
            <field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
            <field name="context">{}</field>
        </record>


        <menuitem
			id="menu_odoocms_drop_course"
			name="Drop Course"
			action="action_odoocms_course_drop"
			parent="menu_odoocms_registration_main"
			sequence="360"/>
    </data>
</odoo>
