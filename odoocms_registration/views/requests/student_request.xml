<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <!-- Certificate Request  -->
    <record id="odoocms_request_student_certificate_tree" model="ir.ui.view">
        <field name="name">odoocms.request.student.certificate.tree</field>
        <field name="model">odoocms.request.student.certificate</field>
        <field name="arch" type="xml">
            <tree string="Certificate">
                <field name="student_id"/>
                <field name="type_certificate"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="odoocms_request_student_certificate_form" model="ir.ui.view">
        <field name="name">odoocms.request.student.certificate.form</field>
        <field name="model">odoocms.request.student.certificate</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <form >
                <header>
                    <field name="state" widget="statusbar" />
                    <button class='btn btn-primary' name="action_approve" states='draft'  type="object" string="Approve"/>
                    <button name="action_reject" class='btn btn-primary' states='draft'   type="object" string="Reject"/>
                </header>
                <sheet>

                    <group>
                        <group>
                            <field name="student_id" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        </group>
                        <group>
                            <field name="type_certificate" />
                            <field name="attachment" />
                        </group>

                    </group>
                    <field name="reason"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="odoocms_request_student_certificate_search" model="ir.ui.view">
        <field name="name">odoocms.request.student.certificate.search</field>
        <field name="model">odoocms.request.student.certificate</field>
        <field name="arch" type="xml">
            <search >
                <field name="student_id"/>
                <field name="state"/>
                <field name="type_certificate"/>
                <newline/>
               
               
            </search>
        </field>
    </record>
    <record id="act_certificate_request_view" model="ir.actions.act_window">
        <field name="name">Certificate Request</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odoocms.request.student.certificate</field>
        <field name="search_view_id" ref="odoocms_request_student_certificate_search"/>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem action="act_certificate_request_view" id="certificate_request_menu" name="Student Certificate Request" parent="odoocms_registration.menu_student_request_root" sequence="230"/>

    
