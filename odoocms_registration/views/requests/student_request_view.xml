<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!--  Course Drop by Student -->
    <record id="view_student_course_drop" model="ir.ui.view">
        <field name="name">odoocms.student.course.drop.tree</field>
        <field name="model">odoocms.student.course.drop</field>
        <field name="arch" type="xml">
            <tree string="Student Course Drop">
                <field name="student_id"/>
                <field name="program_id"/>
                <field name="batch_id"/>
                <field name="term_id"/>
                <field name="semester_id"/>
                <field name="registration_id"/>
                <field name="date_request"/>
                <field name="date_effective"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="view_student_course_drop_form" model="ir.ui.view">
        <field name="name">odoocms.student.course.drop.form</field>
        <field name="model">odoocms.student.course.drop</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <form string="Student Course Drop">
                <header>
                    <button name="action_submit" string="Submit" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight" states="submit"/>
                    <button name="action_cancel" string="Cancel" type="object" states="submit"/>
                    <field name="state" statusbar_visible="draft,approve,done" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field default_focus="1" name="name" placeholder="Name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="student_id" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                            <field name="program_id"/>
                            <field name="batch_id"/>
                        </group>
                        <group>
                            <field name="batch_section_id" groups="odoocms_registration.group_batch_section"/>
                            <field name="term_id"/>
                            <field name="semester_id"/>
                        </group>
                        <group>
                            <field name="registration_id"
                                   domain="[('student_id','=',student_id),('term_id','=',term_id),('state','in',('draft','current'))]"
                                   options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"
                            />
                            <field name="reason_id" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        </group>
                        <group>
                            <field name="date_request"/>
                            <field name="date_effective"/>
                            <field name="date_approve"/>
                            <field name="override_min_limit"/>
                            <field name="limit_error" invisible="1"/>
                        </group>
                    </group>
                    <group attrs="{'invisible':[('limit_error','=',False)]}">
                        <h3>
                            <field name="limit_error_text" class="text-danger" readonly="1"/>
                        </h3>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field groups="base.group_user" name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="action_student_course_drop_view" model="ir.actions.act_window">
        <field name="name">Student Course Drop</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odoocms.student.course.drop</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--  Course Add Drop by Student -->
    <record id="view_student_course_add_drop" model="ir.ui.view">
        <field name="name">odoocms.student.course.add.drop.tree</field>
        <field name="model">odoocms.student.course.add.drop</field>
        <field name="arch" type="xml">
            <tree string="Student Course Add Drop">
                <field name="student_id"/>
                <field name="program_id"/>
                <field name="batch_id"/>
                <field name="term_id"/>
                <field name="date_request"/>
                <field name="date_effective"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="view_student_course_add_drop_form" model="ir.ui.view">
        <field name="name">odoocms.student.course.add.drop.form</field>
        <field name="model">odoocms.student.course.add.drop</field>
        <field eval="8" name="priority"/>
        <field name="arch" type="xml">
            <form string="Student Course Add Drop">
                <header>
                    <button name="action_submit" string="Submit" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_approve" string="Approve" type="object" class="oe_highlight" states="submit"/>
                    <button name="action_cancel" string="Cancel" type="object" states="submit"/>
                    <field name="state" statusbar_visible="draft,approve,done" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field default_focus="1" name="name" placeholder="Name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="student_id" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                            <field name="program_id"/>
                            <field name="batch_id"/>
                        </group>
                        <group>
                            <field name="term_id"/>
                        </group>
                        <group>
                            <field name="date_request"/>
                            <field name="date_effective"/>
                            <field name="date_approve"/>
                        </group>
                        <group>
                            <field name="override_limit"/>
                            <field name="override_prereq"/>
                            <field name="limit_error" invisible="1"/>
                        </group>
                    </group>


                    <field name="course_domain" invisible="1"/>
                    <field name="drop_domain" invisible="1"/>
                    <field name="can_add" invisible="1"/>
                    <group>
                        <group string="Drop Courses">
                            <field name="drop_ids" nolabel="1" widget="many2many_tags"
                                domain="[('id','in', drop_domain)]"
                                options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        </group>
                        <group string="Add Courses" attrs="{'invisible': [('can_add','=',False)]}">
                            <field name="add_ids" nolabel="1"  widget="many2many_tags"
                                domain="[('id','in', course_domain)]"
                                options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        </group>
                    </group>

                     <group>
                        <group>
                            <field name="reason_id" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                    <group attrs="{'invisible':[('limit_error','=',False)]}">
                        <h3>
                            <field name="limit_error_text" class="text-danger" readonly="1"/>
                        </h3>
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field groups="base.group_user" name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="action_student_course_add_drop_view" model="ir.actions.act_window">
        <field name="name">Student Course Add Drop</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odoocms.student.course.add.drop</field>
        <field name="view_mode">tree,form</field>
    </record>

