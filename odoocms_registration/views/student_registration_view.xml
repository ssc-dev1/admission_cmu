<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_odoocms_student_course_tree" model="ir.ui.view">
            <field name="name">odoocms.student.course.tree</field>
            <field name="model">odoocms.student.course</field>
            <field name="arch" type="xml">
                <tree string="Student Enrollment" edit="false" delete="false" create="false">
                    <field name="student_id"/>
                    <field name="program_id" optional="hide"/>
                    <field name="institute_id" optional="hide"/>
                    <field name="session_id" optional="hide"/>
                    <field name="term_id" optional="show"/>
                    <field name="course_id" optional="hide"/>
                    <field name="primary_class_id" optional="show"/>
                    <field name="date_effective" optional="show"/>
                    <field name="repeat_code" optional="hide"/>
                    <field name="tag" optional="hide"/>
                    <field name="prereq" optional="hide"/>
                    <field name="prereq_course_id" optional="hide"/>
                    <field name="withdraw_date" optional="hide"/>
                    <field name="withdraw_reason" optional="hide"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_odoocms_student_course_form" model="ir.ui.view">
            <field name="name">odoocms.student.course.form</field>
            <field name="model">odoocms.student.course</field>
            <field name="arch" type="xml">
                <form string="Student Enrollment" edit="false" delete="false" create="false">
                    <header>
                        <button name="course_withdraw" type="object" states="current"
                            string="Withdraw" groups="odoocms.group_cms_manager"/>
                        <button name="course_reinstate" type="object" states="withdraw"
                            string="Reinstate" groups="odoocms.group_cms_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,current,done"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="tag"/>
                            <field name="repeat_code" readonly="1"/>
                            <group>
                                <field name="student_id" readonly="1"/>
                                <field name="program_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="session_id" readonly="1"/>
                                <field name="term_id" readonly="1"/>
<!--                                <field name="date_effective"/>-->
                            </group>
                            <group name="course_class">
                                <field name="course_id" readonly="1"/>
                                <field name="primary_class_id" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Components" name="components">
                                <field name="component_ids" readonly="1">
                                    <tree>
                                         <field name="class_id" string="Component"/>
                                         <field name="weightage"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_odoocms_student_course_pivot" model="ir.ui.view">
            <field name="name">odoocms.student.course.pivot</field>
            <field name="model">odoocms.student.course</field>
            <field name="arch" type="xml">
                <pivot string="Students" display_quantity="true">
                    <field name="program_id" type="row"/>
                    <field name="session_id" type="col"/>
                </pivot>
            </field>
        </record>
        <record id="view_odoocms_student_course_search" model="ir.ui.view">
            <field name="name">odoocms.student.course.search</field>
            <field name="model">odoocms.student.course</field>
            <field name="arch" type="xml">
                <search string="Student Enrollment">
                    <field name="student_id"/>
                    <field name="program_id"/>
                    <field name="institute_id"/>
                    <field name="term_id"/>
                    <field name="course_id"/>
                    <field name="primary_class_id"/>
                    <newline/>
                    <filter name='compulsory' string="Core Course" domain="[('course_type','=','compulsory')]"/>
                    <filter name='elective' string="Elective" domain="[('course_type','=','elective')]"/>
                    <filter name='additional' string="Additional" domain="[('course_type','=','additional')]"/>
                    <filter name='alternate' string="Alternate" domain="[('course_type','=','alternate')]"/>
                    <filter name='minor' string="Minor" domain="[('course_type','=','minor')]"/>
                    <filter name='prereq' string="Prereq?" domain="[('prereq','=',False)]"/>
                    <newline/>
                    <group expand="0" string="Group By...">
<!--                        <filter name="group_by_state" string="Status" domain="[]"-->
<!--                                context="{'group_by':'state'}"/>-->
                        <filter name="group_by_student" string="Student" domain="[]" context="{'group_by':'student_id'}"/>
                        <filter name="group_by_program" string="Program" domain="[]" context="{'group_by':'program_id'}"/>
                        <filter name="group_by_institute" string="Institute" domain="[]" context="{'group_by':'institute_id'}"/>
                        <filter name="group_by_session" string="Calendar Year" domain="[]" context="{'group_by':'session_id'}"/>
                        <filter name="group_by_semester" string="Academic Term" domain="[]" context="{'group_by':'term_id'}"/>
                        <filter name="group_by_course" string="Subject" domain="[]" context="{'group_by':'course_id'}"/>
                        <filter name="group_by_primary_class" string="Primary Class" domain="[]" context="{'group_by':'primary_class_id'}"/>
                        <filter name="group_by_repeat_code" string="RPT Code" domain="[]" context="{'group_by':'repeat_code'}"/>
                        <filter name="group_by_prereq_course_id" string="Prereq Course" domain="[]"
                                context="{'group_by':'prereq_course_id'}"/>
                        <filter name="group_by_state" string="Status" domain="[]" context="{'group_by':'state'}"/>
                    </group>

                    <searchpanel>
                        <field name="program_id" icon="fa-users"/>
                        <field name="session_id" icon="fa-users"/>
                         <field name="term_id" icon="fa-users"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="view_odoocms_student_course_component_tree" model="ir.ui.view">
            <field name="name">odoocms.student.course.component.tree</field>
            <field name="model">odoocms.student.course.component</field>
            <field name="arch" type="xml">
                <tree string="Student Enrollment" edit="false" delete="false" create="false">
                    <field name="student_id"/>
                    <field name="program_id"/>
                    <field name="session_id"/>
                    <field name="term_id"/>
                    <field name="class_id"/>
                </tree>
            </field>
        </record>

        <record id="view_odoocms_student_course_component_form" model="ir.ui.view">
            <field name="name">odoocms.student.course.component.form</field>
            <field name="model">odoocms.student.course.component</field>
            <field name="arch" type="xml">
                <form string="Student Enrollment" edit="false" delete="false" create="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="student_id" readonly="1"/>
                                <field name="program_id"/>
                            </group>
                            <group>
                                <field name="session_id"/>
                                <field name="term_id" readonly="1"/>
                            </group>
                            <group name="course_class">
                                <field name="class_id" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_odoocms_student_term_tree" model="ir.ui.view">
            <field name="name">odoocms.student.term.tree</field>
            <field name="model">odoocms.student.term</field>
            <field name="arch" type="xml">
                <tree string="Student Term" edit="false" delete="false" create="false">
                    <field name="student_id"/>
                    <field name="term_id"/>
                    <field name="institute_id" optional="hide"/>
                    <field name="program_id" optional="hide"/>
                    <field name="session_id" optional="hide"/>
                    <field name="batch_id" optional="show"/>
                    <field name="term_type" optional="hide"/>
                    <field name="semester_id" optional="hide"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="view_odoocms_student_term_pivot" model="ir.ui.view">
            <field name="name">odoocms.student.term.pivot</field>
            <field name="model">odoocms.student.term</field>
            <field name="arch" type="xml">
                <pivot string="Student Terms" display_quantity="true">
                    <field name="program_id" type="row"/>
                    <field name="session_id" type="col"/>
                </pivot>
            </field>
        </record>
        <record id="view_odoocms_student_term_search" model="ir.ui.view">
            <field name="name">odoocms.student.term.search</field>
            <field name="model">odoocms.student.term</field>
            <field name="arch" type="xml">
                <search string="Student Term">
                    <field name="student_id"/>
                    <field name="program_id"/>
                    <field name="term_id"/>
                    <field name="session_id"/>
                    <field name="batch_id"/>
                    <newline/>
                    <filter name='action_required' string="Action Required" domain="[('to_be','=',True)]"/>
                    <group expand="0" string="Group By...">
                        <filter name="group_by_student" string="Student" domain="[]" context="{'group_by':'student_id'}"/>
                        <filter name="group_by_institute" string="Institute/Faculty" domain="[]" context="{'group_by':'institute_id'}"/>
                        <filter name="group_by_program" string="Program" domain="[]" context="{'group_by':'program_id'}"/>
                        <filter name="group_by_session" string="Calendar Year" domain="[]" context="{'group_by':'session_id'}"/>
                        <filter name="group_by_term" string="Academic Term" domain="[]" context="{'group_by':'term_id'}"/>
                        <filter name="group_by_semester" string="Semester" domain="[]" context="{'group_by':'semester_id'}"/>
                        <filter name="group_by_batch" string="Batch" domain="[]" context="{'group_by':'batch_id'}"/>
                        <filter name="group_by_state" string="State" domain="[]" context="{'group_by':'state'}"/>
                    </group>

                    <searchpanel>
<!--                        <field name="session_id" icon="fa-users"/>-->
                        <field name="term_id" icon="fa-users"/>
                    </searchpanel>
                </search>
            </field>
        </record>

        <record id="action_odoocms_student_course" model="ir.actions.act_window">
            <field name="name">Student Enrollment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">odoocms.student.course</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="search_view_id" ref="view_odoocms_student_course_search"/>
            <field name="domain">[('state','not in',['notify'])]</field>
            <field name="context">{}</field>
        </record>

        <record id="action_odoocms_student_course_component" model="ir.actions.act_window">
            <field name="name">Student Enrollment Component</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">odoocms.student.course.component</field>
            <field name="view_mode">tree</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record id="action_odoocms_student_course_result" model="ir.actions.act_window">
            <field name="name">Student Result</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">odoocms.student.course</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="search_view_id" ref="view_odoocms_student_course_search"/>
            <field name="domain">[('state','in',['notify'])]</field>
            <field name="context">{}</field>
        </record>

        <record id="action_odoocms_student_term" model="ir.actions.act_window">
            <field name="name">Student Term</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">odoocms.student.term</field>
            <field name="view_mode">tree,form,pivot</field>
            <field name="search_view_id" ref="view_odoocms_student_term_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
                id="menu_odoocms_student_course"
                name="Registered Courses"
                action="action_odoocms_student_course"
                parent="menu_odoocms_registration_registration"
                sequence="30"/>

        <menuitem
                id="menu_odoocms_student_course_comonent"
                name="Registered Course Components"
                action="action_odoocms_student_course_component"
                parent="menu_odoocms_registration_registration"
                sequence="32"/>


        <menuitem
                id="menu_odoocms_student_term"
                name="Student Terms"
                action="action_odoocms_student_term"
                parent="menu_odoocms_registration_registration"
                sequence="25"/>

    </data>
</odoo>
