<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_odoocms_batch_tree_registration" model="ir.ui.view">
            <field name="name">odoocms.batch.tree.registration</field>
            <field name="model">odoocms.batch</field>
            <field name="inherit_id" ref="odoocms.view_odoocms_batch_tree"/>
            <field name="arch" type="xml">
                <field name="session_id" position="after">
                    <field name="tt_check"/>
                </field>
            </field>
        </record>
        <record id="view_odoocms_batch_search" model="ir.ui.view">
            <field name="name">odoocms.batch.search</field>
            <field name="model">odoocms.batch</field>
            <field name="arch" type="xml">
                <search string="Batch">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="department_id"/>
                    <field name="program_id"/>
                    <newline/>
                    <filter name='archived' string="Archived" domain="[('active','=',False)]"/>
                    <filter name='tt_check_filter' string="Timetable Check" domain="[('tt_check','=',True)]"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter name="academic_session" string="Calendar Year" domain="[]"
                                context="{'group_by':'session_id'}"/>
                        <filter name="career" string="Career" domain="[]" context="{'group_by':'career_id'}"/>
                        <filter name="institute" string='Faculty/Institute' domain="[]" context="{'group_by':'institute_id'}"/>
                        <filter name="department" string='Department/Center' domain="[]" context="{'group_by':'department_id'}"/>
                        <filter name="program" string="Program" domain="[]" context="{'group_by':'program_id'}"/>

                        <filter name="tt_check_grp" string="Timetable Check" domain="[]" context="{'group_by':'tt_check'}"/>
                    </group>
                    <searchpanel>
                        <field name="session_id" icon="fa-calendar"/>
                        <field name="career_id" icon="fa-graduation-cap"/>
                    </searchpanel>
                </search>
            </field>
        </record>


        <record id="odocms_batch_form_registration" model="ir.ui.view">
            <field name="name">odoocms.batch.form</field>
            <field name="model">odoocms.batch</field>
            <field name="inherit_id" ref="odoocms.view_odoocms_batch_form" />
            <field name="arch" type="xml">
                <field name="session_id" position="after">
                    <field name="required_credit_hour"/>
                    <field name="tt_check"/>
                </field>
                <field name="study_scheme_id" position="after">
                    <label for="sequence_number_next"/>
                    <div>
                        <field name="sequence_number_next" style="padding-right: 1.0em"/>
                        <field name="sequence_id" required="0"
                               attrs="{'readonly': 1}"/>
                    </div>
                </field>
                <page name="users" position="before">
                    <page name='sections' string="Sections" groups="odoocms_registration.group_batch_section">
                        <field name="section_ids">
                            <tree>
                                <field name="sequence" widget="handle"/>
                                <field name="name"/>
                                <field name="code" readonly="1"/>
                                <field name="strength"/>
                                <field name="room_id"/>
                                <field name="student_count"/>
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>
    
        <record id="action_odoocms_batch" model="ir.actions.act_window">
            <field name="name">Program Batch</field>
            <field name="res_model">odoocms.batch</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_odoocms_batch_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record id="view_odoocms_batch_section_tree" model="ir.ui.view">
            <field name="name">odoocms.batch.section.tree</field>
            <field name="model">odoocms.batch.section</field>
            <field name="arch" type="xml">
                <tree string="Batch Section">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="batch_id" readonly="1"/>
                    <field name="student_count"/>
                </tree>
            </field>
        </record>

        <record id="view_odoocms_batch_section_form" model="ir.ui.view">
            <field name="name">odoocms.batch.section.form</field>
            <field name="model">odoocms.batch.section</field>
            <field name="arch" type="xml">
                <form string="Batch Section">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="batch_id" readonly="1"/>
                                <field name="student_count"/>
                            </group>
                        </group>
                        <notebook>
                            <page name='students' string="Students">
                                <field name="student_ids">
                                    <tree>
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="gender"/>
                                        <field name="email"/>
                                        <field name="mobile"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                            <page name='primary_classes' string="Primary Classes">
                                <field name="primary_class_ids">
                                    <tree create="false" delete="false" edit="false">
                                        <field name="code"/>
                                        <field name="name"/>
                                        <field name="term_id"/>
                                        <field name="grade_staff_id"/>
                                        <field name="student_count"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>

         <record id="view_odoocms_batch_section_search" model="ir.ui.view">
            <field name="name">odoocms.batch.section.search</field>
            <field name="model">odoocms.batch.section</field>
            <field name="arch" type="xml">
                <search string="Batch Section">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="batch_id"/>
                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter name="batch_grp" string="Batch" domain="[]" context="{'group_by':'batch_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <menuitem
                id="menu_odoocms_batch"
                name="Program Batch"
                action="action_odoocms_batch"
                parent="menu_odoocms_registration_classes"
                sequence="30"/>
    </data>
</odoo>
