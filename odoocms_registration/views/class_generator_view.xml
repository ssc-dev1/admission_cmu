<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_odoocms_class_generator_tree" model="ir.ui.view">
            <field name="name">odoocms.class.generator.tree</field>
            <field name="model">odoocms.class.generator</field>
            <field name="arch" type="xml">
                <tree string="Course Offering" delete="false">
                    <field name="name"/>
                    <field name="institute_id" string="Institute/Faculty"/>
                    <field name="program_id"/>
                    <field name="offer_for" optional="hide"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_odoocms_class_generator_form" model="ir.ui.view">
            <field name="name">odoocms.class.generator.form</field>
            <field name="model">odoocms.class.generator</field>
            <field name="arch" type="xml">
                <form string="Course Offering" delete="false">
                    <header>
                        <button name="action_generate" string="Generate" type="object" class="oe_highlight"
                                attrs="{'invisible':['|',('can_generate','=',False),('state','!=','draft')]}"/>
                        <button name="action_reject" string="Reject" type="object" class="oe_highlight"
                                states="draft" groups="odoocms.group_cms_manager"/>
                        <button name="action_reset_draft" string="Reset to Draft" class="oe_highlight" states="cancel" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                        <field name="can_generate" invisible="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="institute_id" required="1"
                                    options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                                <field name="department_id" required="1"
                                    domain="[('institute_id','=',institute_id)]"
                                    options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                                <field name="program_id"
                                    domain="[('department_id','=',department_id)]"
                                    options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"
                                    attrs="{'required':[('class_type','=','regular')]}"/>
                            </group>
                            <group>
                                <field name="course_domain" invisible="1"/>
                                <field name="generator_type"/>
                                <field name="class_type" widget="radio" options="{'horizontal': true}"
                                    attrs="{'invisible':[('generator_type','=','faculty')]}"/>
                                <field name="type" widget="radio" options="{'horizontal': true}"
                                    attrs="{'invisible':[('generator_type','=','faculty')]}"/>
                                <field name="offer_for" widget="radio" options="{'horizontal': true}"
                                    attrs="{'invisible':[('generator_type','=','faculty')]}"/>
                                <field name="restrict"/>
                            </group>
                            <group>
                                <field name="section_pattern"
                                    options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                                <!-- attrs="{'required': [('generator_type','=','scheme'),('class_type','=','regular')]}" -->
                                <field name="lec_assessment_template_id"
                                    domain="[('component','=','lecture')]"
                                    options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                                <field name="lab_assessment_template_id"
                                    domain="[('component','=','lab')]"
                                    options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                                <field name="section_strength"/>
                            </group>
                            <group>
                                <field name="term_id" required="1"
                                    options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"
                                    domain="[('short_code','!=',False),'|',('enrollment_active','=',True),('enrollment_planning','=',True)]"/>
                            </group>
                        </group>
                        <div name="scheme_fields" attrs="{'invisible':[('generator_type','=','faculty')]}">
                            <group name="batch">
                                <field name="batch_ids" colspan="4" widget="many2many_tags"
                                    domain="[('program_id','=',program_id)]"
                                    options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"
                                    attrs="{'required':[('class_type','=','regular'),('generator_type','=','scheme')]}"/>
                            </group>
                            <group name="fetch_scheme_courses">
                                <button name="fetch_scheme_courses" type="object" string="Get Courses" class="oe_highlight"
                                    attrs="{'invisible':['|',('state','!=','draft'),('class_type','!=','regular')]}"/>
                            </group>
<!--                            <group name="course">-->
<!--                                <field name="course_id"-->
<!--                                    attrs="{'invisible':['|',('state','!=','draft'),('class_type','=','regular')]}"/>-->
<!--                            </group>-->
<!--                            <group name="add_course">-->
<!--                                <button name="add_course" type="object" string="Add Course" class="oe_highlight"-->
<!--                                    attrs="{'invisible':['|',('state','!=','draft'),('class_type','=','regular')]}"/>-->
<!--                            </group>-->
                        </div>
                        <div name="faculty_fields" attrs="{'invisible':[('generator_type','=','scheme'),('class_type','=','regular')]}">
                            <group name="faculty" attrs="{'invisible':[('generator_type','=','scheme'),('class_type','=','regular')]}">
                                <field name="course_ids" colspan="4" widget="many2many_tags"
                                    options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"
                                    attrs="{'invisible':[('state','!=','draft')]}"/>
                                <!-- domain="course_domain" -->
                            </group>
                            <group name="add_courses" attrs="{'invisible':[('generator_type','=','scheme'),('class_type','=','regular')]}">
                                <button name="add_course" type="object" string="Add Courses" class="oe_highlight"
                                    attrs="{'invisible':[('state','!=','draft')]}"/>
                            </group>
                        </div>

                        <notebook>
                            <page string="Courses">
                                <field name="line_ids" nolabel="1">
                                    <tree editable="bottom" create="false">
                                        <field name="name" readonly="1"/>
                                        <field name="code" readonly="1"/>
                                        <field name="batch_id" readonly="1" optional="show"/>
                                        <field name="department_id" readonly="1" optional="hide"/>
                                        <field name="institute_id" string="Institute/Faculty" readonly="1" optional="hide"/>
                                        <field name="scheme_line_id" readonly="1" optional="hide"/>
                                        <field name="course_id" readonly="1" optional="show"/>
                                        <field name="type" readonly="1" optional="show"/>
                                        <field name="class_type" readonly="1" optional="show"/>
                                        <field name="generate_count" optional="sow" readonly="1"/>
                                        <field name="count"/>
                                        <field name="strength" optional="show"/>
                                        <field name="batch_strength" readonly="1" optional="hide"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Primary Classes" attrs="{'invisible': [('state','!=','done')]}">
                                <field name="primary_class_ids" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

