<odoo>
    <template id="teacher_info_report_template">
       <t t-call="web.html_container">
           <t t-call="web.basic_layout">
               <style>td{padding:2px !important;}</style>
               <t t-set="report_title" t-value="'Teacher Info Report'"/>
               <t t-call="odoocms_assets.custom_header_report"/>

               <table class="table table-bordered table-striped">
                   <thead>
                     <tr>
                       <th  class='text-center'>Sr#</th>
                       <th  class='text-center'>Teacher Name</th>
                       <th  class='text-center'>Email</th>
                       <th  class='text-center'>Phone</th>
                       <th  class='text-center'>Job</th>
                       <th  class='text-center'>CNIC</th>
                       <th  class='text-center'>Type</th>
                       <th  class='text-center'>Address </th>
                       <th  class='text-center'>Status </th>
                     </tr>
                   </thead>
                   <tbody>
                    <t t-foreach="docs" t-as="faculty">
                        <tr style='padding:2px !important;'>
                            <td class='text-center' style='padding:2px !important;'><t t-esc=" faculty_index+1"/></td>
                            <td class='text-center' style='padding:2px !important;'><t t-esc="faculty.name"/></td>
                            <td class='text-center' style='padding:2px !important;'><t t-esc="faculty.work_email"/></td>
                            <td class='text-center' style='padding:2px !important;'><t t-esc="faculty.mobile_phone"/></td>
                            <td class='text-center' style='padding:2px !important;'><t t-esc="faculty.employee_id.job_title"/></td>
                            <td class='text-center' style='padding:2px !important;'><t t-esc="faculty.employee_id.cnic"/></td>
                            <td class='text-center' style='padding:2px !important;'><t t-esc="str(faculty.employee_id.employment_nature).capitalize()"/></td>
                            <td class='text-center' style='padding:2px !important;'><t t-esc="faculty.employee_id.street"/> </td>
                            <td class='text-center' style='padding:2px !important;'><t t-esc="str(faculty.employee_id.state).capitalize()"/></td>

                        </tr>
                    </t>
                    
                   </tbody>
                 </table>
           </t>
       </t>
       <br/>
   </template>
</odoo>