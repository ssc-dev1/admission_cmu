<?xml version='1.0' encoding='utf-8'?>
<odoo>
    
    <template id="student_convocation_template">
        <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-set="report_title" t-value="'Student Convocation'"/>
                <t t-call="odoocms_assets.custom_header_report"/>
                <br/>

               <style>
                tr,td{
                    padding-top=2px !important;
                    padding-bottom=2px !important;
                }
               </style>

                <table class="table table-bordered table-striped">
                    <thead>
                      <tr>
                        <th >Sr#</th>
                        <th >Registration No</th>
                        <th >Name</th>
                        <th >Mobile</th>
                        <th >Email</th>
                        <th >CGPA</th>
                        <th >Cr Hours</th>
                      </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="docs" t-as="student">
                            <tr style='padding-top:2px !important;padding-bottom:2px !important;'>
                                <td style='padding-top:2px !important;padding-bottom:2px !important;'><t t-esc="student_index+1"/></td>
                                <td style='padding-top:2px !important;padding-bottom:2px !important;'><t t-esc="student.id_number"/></td>
                                <td style='padding-top:2px !important;padding-bottom:2px !important;'><t t-esc="student.name"/></td>
                                <td style='padding-top:2px !important;padding-bottom:2px !important;'><t t-esc="student.sms_mobile"/></td>
                                <td style='padding-top:2px !important;padding-bottom:2px !important;'><t t-esc="student.notification_email"/></td>
                                <td style='padding-top:2px !important;padding-bottom:2px !important;'><t t-esc="student.cgpa"/></td>
                                <td style='padding-top:2px !important;padding-bottom:2px !important;'><t t-esc="student.attempted_credits"/></td> 
                            </tr>
                        </t>
                    </tbody>
                  </table>
            </t>
            
         
        </t>
    </template>

   
    <record id="student_convocation_list_report_action" model="ir.actions.report">
        <field name="name">Student Convocation List</field>
        <field name="model">odoocms.student</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">odoocms_registration.student_convocation_template</field>
        <field name="report_file">odoocms_registration.student_convocation_template</field>
    </record>

</odoo>