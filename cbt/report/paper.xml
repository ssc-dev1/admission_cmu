<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="cbt.paper">
            <t t-call="web.basic_layout">
                <t t-if="not company">
                    <t t-if="company_id">
                        <t t-set="company" t-value="company_id"/>
                    </t>
                    <t t-elif="o and 'company_id' in o">
                        <t t-set="company" t-value="o.company_id.sudo()"/>
                    </t>
                    <t t-else="else">
                        <t t-set="company" t-value="res_company"/>
                    </t>
                </t>
                <t t-foreach="docs" t-as="paper">
                    <div class="row" style="margin:0px;padding:10px;background-color: #f5f5f5;">

                        <img alt="..." style="max-width:40px" t-att-src="image_data_uri(company.logo)"
                             t-if="company.logo"/>
                        <div class="col-md-12">
                            <center>
                                <h4>
                                    <strong>
                                        <span t-field="company.name"/>
                                    </strong>
                                </h4>
                            </center>
                        </div>

                    </div>
                    <div>
                        <div>
                            <div>
                                <table class="table table-condensed" style="border: 1px solid black !important;">
                                    <tbody>
                                       <!-- <tr>
                                            <td>
                                                <p style="text-align:right;">
                                                    <strong>Participant Number :</strong>
                                                </p>
                                            </td>
                                            <td>
                                                <p style="text-align:right;">
                                                    <strong>_______________________________</strong>
                                                </p>
                                            </td>
                                            <td>
                                                <p style="text-align:right;">
                                                    <strong>Student Name :</strong>
                                                </p>
                                            </td>
                                            <td>
                                                <p style="text-align:right;">
                                                    <strong>_______________________________</strong>
                                                </p>
                                            </td>

                                        </tr> -->
                                        <tr>
                                            <td>
                                                <p style="text-align:right;">
                                                    <strong>Program :</strong>
                                                </p>
                                            </td>
                                            <td>
                                                <p style="text-align:right;">
                                                    <strong>
                                                        <u>
                                                            <t t-foreach="paper.generator_id.program_ids" t-as="program_name">
                                                                
                                                                <span t-field="program_name.name"/>,
                                                            </t>
                                                        </u>
                                                    </strong>
                                                </p>
                                            </td>
                                            <td>
                                                <p style="text-align:right;">
                                                    <strong>Duration :</strong>
                                                </p>
                                            </td>
                                            <td>
                                                <p style="text-align:right;">
                                                    <strong>3 Hrs</strong>
                                                </p>
                                            </td>

                                        </tr>
                                        <tr>
                                            <td>
                                                <p style="text-align:right;">
                                                    <strong>Total Questions :</strong>
                                                </p>
                                            </td>
                                            <td>
                                                <p style="text-align:right;">
                                                    <strong>
                                                        <u>
                                                            <span t-field="paper.number_of_questions"/>
                                                        </u>
                                                    </strong>
                                                </p>

                                            </td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>
                                <t t-set="i" t-value="1"/>
                                <t t-foreach="paper.questions" t-as="question">
                                    <t t-if="i == 1 or question_section != question.subject_id">
                                        <strong>
                                            <h3>Section :
                                                <t t-esc="question.subject_id.name"/>
                                            </h3>
                                        </strong>
                                    </t>

                                    <div class="q_div">
                                        <p style="text-align:right; ">

                                            <table class="table">
                                                <tr style="border-bottom: 1px solid lightgrey; margin-bottom: 0rem;">
                                                    <td style="width: 1%;">
                                                        <strong>
                                                            <t t-esc="i"/>)
                                                        </strong>
                                                    </td>

                                                    <td>
                                                        <strong>
                                                            <span style="display: inline-block;" t-field="question.question"/>
                                                        </strong>
                                                    </td>
                                                </tr>
                                            </table>

                                        </p>
                                        <table class="">
                                            <tbody>
                                                <tr>
                                                    <td style="width: 1%; padding: 0.25rem;">
                                                        <p>(a).</p>
                                                    </td>
                                                    <td style="padding: 0.25rem;">
                                                        <span t-field="question.ans1"/>
                                                    </td>
                                                </tr>
                                                <tr style="margin-left: 3%;">
                                                    <td style="width: 1%; padding: 0.25rem;">
                                                        <p>(b).</p>
                                                    </td>
                                                    <td style="margin-left: 3%; padding: 0.25rem;">
                                                        <span t-field="question.ans2"/>
                                                    </td>
                                                </tr>
                                                <tr style="margin-left: 3%;">
                                                    <td style="width: 1%; padding: 0.25rem;">
                                                        <p>(c).</p>
                                                    </td>
                                                    <td style="margin-left: 3%; padding: 0.25rem;">
                                                        <span t-field="question.ans3"/>
                                                    </td>
                                                </tr>
                                                <tr style="margin-left: 3%; ">
                                                    <td style="width: 1%; padding: 0.25rem;">
                                                        <p>(d).</p>
                                                    </td>
                                                    <td style="margin-left: 3%; padding: 0.25rem;">
                                                        <span t-field="question.ans4"/>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <t t-set="i" t-value="i+1"/>
                                    </div>
                                    <t t-set="question_section" t-value="question.subject_id"/>
                                </t>


                            </div>

                        </div>
                    </div>

                </t>
            </t>
        </template>

    </data>
</odoo>
