<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_export_result_wizard_view" model="ir.ui.view">
            <field name="name">export.result.wizard.view</field>
            <field name="model">export.result.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="paper_id" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button name="make_excel" string="Export" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_export_result_wizard" model="ir.actions.act_window">
            <field name="name">Export Result</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">export.result.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_cbt_result_save_form" model="ir.ui.view">
            <field name="name">cbt.result.save.wizard.form</field>
            <field name="model">cbt.result.save.wizard</field>
            <field name="arch" type="xml">
                <form string="Assessment Report">
                    <field name="name" invisible="1"/>
                    <div>
                        <h2>Report Generated</h2>
                        <p>Here is the Excel Sheet:
                            <field name="data" readonly="1" filename="name"/>
                        </p>
                    </div>
                    <footer>
                        <button string="Close" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <menuitem id="menu_cbt_export_result_wizard"
                  name="Export Result"
                  parent="cbt_menu_root"
                  action="action_export_result_wizard"
                  sequence="35"/>


    </data>
</odoo>
