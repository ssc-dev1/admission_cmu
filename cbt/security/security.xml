<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="module_category_cbnet" model="ir.module.category">
            <field name="name">CBNET</field>
            <field name="description">Helps you handle your cbnet needs.</field>
            <field name="sequence">10</field>
        </record>

        <record id="group_cbt_faculty" model="res.groups">
            <field name="name">CBNET Faculty</field>
            <field name="category_id" ref="module_category_cbnet"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_cbt_user" model="res.groups">
            <field name="name">CBNET User</field>
            <field name="category_id" ref="module_category_cbnet"/>
            <field name="implied_ids" eval="[(4, ref('cbt.group_cbt_faculty'))]"/>
        </record>


        <record id="group_cbt_admin" model="res.groups">
            <field name="name">CBNET Admin</field>
            <field name="category_id" ref="module_category_cbnet"/>
            <field name="implied_ids" eval="[(4, ref('cbt.group_cbt_user'))]"/>
        </record>

