<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="cbt_student_paper_tree" model="ir.ui.view">
            <field name="name">cbt.student.paper.tree</field>
            <field name="model">cbt.student.paper</field>
            <field name="arch" type="xml">
                <tree create="false">
                    <field name="participant_id"/>
                    <field name="main_paper_id"/>
                </tree>
            </field>
        </record>

        <record id="cbt_student_paper_form" model="ir.ui.view">
            <field name="name">cbt.student.paper.form</field>
            <field name="model">cbt.student.paper</field>
            <field name="arch" type="xml">
                <form edit="false" create="false">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="participant_id" required="1"/>
                                <field name="main_paper_id"/>
                            </group>
                        </group>
                        <field name="questions" required="1"/>
                    </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>
        <record id="cbt_student_paper_action" model="ir.actions.act_window">
            <field name="name">Student Papers</field>
            <field name="res_model">cbt.student.paper</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create the First Paper here.
                </p>
            </field>
        </record>
        <menuitem
                name="Student Papers"
                id="cbt_student_paper_menu"
                parent="cbt_config_paper_menu"
                action="cbt_student_paper_action"/>
    </data>
</odoo>