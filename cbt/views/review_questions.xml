<!--                         (0, 0, {'view_mode': 'tree', 'view_id': ref('cbt.cbt_question_review_tree')}),-->
<!--                         (0, 0, {'view_mode': 'form', 'view_id': ref('cbt.cbt_question_review_form')}),-->
<!--                         ]"/>-->
<!--</record>-->
        <menuitem
                name="Review Question"
                id="cbt_question_review_menu"
                parent="cbt_qas"
                action="cbt_question_review_code_action"/>
    </data>
</odoo>