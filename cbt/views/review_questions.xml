<odoo>
    <data>
        <!--MCQs Setup-->
        <record id="cbt_question_review_tree" model="ir.ui.view">
            <field name="name">cbt.mcqs.tree</field>
            <field name="model">cbt.mcqs</field>
            <field name="arch" type="xml">
                <tree delete="false" create="false" string="Review Questions">
                    <field name="question_title"/>
                    <field name="subject_id"/>
                    <field name="topic_id"/>
                    <field name="stopic_id"/>
                    <field name="difficulty_level_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="cbt_question_review_form" model="ir.ui.view">
            <field name="name">cbt.mcqs.form</field>
            <field name="model">cbt.mcqs</field>
            <field name="arch" type="xml">
                <form delete="false" create="false" string="Review Questions" >
                    <header>
                        <button name="approve_question" string="Approve" type="object" class="btn-primary"
                                attrs="{'invisible': [('reviewed_user', '=', True)]}"/>
                        <button name="reject_question" string="Reject" type="object" class="btn-primary"
                                attrs="{'invisible': [('reviewed_user', '=', True)]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approved,cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="subject_id"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                                <field name="topic_id"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                                <field name="stopic_id"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                                <field name="current_user"  domain="[('share', '=', False)]"/>
                                <field name="reviewed_user"  domain="[('share', '=', False)]"/>
                            </group>
                            <group>
                                <field name="type_id"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                                <field name="skill_id"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                                <field name="difficulty_level_id"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                                <field name="time_id"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                            </group>
                        </group>
                        <group>
                            <field name="question" widget="html"/>

                        </group>
                        <notebook>
                            <page name="Options" string="Options">
                                <group>
                                    <field name="ans1_correct"/>
                                    <field name="ans1"/>

                                    <field name="ans2_correct"/>
                                    <field name="ans2"/>

                                    <field name="ans3_correct"/>
                                    <field name="ans3"/>

                                    <field name="ans4_correct"/>
                                    <field name="ans4"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="cbt_question_review_code_action" model="ir.actions.server">
            <field name="name">Questions</field>
            <field name="model_id" ref="model_cbt_mcqs"></field>
            <field name="state">code</field>
            <field name="code">action=model.get_filtered_record()</field>
        </record>
