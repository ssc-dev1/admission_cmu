<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="cbt_paper_generator_tree" model="ir.ui.view">
            <field name="name">cbt.paper.generator.tree</field>
            <field name="model">cbt.paper.generator</field>
            <field name="arch" type="xml">
                <tree default_order='id desc' >
                    <field name="name"/>
                    <field name="total_paper"  />
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="cbt_paper_generator_form" model="ir.ui.view">
            <field name="name">cbt.paper.generator.form</field>
            <field name="model">cbt.paper.generator</field>
            <field name="arch" type="xml">
                <form attrs="{'edit':[('state','=','draft')]}">
                    <header>
                            <button name="papers_generation" string="Generate Papers" type="object" class="btn-primary"
                                    attrs="{'invisible':[('state','!=','draft')]}"/>
                            <button name="export_papers_to_cbt_portal" string="Allocate Papers To Candidates (Portal)" type="object" class="btn-primary" attrs="{'invisible':[('state','!=','assign')]}"/>
                            <field name="state" widget="statusbar"/>

                        </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1"/>
                                <field name="etest_id" readonly="1" force_save="1"/>
                                <!-- <field name="program_id" readonly="1" force_save="1"/> -->
                                <field name="slot_ids" required="1" widget='many2many_tags' string='Slot' domain="[('active_time','=','True')]" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                                <field name="program_ids" widget='many2many_tags'></field>
                                <field name="enable_repeat_question" />
                            </group>
                            <group>
                                <field name="criteria_id" required="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                                <field name="type_id" readonly="1" force_save="1" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,'no_create':True,}"/>
                                <field string='Configure Paper Count' name="configure_paper"/>
                                <field name="total_paper" attrs="{'readonly': [('configure_paper', '=', False)]}" />
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Papers">
                                <field name="papers">
                                    <tree create="false" delete="false" edit="false">
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </page>
                           
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
            </field>
        </record>
