        <record id="cbt_paper_generator_action" model="ir.actions.act_window">
            <field name="name">Generate Paper</field>
            <field name="res_model">cbt.paper.generator</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" />
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create the First Paper here.
                </p>
            </field>
        </record>
        <menuitem
                name="Generate Paper"
                id="cbt_paper_generator_menu"
                parent="cbt_config_paper_menu"
                action="cbt_paper_generator_action"/>
    </data>
</odoo>