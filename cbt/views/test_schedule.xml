<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_cbt_center_tree" model="ir.ui.view">
            <field name="name">cbt.center.tree</field>
            <field name="model">cbt.center</field>
            <!--<field name="priority" eval="8" />-->
            <field name="arch" type="xml">
                <tree string="Entry Test Centers">
                    <field name="name"/>
                    <field name="test_type" />

                </tree>
            </field>
        </record>
        <record id="view_cbt_center_form" model="ir.ui.view">
            <field name="name">cbt.center.form</field>
            <field name="model">cbt.center</field>
            <!--<field name="priority" eval="8" />-->
            <field name="arch" type="xml">
                <form string="Entry Test Center">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="code" />
                            </group>
                            <group>
                                <field name="test_type" />
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Test Timing">
                                <field name="slot_ids">
                                    <tree editable="bottom">
                                        <field name="date" />
                                        <field name="time" widget="float_time"/>
                                        <field name="active_time"/>
                                        <field name="capacity"/>
<!--                                        <field name="credit_hours"/>-->
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <!--<div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>-->
                </form>
            </field>
        </record>
         <record id="action_cbt_center" model="ir.actions.act_window">
        <field name="name">Test Centers</field>
        <field name="res_model">cbt.center</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create Your Test Center here.
            </p>
        </field>
    </record>
        <menuitem id="students_setup"
                  name="Students Setup"
                  parent="cbt_menu_root"/>
        <menuitem
            id="menu_cbt_center"
            name="Test Centers"
            parent="students_setup"
            action="action_cbt_center"
            sequence="140"/>
    </data>
</odoo>