<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="cbt_paper_conduct_tree" model="ir.ui.view">
            <field name="name">cbt.paper.conduct.tree</field>
            <field name="model">cbt.paper.conduct</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="paper_id"/>
		    <field name="slot_id"/>
		    <field name="participant_id"/>
		    <field name="program"/>
                    <field name="date"/>
                    <field name="score"/>
                </tree>
            </field>
        </record>

        <record id="cbt_paper_conduct_form" model="ir.ui.view">
            <field name="name">cbt.paper.conduct.form</field>
            <field name="model">cbt.paper.conduct</field>
            <field name="arch" type="xml">
                <form>
                    <header>

                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="paper_id"/>
                                <field name="score"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="last_question_attempt_id"/>
                                <field name="user_token"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Questions Score">
                                <field name="question_attempt_id">
                                    <tree>
                                        <field name="question_id"/>
                                        <field name="participant_answer"/>
                                        <field name="score"/>

                                    </tree>
                                </field>
                            </page>
                            <page string="Subject Score">
                                <field name="subject_score_id">
                                    <tree>
                                        <field name="subject_id"/>
                                        <field name="score"/>
                                        <field name="total_score"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="cbt_paper_conduct_action" model="ir.actions.act_window">
            <field name="name">Paper Result</field>
            <field name="res_model">cbt.paper.conduct</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Paper Result/Score display here.
                </p>
            </field>
        </record>
        <menuitem
                name="Paper Result/Score"
                id="cbt_paper_conduct_menu"
                groups="cbt.group_cbt_admin"
                parent="cbt_config_paper_menu"
                action="cbt_paper_conduct_action"/>
    </data>
</odoo>
