<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Calendar Year -->
    <record id="view_odoocms_academic_session_tree" model="ir.ui.view">
        <field name="name">odoocms.academic.session.tree</field>
        <field name="model">odoocms.academic.session</field>
        <field name="arch" type="xml">
            <tree string="Calendar Year">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="date_start"/>
                <field name="current_active"/>
            </tree>
        </field>
    </record>
    <record id="view_odoocms_academic_session_form" model="ir.ui.view">
        <field name="name">odoocms.academic.session.form</field>
        <field name="model">odoocms.academic.session</field>
        <field name="arch" type="xml">
            <form string="Calendar Year">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="code" required="1"/>
                            <field name="sequence" invisible="1"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="current_active"/>
                            <field name="active"/>
                        </group>
                        <field name="description" placeholder="Enter the Description"/>
                    </group>
                    <notebook/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_odoocms_academic_session_search" model="ir.ui.view">
        <field name="name">odoocms.academic.session.search</field>
        <field name="model">odoocms.academic.session</field>
        <field name="arch" type="xml">
            <search string="Calendar Year">
                <field name="code"/>
                <field name="name"/>
            </search>
        </field>
    </record>
    <record id="action_odoocms_academic_session" model="ir.actions.act_window">
        <field name="name">Calendar Year</field>
        <field name="res_model">odoocms.academic.session</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_odoocms_academic_session_search"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create the First Academic Session here.
            </p>
        </field>
    </record>

    <record id="view_odoocms_academic_term_tree" model="ir.ui.view">
        <field name="name">odoocms.academic.term.tree</field>
        <field name="model">odoocms.academic.term</field>
        <field name="arch" type="xml">
            <tree string="Academic Term">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="enrollment_active"/>
                <field name="enrollment_planning"/>
                <field name="current"/>
                <field name="type"/>
                <field name="number"/>   <!-- groups="odoocms.group_cms_manager" -->
            </tree>
        </field>
    </record>
    <record id="view_odoocms_academic_term_form" model="ir.ui.view">
        <field name="name">odoocms.academic.term.form</field>
        <field name="model">odoocms.academic.term</field>
        <field name="arch" type="xml">
            <form string="Academic Term">
                <sheet>
                    <group>
                        <group name="term_group">
                            <field name="name" required="1"/>
                            <field name="code" required="1"/>
                            <field name="short_code"/>
                            <field name="number" required="1"/>  <!-- groups="base.group_erp_manager" -->
                        </group>
                        <group>
<!--                            <field name="session_id"-->
<!--                                options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>-->
                            <field name="sequence"/>
                            <field name="type"/>
                            <field name="enrollment_active"/>
                            <field name="enrollment_planning"/>
                            <field name="current"/>
                        </group>
                        <field name="description" placeholder="Enter the Description"/>
                        <field name="short_description" placeholder="Enter the Short Description"/>
                    </group>
                    <notebook/>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_odoocms_academic_term_search" model="ir.ui.view">
        <field name="name">odoocms.academic.term.search</field>
        <field name="model">odoocms.academic.term</field>
        <field name="arch" type="xml">
            <search string="Academic Term/Semester">
                <field name="code"/>
                <field name="name"/>
            </search>
        </field>
    </record>
    <record id="action_odoocms_academic_term" model="ir.actions.act_window">
        <field name="name">Academic Term</field>
        <field name="res_model">odoocms.academic.term</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_odoocms_academic_term_search"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create the First Academic Term here.
            </p>
        </field>
    </record>


    <menuitem
            id="menu_odoocms_term_setup"
            name="Academic Term/Semester Setup"
            parent="menu_odoocms_academic_setup"
            sequence="10"/>

    <menuitem
            id="menu_odoocms_academic_session"
            name="Academic Session"
            parent="menu_odoocms_term_setup"
            action="action_odoocms_academic_session"
            sequence="10"/>

    <menuitem
            id="menu_odoocms_academic_term"
            name="Academic Term/Semester"
            parent="menu_odoocms_term_setup"
            action="action_odoocms_academic_term"
            sequence="20"/>


</odoo>
