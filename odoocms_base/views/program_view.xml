<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_odoocms_program_tree" model="ir.ui.view">
        <field name="name">odoocms.program.tree</field>
        <field name="model">odoocms.program</field>
        <field name="arch" type="xml">
            <tree string="Academic Programs">
                <field name="short_code" optional="hide"/>
                <field name="code"/>
                <field name="name"/>
                <field name="career_id"/>
                <field name="department_id"/>
                <field name="institute_id" optional="hide"/>
                <field name="campus_id" optional="hide"/>
                <field name="discipline_id"/>
                <field name="effective_date"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_odoocms_program_form" model="ir.ui.view">
        <field name="name">odoocms.program.form</field>
        <field name="model">odoocms.program</field>
        <field name="arch" type="xml">
            <form string="Academic Program">
                <sheet>
                    <group string="Program">
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="short_code"/>
                            <label for="duration_basic" string="Duration"/>
                            <div class="address_format">
                                <field name="duration_basic" required="1" style="width: 37%%"/>
                                <field name="duration_basic_unit" required="1" style="width: 37%%"/>
                            </div>
                            <label for="duration_extended" string="Duration Extended"/>
                            <div class="address_format">
                                <field name="duration_extended" required="1" style="width: 37%%"/>
                                <field name="duration_extended_unit" required="1" style="width: 37%%"/>
                            </div>

                            <field name="credits"/>
                        </group>
                        <group>
                            <field name="effective_date"/>
                            <field name="department_id"
                                options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                            <field name="career_id"
                                options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                            <field name="discipline_id"
                                options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                            <field name="institute_id"/>
                            <field name="campus_id"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="specialization" string="Specialization">
                            <group colspan="4">
                                <field name="specialization_ids" nolabel="1"  context="{'default_program_id':id}">
                                    <tree string="Specialization"> <!-- create="false" delete="false" edit="false" -->
                                        <field name="code"/>
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field groups="base.group_user" name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_odoocms_program_search" model="ir.ui.view">
        <field name="name">odoocms.program.search</field>
        <field name="model">odoocms.program</field>
        <field name="priority" eval="14"/>
        <field name="arch" type="xml">
            <search string="Program">
                <field name="name"/>
                <field name="code"/>
                <newline/>
                <filter name='archived' string="Archived" domain="[('active','=',False)]"/>
                <newline/>
                <group expand="0" string="Group By...">
                    <filter string="Department" domain="[]" name="department" context="{'group_by':'department_id'}"/>
                    <filter string="Institute" domain="[]" name="institute" context="{'group_by':'institute_id'}"/>
                    <filter string="Campus" domain="[]" name="campus" context="{'group_by':'campus_id'}"/>
                    <filter string="Career" domain="[]" name="career" context="{'group_by':'career_id'}"/>
                </group>

                <searchpanel>
                    <field name="campus_id" icon="fa-users"/>
                    <field name="career_id" icon="fa-users"/>
                     <field name="department_id" icon="fa-users"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="view_odoocms_specialization_tree" model="ir.ui.view">
        <field name="name">odoocms.specialization.tree</field>
        <field name="model">odoocms.specialization</field>
        <field name="arch" type="xml">
            <tree string="Program Specialization">
                <field name="code"/>
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_odoocms_specialization_form" model="ir.ui.view">
        <field name="name">odoocms.specialization.form</field>
        <field name="model">odoocms.specialization</field>
        <field name="arch" type="xml">
            <form string="Program Specialization">
                <sheet>
                    <group string="Program">
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="program_id"
                                options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field groups="base.group_user" name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_odoocms_program" model="ir.actions.act_window">
        <field name="name">Program</field>
        <field name="res_model">odoocms.program</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_odoocms_program_search"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the First Program here.
            </p>
        </field>
    </record>

    <record id="action_odoocms_specialization" model="ir.actions.act_window">
        <field name="name">Specializations</field>
        <field name="res_model">odoocms.specialization</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the First Program Specialization here.
            </p>
        </field>
    </record>


    <menuitem
            id="menu_odoocms_program"
            parent="menu_odoocms_academic_structure"
            name="Academic Programs"
            action="action_odoocms_program"
            sequence="30"/>
    <!--            groups="odoocms.group_cms_manager"-->

    <menuitem
            id="menu_odoocms_specialization"
            parent="menu_odoocms_academic_structure"
            name="Program Specializations"
            action="action_odoocms_specialization"
            sequence="35"/>



</odoo>
