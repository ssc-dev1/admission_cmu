<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="document_upload" name="Document Upload">
        <script type="text/javascript" src="/odoocms_admission_portal/static/js/steps/document.js"></script>

        <div class="ml-3 mr-3 header_tab diable_header_tab mt-0 p-2" onclick="$('#document_upload_div').slideToggle(1000); $('#document_upload_dropdown').toggleClass('fa-angle-down fa-angle-up');">
            <a class="btn btn-link">
                <i style='color: white;font-size: 25px;' class="fa-solid fa-money-check-dollar float-left"></i>
                <h2 style='color:white' class="float-left"> &#160;&#160;<t t-esc="step.name"/>
                </h2>
            </a>
            <a>
                <i id='document_upload_dropdown' class="fas fa-angle-down float-right p-0 m-0" style="font-size: 40px; cursor: pointer;color: white"></i>
            </a>
        </div>

        <div id="document_upload_div" class="row container-fluid mt-3 collapse_div">
            <div class='col-8'>
                <h3 style='upload: none' id='required_document'>Documents</h3>
                <hr/>
                <div class="container">
                    <form id='document_upload_form' class="row g-3">
                        <input type='hidden' name='step_name' value='document'></input>
                        <input type="hidden" id='step_no_document' name="step_no" t-att-value='counter_step' />
                        <t t-if="application_id.applicant_type=='national'">
                            <div class="mb-3 col-6">
                                <img style='height:150px;width:150px' t-att-src="image_data_uri(application_id.cnic_front) if application_id.cnic_front else '/odoocms_admission_portal/static/img/upload.jpg'" class="img-thumbnail" alt="..."></img>
                                <br/>
                                <label for="cnic_front" class="form-label">CNIC Front Side/B-Form*</label>
                                <input required="1" class="form-control" onChange='image_preview_func(this)' accept="image/*" type="file" id="cnic_front" name="cnic_front"/>
                            </div>
                            <div class="mb-3 col-6">
                                <img style='height:150px;width:150px' t-att-src="image_data_uri(application_id.cnic_back) if application_id.cnic_back else '/odoocms_admission_portal/static/img/upload.jpg'" class="img-thumbnail" alt="..."></img>
                                <br/>
                                <label for="cnic_back" class="form-label">CNIC BackSide/B-Form*</label>
                                <input required="1" class="form-control" onChange='image_preview_func(this)' accept="image/*" type="file" id="cnic_back" name="cnic_back"/>
                            </div>
                            <!-- <div class="mb-3 col-6">
                                <img style='height:150px;width:150px' t-att-src="image_data_uri(application_id.domicile) if application_id.domicile else '/odoocms_admission_portal/static/img/upload.jpg'" class="img-thumbnail" alt="..."></img>
                                <br/>
                                <label for="domicile_file" class="form-label">Domicile*</label>
                                <input class="form-control" type="file" id="domicile_file" onChange='image_preview_func(this)' accept="image/*" name="domicile_file"/>
                            </div> -->
                            <br/>
                        </t>
                        <t t-else="">
                            <div class="mb-3 col-6">
                                <img style='height:150px;width:150px' t-att-src="image_data_uri(application_id.pass_port) if application_id.pass_port else '/odoocms_admission_portal/static/img/upload.jpg'" class="img-thumbnail" alt="..."></img>
                                <br/>
                                <label for="pass_port" class="form-label">Passport*</label>
                                <input class="form-control" onChange='image_preview_func(this)' accept="image/*" type="file" id="pass_port" name="pass_port"/>
                            </div>
                        </t>
                        <div class="mb-3 col-12">
                            <button type='submit' t-attf-style="border:None; {{'display:none' if application_id.state != 'draft' else '' }}" class="btn btn-primary ml-1 float-right">Upload</button>
                        </div>
                    </form>

                </div>

            </div>
            <div class='col-4'></div>
        </div>
        <br/>
    </template>
</odoo>