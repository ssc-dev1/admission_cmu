            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" style="padding-top: 16px; background-color: #F1F1F1; font-family:Verdana, Arial,sans-serif; color: #454748; width: 100%; border-collapse:separate;">
                    <tr>
                        <td align="center">
                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="padding: 16px; background-color: white; color: #454748; border-collapse:separate;">
                                <tbody>
                                    <!-- CONTENT -->
                                    <tr>
                                        <td align="center" style="min-width: 590px;">
                                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                                <tr>
                                                    <td valign="top" style="font-size: 13px;">
                                                        <div>
                                                            Dear ${object.name},
                                                            <br/>
                                                            <br/>
                                                            We are pleased to confirm that your application has been submitted successfully.
                                                            Please keep on visiting our website and your account for knowing about latest updates
                                                            related to Admission process.
                                                            <br/>
                                                            Best of Luck.
                                                            <br/>
                                                            <br/>
                                                            <br/>
                                                            Regards,
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td style="text-align:center;">
                                                        <hr width="100%" style="background-color:rgb(204,204,204);border:medium none;clear:both;display:block;font-size:0px;min-height:1px;line-height:0; margin: 16px 0px 16px 0px;"/>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <!-- FOOTER -->
                                    <tr>
                                        <td align="center" style="min-width: 590px;">
                                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: white; font-size: 11px; padding: 0px 8px 0px 8px; border-collapse:separate;">
                                                <tr>
                                                    <td>
                                                        Admission Office
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td valign="middle" align="left">
                                                        <t t-out="request.env.company.name"/>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td valign="middle" align="left" style="opacity: 0.7;">
                                                        <t t-out="request.env.company.admission_phone"/>
                                                        % if object.company_id.admission_mail
                                                        |
                                                        <a href="'mailto:%s' % ${object.company_id.admission_mail}" style="text-decoration:none; color: #454748;">${object.company_id.admission_mail}</a>
                                                        % endif
                                                        % if object.company_id.website
                                                        |
                                                        <a href="'%s' % ${object.company_id.website}" style="text-decoration:none; color: #454748;">
                                                            ${object.company_id.website}
                                                        </a>
                                                        % endif
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                    <!-- POWERED BY -->
                    <tr>
                        <td align="center" style="min-width: 590px;">
                            <table border="0" cellpadding="0" cellspacing="0" width="590" style="min-width: 590px; background-color: #F1F1F1; color: #454748; padding: 8px; border-collapse:separate;">
                                <!--<tr>
                                    <td style="text-align: center; font-size: 13px;">
                                        Powered by
                                        <a target="_blank" href="https://www.odoo.com?utm_source=db&amp;utm_medium=auth" style="color: #875A7B;">Odoo</a>
                                    </td>
                                </tr>-->
                            </table>
                        </td>
                    </tr>
                </table>
            </field>
        </record>
        <record id="email_reference_graduate" model="mail.template">
            <field name="name">Graduate Admissions nutech</field>
            <field name="email_from">ctx.get('email_sender')</field>
            <field name="subject">${ctx['student_name'] or ''} requesting for Reference for Graduate Admission</field>
            <field name="email_to">ctx.get('ref_email')</field><!-- Set in the code  -->
            <field name="model_id" ref="model_odoocms_application"/>
            <field name="auto_delete" eval="False"/><!-- TODO JEM  change this as we are testing -->
            <field name="body_html" type="html">
                <div>
                    % if ctx.get('ref_name'):
                    <p>Dear ${ctx['ref_name'] or ''} ,</p>
                    % else:
                    <p>Hello,</p>
                    % endif
                    <p>
                        Hope you are doing great.
                    </p>
                    <p>
                        You have been requested to be the reference of student for admission in nutech .
                    </p>

                    % if ctx.get('message'):
                    <p>${ctx['message']}</p>
                    % endif
                </div>
            </field>
        </record>
    </data>
