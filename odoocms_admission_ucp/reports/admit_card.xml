                                    </div>
                                    <div class="col-3"></div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3"></div>
                                    <div  style='text-align:left' class="col-3">Password For Test:</div>
                                    <div style='text-align:left' class="col-3">
                                        <t t-out="o.cbt_password"/>
                                        
                                    </div>
                                    <div class="col-3"></div>
                                </div>
