                            <div class="container text-center mt-2">
                                <div  class="row mb-2">
                                    <div class="col-3"></div>
                                    <div style='text-align:left' class="col-3">Test Date:</div>
                                    <div style='text-align:left' class="col-3">
                                        <t t-out="o.date"/>
                                    </div>
                                    <div class="col-3"></div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3"></div>
                                    <div style='text-align:left' class="col-3">Test Time:</div>
                                    <div style='text-align:left' class="col-3">
                                        <span>
                                            <!-- <t t-esc="o.slots.name"/>-->
                                            <t t-esc="'%02d:%02d' % (divmod(o.slots.time_from * 60, 60))"/>
                                            <t t-if="o.slots.time_from &lt; 12">AM</t>
                                            <t t-if="o.slots.time_from &gt;= 12">PM</t>
                                        -
                                            <t t-esc="'%02d:%02d' % (divmod(o.slots.time_to * 60, 60))"/>
                                            <t t-if="o.slots.time_to &lt; 12">AM</t>
                                            <t t-if="o.slots.time_to &gt;= 12">PM</t>
                                        </span>
                                    </div>
                                    <div class="col-3"></div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-3"></div>
                                    <div style='text-align:left' class="col-3">Test Venue:</div>
                                    <div style='text-align:left' class="col-3">
