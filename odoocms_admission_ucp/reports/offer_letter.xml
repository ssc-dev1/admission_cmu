<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="report_offer_letter">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="applicant">
                    <t t-call="web.basic_layout">
                        <div class="page">
                            <style>
                                .container{
                                                                <!-- text-align: justify; -->
                                <!-- text-justify: inter-word; -->
                                font-size: 15px;
                                font-family: Arial, Helvetica, sans-serif;
                                }
                            </style>
                            <div class="container">
                                <div class="row mb-3" id="header">
                                    <div class="col-3 m-0 p-0 mt-1">
                                        <!-- <div class="col-3 mt-0" style="text-align: center"> -->
                                        <img t-att-src='image_data_uri(request.env.company.logo)' style="width: 100px; height: 100px;position:absolute;top:-6px !important;left:10px !important;" alt="logo"/>
                                        <!-- </div> -->
                                    </div>
                                    <div class="col-8 m-0 p-0" style="text-align: center; margin-top:20px !important; margin-left: 0px;">
                                        <h5 class='mt-4'>
                                            <b>
                                                <t t-out="request.env.company.name"/>
                                            </b>
                                        </h5>
                                        <!-- <h5>
                                            <b>Your Journey Awaits</b>
                                        </h5> -->
                                    </div>
                                </div>

                                <!-- <hr/> -->
                                <br/>
                                <br/>
                                <div class="row mt-5" id="ref">
                                    <div class="col-4" style="text-align: left;">
                                        <strong>
                                            <span>Ref No:</span>
                                        </strong>
                                        <span>
                                            <strong>

                                                <t t-esc="applicant.applicant_id.application_no"/>
                                            </strong>
                                        </span>
                                    </div>
                                    <div class="col-8" style="text-align: right;">
                                        <strong>
                                            <span>Date:</span>
                                        </strong>
                                        <span>
                                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="row my-0">
                                    <div class="col-6">
                                        <!-- <strong>
                                            <span>Name:</span>
                                        </strong> -->
                                        <span>
                                            <t t-esc="applicant.applicant_id.name"/>
                                        </span>
                                    </div>
                                    <div class="col-6" style="text-align: right;">
                                        <strong>
                                            <span>Class Start Date:</span>
                                        </strong>
                                        <span>
                                            <t t-esc="applicant.applicant_id.register_id.class_commencement"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="row my-0" id="ref">
                                    <div class="col-4" style="text-align: left;">
                                        <span>
                                            <t t-esc="applicant.applicant_id.street"/>
,                                            <t t-esc="applicant.applicant_id.city"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="row my-0" id="ref">
                                    <div class="col-4" style="text-align: left;">
                                        <strong>
                                            <span>Ph:</span>
                                        </strong>
                                        <span>
                                            <t t-esc="applicant.applicant_id.mobile or applicant.applicant_id.phone"/>
                                        </span>
                                    </div>
                                </div>
                                <div class="row mt-3">
                                    <div class="col-12">
                                        <strong>
                                            <span>Subject:</span>
                                        </strong>
                                        <strong>
                                            <u>
                                                <t t-if="applicant.company_id.id == 5">
                                                    <span>
        Offer of Provisional Admission to
                                                        <span>
                                                            <t t-esc="applicant.program_id.discipline_id.name"/>
                                                        </span>
                                                        <span>
                                                            <t t-esc="applicant.program_id.name"/>
                                                        </span>
                                                    </span>
                                                </t>
                                                <t t-else="">
                                                    <span>
        Offer of Admission in
                                                        <span>
                                                            <t t-esc="applicant.program_id.discipline_id.name"/>
                                                        </span>
                                                        <span>
                                                            <t t-esc="applicant.program_id.name"/>
                                                        </span>
                                                    </span>
                                                </t>
                                            </u>
                                        </strong>
                                    </div>
                                </div>
                                <!-- <div class="row mt-3">
                                    <div class="col-12">
                                        <span style="font-family:Times New Roman,Times,serif, Arial, Helvetica, sans-serif;;font-size:12px;">
                                            It is my pleasure to inform you that you have been selected for admission in
                                            the
                                            <strong>
                                                <span>
                                                    <t t-esc="applicant.program_id.discipline_id.name"/>
                                                </span>
                                                <span><t t-esc="applicant.program_id.name"/>
                                                </span>
                                            </strong>
                                            program for the
                                            <span>
                                                <t t-esc="applicant.applicant_id.register_id.name"/>
                                            </span>
                                            semester which will commence from
                                            <span>
                                                <t t-esc="applicant.applicant_id.register_id.class_commencement"/>
                                            </span>
                                            . Heartiest
                                            Congratulations!
                                        </span>
                                    </div>
                                </div> -->
                                <div class="row mt-2">
                                    <div style='width:100%;text-align:justify;text-justify:inter-word;' class="col-12">
                                        <t t-raw="applicant.offer_letter"/>
                                        <!-- <t t-raw="applicant.applicant_id.register_id.offer_letter if applicant.applicant_id.register_id.offer_letter else applicant.program_id.description"/> -->
                                    </div>
                                </div>
                                <div class="footer" style='font-size:13px !important'>
                                    <div class="row" style="border: 1px solid black; height: 30px; background-color: #00294f; color: white;">
                                        <div class="col-3">
                                            <span>Phone:<t t-out="request.env.company.admission_phone"/>
                                            </span>
                                        </div>
                                        <div class="col-4" style="text-align: center; color: white;">
                                            <span>Email:<t t-out="request.env.company.admission_mail"/>
                                            </span>
                                        </div>
                                        <div class="col-5" style="text-align: center; color: white;">
                                            <span>
                                                <t t-out="request.env.company.street"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>