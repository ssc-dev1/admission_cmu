<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="applicant_entry_test_view_form" model="ir.ui.view">
        <field name="name">applicant_entry_test_view_form</field>
        <field name="model">applicant.entry.test</field>
        <field name="arch" type="xml">
            <form string="Applicant Entry Test">
                
                <sheet>
                    <widget name="web_ribbon" title="Applicant Entry Test" bg_color="bg-success"/>
                    <h3 style="text-align: center;">Applicant Entry Test</h3>
                    <group>
                        <group>
                            <field name="student_id" required="1"/>
                            <field name="email" />
                            <field name="mobile" />
                            <!--<field name="applicant" readonly="1"/>
                            <field name="reference_no" readonly="1"/>-->
                            <field name="room"/>
                            <field name="date"/>
                            <field name="paper_conducted" readonly='0' />
                            <field name="paper_status" readonly='0' />
                            <field name="attempts" readonly='1' />
                            <!-- <field name="cbt_id"/> -->
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="entry_test_schedule_details_id"/>
                            <field name="program_id"/>
                            <field name="slots"/>
                            <field name="passing_threshold"/>
                            <field name="entry_test_marks" attrs="{'invisible':[('slot_type','==' ,'interview')]}"/>
                            <field name="interview_total_marks" attrs="{'invisible':[('slot_type','==' ,'test')]}"/>
                            <field name="cbt_marks" attrs="{'invisible':[('slot_type','==' ,'interview')]}"/>
                            <field name="interview_marks" attrs="{'invisible':[('slot_type','==' ,'test')]}"/>
                            <!-- <field name="master_id"/> -->
                            <field name="slot_type"/>
                            <field name="cbt_password" invisible="0"/>

                        </group>
                    </group>
                    <notebook>
                        <page string="Test Groups">
                            <field name="applicant_line_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="obtained_marks"/>
                                    <field name="total_marks"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Description" invisible="1">
                            <group>
                                <field name="description" invisible="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="applicant_entry_test_room_view_tree" model="ir.ui.view">
        <field name="name">applicant_entry_test_view_tree</field>
        <field name="model">applicant.entry.test</field>
        <field name="arch" type="xml">
            <tree string="Applicant Entry Test">
               <header>
                    <button name="generate_retest" type="object" class="oe_highlight"
                            string="Generate Retest" groups="base.group_user"
                            help="Click to Send the Application for Verification purpose"
                           />
                 </header>
                <!--<field name="student_id"/>-->
                <field name="reference_no"/>
                <field name="applicant"/>
                <field name="email" optional="show" />
                <field name="mobile" optional="show"/>
                <field name="entry_test_schedule_details_id" optional="show"/>
                <field name="program_id" optional="show" />
                <field name="register_id" optional="show" />
                <field name="room" optional="show" />
                <field name="slots" optional="show" />
                <field name="date" optional="show" />
                <field name="slot_type" optional="show" />
                <field name="paper_conducted" optional="show"/>
                <field name="paper_status" optional="show"/>
                <field name="attempts" optional="show"/>
                               <!-- <field name="entry_test_marks"/> -->
            </tree>
        </field>
    </record>

    <record id="applicant_entry_test_view_search" model="ir.ui.view">
        <field name="name">applicant.entry.test.view.search</field>
        <field name="model">applicant.entry.test</field>
        <field name="arch" type="xml">
            <search>
                <field name="reference_no"/>
                <field name="applicant"/>
                <field name="entry_test_schedule_details_id"/>
                <field name="program_id"/>
                <field name="register_id"/>
                <field name="room"/>
                <field name="slots"/>
                <field name="date"/>
            </search>
        </field>
    </record>
    <record id="applicant_entry_test_action" model="ir.actions.act_window">
        <field name="name">Applicant Entry Test</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">applicant.entry.test</field>
        <field name="domain">[('slot_type', '=', 'test')]</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="applicant_interview_action" model="ir.actions.act_window">
        <field name="name">Applicant Entry Test</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">applicant.entry.test</field>
        <field name="domain">[('slot_type', '=', 'interview')]</field>
        <field name="context">{}</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
    <menuitem
            id="admission_entry_test_menu"
            name="CUST Entry Test/Interview"
            parent="odoocms_admission.menu_odoocms_admission_root"
            groups="odoocms_admission.group_admission_manager"
            sequence="30"/>

    <menuitem
            id="applicant_entry_test"
            name="Applicant Test Admit Card/Results"
            action="applicant_entry_test_action"
            sequence="260"
            parent="admission_entry_test_menu"
    />
    <menuitem
            id="applicant_interview"
            name="Applicant Interview/Results"
            action="applicant_interview_action"
            sequence="260"
            parent="admission_entry_test_menu"
    />
</odoo>
