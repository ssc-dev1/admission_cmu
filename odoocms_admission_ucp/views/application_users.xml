<odoo>

    <record id="view_odoocms_application_users_tree" model="ir.ui.view">
        <field name="name">odoocms.application.users.tree</field>
        <field name="model">odoocms.application</field>
        <field name="arch" type="xml">
            <tree string="Application Users">
                <!--<field name="register_id"/>-->
                <field name="application_no" string="User Name"/>
                <field name="password" string="Password"/>
                <field name="name"/>
                <field name="email" optional="hide"/>
                <field name="mobile" optional="hide"/>
                <field name="cnic" optional="show"/>
            </tree>
        </field>
    </record>




