    <record id="action_odoocms_application_users" model="ir.actions.act_window">
        <field name="name">Application Users</field>
        <field name="res_model">odoocms.application</field>
        <field name="type">ir.actions.act_window</field>
        <field name="domain">[('company_id','in', allowed_company_ids)]</field>
        <field name="view_mode">tree</field>    <!--  -->
       <!-- <field name="search_view_id" ref="view_odoocms_application_users_search"/>-->
