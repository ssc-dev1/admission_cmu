<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_odoocms_application_scholarship_tree" model="ir.ui.view">
        <field name="name">odoocms.application.scholarship.tree</field>
        <field name="model">odoocms.application</field>
        <field name="arch" type="xml">
            <tree string="Application Scholarships">
                <field name="register_id" invisible="1"/>
                <!--                <field name="entry_registration"/>-->
                <field name="application_no"/>
                <field name="name"/>
                <field name="gender"/>
                <field name="date_of_birth" optional="show"/>
                <field name="email" optional="hide"/>
                <field name="mobile" optional="hide"/>
                <field name="cnic" optional="show"/>
                <field name="fee_voucher_state" optional="show"/>
                <field name="prefered_program" optional="hide"/>
                <field name="degree"/>
                <!--                <field name="manual_score" optional="hide"/>-->
                <!--                <field name="merit_number" optional="hide"/>-->
                <!--                <field name="preference_cnt" optional="hide"/>-->
                <!--                <field name="first_preference" optional="hide"/>-->
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_odoocms_application_scholarship_form" model="ir.ui.view">
        <field name="name">odoocms.application.form</field>
        <field name="model">odoocms.application</field>
        <field name="arch" type="xml">
            <form string="Applicant Scholarship">
                <header>
                            <field name="state" widget="statusbar"/>
                        </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                                                <button class="oe_stat_button" name="action_view_documents" type="object" icon="fa-list-ol">
                                                    <field string="Documents" name="doc_count" widget="statinfo"/>
                                                </button>

                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <field name="image" widget='image' class="oe_avatar"/>

                    <div class="oe_title">
                        <h3>
                            <field name="application_no"/>
                        </h3>
                        <!--<label for="first_name" class="oe_edit_only" string="Candidate Name"/>-->
                        <h2>
                            <table>
                                <tr>
                                    <td style="padding-right:10px;">
                                        <field style="width:inherit;" name="name" required="1"
                                               placeholder="Name"/>
                                    </td>
                                  <!--  <td style="padding-right:10px;">
                                        <field style="width:inherit;" name="last_name" placeholder="Last Name"/>
                                    </td>
                                    <td style="padding-right:10px;">
                                        <field style="width:inherit;" name="middle_name" placeholder="Middle Name"/>
                                    </td>-->
                                </tr>
                            </table>
                        </h2>
                    </div>
                    <separator/>

                    <group name='academic_details' string="Admission Details">
                        <group>
                            <!--<field name="register_id"/>-->
                            <field name="academic_session_id" options="{'no_create': True, 'no_open': True , 'no_quick_create': True, 'no_create_edit' : True}"/>
                            <field name="user_id" options="{'no_create': True, 'no_open': True , 'no_quick_create': True, 'no_create_edit' : True}"/>
                            <!--                            <field name="student_id" readonly="1"/>-->
                        </group>
                        <group>
                            <!--<field name="entry_registration"/>-->
                            <field name="applicant_type" options="{'no_create': True, 'no_open': True , 'no_quick_create': True, 'no_create_edit' : True}"/>
                            <!--<field name="application_date"/>-->
                            <!--<field name="degree"/>-->
                            <field name="prefered_program"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="academic_info_page" string="Academic Details">
                            <field name="applicant_academic_ids">
                                <tree decoration-success="doc_state == 'yes'"  string="Academic Details">
                                    <field name="roll_no"/>
                                    <field name="sec_year_roll_no"/>
                                    <field name="degree_name"/>
                                    <field name="degree_level_id"/>
                                    <field name="board"/>
                                    <field name="institute"/>
                                    <field name="group_specialization"/>
                                    <field name="total_marks"/>
                                    <field name="obt_marks"/>
                                    <field name="obtained_cgpa"/>
                                    <field name="percentage"/>
                                    <field name="year"/>
                                    <field name="attachment"/>
                                    <field name="doc_state"/>
                                    <field name="result_status"/>
                                </tree>
                            </field>
                        </page>






                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>

            </form>
        </field>
    </record>

  <!--  <record id="view_odoocms_application_graph" model="ir.ui.view">
        <field name="name">odoocms.application.graph</field>
        <field name="model">odoocms.application</field>
        <field name="arch" type="xml">
            <graph string="Application">
                <field name="application_date"/>
                <field name="register_id"/>
            </graph>
        </field>
    </record>-->



    <record id="view_odoocms_application_sholarship_search" model="ir.ui.view">
        <field name="name">Application Scholarship</field>
        <field name="model">odoocms.application</field>
        <field name="arch" type="xml">
            <search string="Search Application">
                <field name="application_no"/>
                <field name="name"/>
                <field name="cnic"/>
                <field name="email"/>
                <field name="entry_registration"/>
                <field name="gender"/>
                <field name="religion_id"/>

                <!-- <filter string="New Application" name="new_application"
                        domain="[('register_id.state','=','application')]"/> -->
                <filter string="Done" name="done" domain="[('state','=','done')]"/>
               <!-- <filter string="In Merit" name="merit" domain="[('state','in',('approve','open'))]"/>-->
                <filter string="Rejected" name="rejected" domain="[('state','=','reject')]"/>
                <group expand='0' string='Group by...'>
                    <filter name="academic_session_id" string='Academic Session' icon="fa-user" domain="[]"
                            context="{'group_by' : 'academic_session_id'}"/>
                    <filter name="gender" string='Gender' icon="fa-genderless" domain="[]"
                            context="{'group_by' : 'gender'}"/>
                    <filter name="religion_id" string='Religion' icon="fa-pencil-square-o" domain="[]"
                            context="{'group_by' : 'religion_id'}"/>
                    <filter name="state" string='Status' icon="fa-pencil-square-o" domain="[]"
                            context="{'group_by' : 'state'}"/>
                    <!--<filter name="degree" string='Last Degree' icon="fa-pencil-square-o" domain="[]"
                            context="{'group_by' : 'degree'}"/>-->
                </group>
            </search>
        </field>
    </record>

     <record id="action_odoocms_application_scholarship" model="ir.actions.act_window">
        <field name="name">Application Scholarship</field>
        <field name="res_model">odoocms.application</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>    <!--  -->
         <field name="view_ids" eval="[(5, 0, 0),
    (0, 0, {'view_mode': 'tree', 'view_id': ref('view_odoocms_application_scholarship_tree')}),
    (0, 0, {'view_mode': 'form', 'view_id': ref('view_odoocms_application_scholarship_form')})]"/>
        <field name="search_view_id" ref="view_odoocms_application_sholarship_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create the First Application Scholarship here.
            </p>
        </field>
    </record>





