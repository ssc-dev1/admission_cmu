<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_odoocms_scholarship_policy_copy_wiz_form" model="ir.ui.view">
            <field name="name">odoocms_scholarship_policy_copy_wiz_view</field>
            <field name="model">odoocms.scholarship.policy.copy.wiz</field>
            <field name="arch" type="xml">
                <form string="Program Term Scholarship Copy">
                    <group>
                        <group>
                            <field name="policy_id" required="1" options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                            <field name="scholarship_ids_domain" invisible="1"/>
                            <field name="scholarship_id" required="1" domain="scholarship_ids_domain" options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        </group>
                        <group>
                            <field name="program_id" required="1" options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        </group>
                    </group>
                    <group string="Copy To Programs">
                        <field name="program_ids" required="1" nolabel="1" options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                    </group>
                    <footer>
                        <button name="action_scholarship_policy_copy" string="Copy Policy" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_odoocms_scholarship_policy_copy_wiz" model="ir.actions.act_window">
            <field name="name">Copy Scholarship Policy</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">odoocms.scholarship.policy.copy.wiz</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="odoocms_fee_ext.model_odoocms_scholarship_continue_policy"/>
            <field name="binding_view_types">list,form</field>
            <field name="groups_id" eval="[(4, ref('odoocms_fee.group_fee_manager'))]"/>
        </record>

    </data>
</odoo>
