<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_student_scholarship_eligibility_add_remove_wiz_form" model="ir.ui.view">
            <field name="name">student_scholarship_eligibility_add_remove_wiz_view</field>
            <field name="model">student.scholarship.eligibility.add.remove.wiz</field>
            <field name="arch" type="xml">
                <form string="Additional/Deletion of Scholarship Eligibility">
                    <group>
                        <group>
                            <field name="student_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="term_id" required="1" options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                            <field name="remove_scholarship_lines_domain" invisible="1"/>
                        </group>
                    </group>

                    <group string="Remove Scholarship">
                        <field name="remove_scholarship_lines" nolabel="1" domain="remove_scholarship_lines_domain" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}">
                            <tree>
                                <field name="scholarship_id"/>
                                <field name="scholarship_value"/>
                            </tree>
                        </field>
                    </group>

                    <group string="Add Scholarship">
                        <field name="add_scholarship_lines" nolabel="1">
                            <tree editable="top">
                                <field name="add_scholarship_lines_domain" invisible="1"/>
                                <field name="scholarship_id" domain="add_scholarship_lines_domain" required="1" options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                                <field name="scholarship_value" required="1"/>
                            </tree>
                            <form>
                                <group>
                                    <group>
                                        <field name="scholarship_id"
                                               required="1" options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                                        <field name="scholarship_value" required="1"/>
                                    </group>
                                    <group>
                                    </group>
                                </group>
                            </form>
                        </field>
                    </group>

                    <footer>
                        <button name="action_check_eligibility_adjustment" string="Done" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_student_scholarship_eligibility_add_remove_wiz" model="ir.actions.act_window">
            <field name="name">Add/Remove Scholarship</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">student.scholarship.eligibility.add.remove.wiz</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="odoocms.model_odoocms_student"/>
            <field name="binding_view_types">list,form</field>
            <field name="groups_id" eval="[(4, ref('odoocms_fee.group_fee_manager'))]"/>
        </record>

    </data>
</odoo>
