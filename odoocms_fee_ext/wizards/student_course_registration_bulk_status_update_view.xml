<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_student_course_registration_bulk_status_update_form" model="ir.ui.view">
            <field name="name">student.course.registration.bulk.status.update.view</field>
            <field name="model">student.course.registration.bulk.status.update</field>
            <field name="arch" type="xml">
                <form string="Student Course Registration Bulk Status Update">
                    <group>
                        <group>
                            <field name="status" required="1"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Students" name="student_ids">
                            <field name="student_ids"/>
                        </page>
                    </notebook>
                    <footer>
                        <button name="action_update_registration_status" string="Update Registration Status" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="act_student_course_registration_bulk_status_update" model="ir.actions.act_window">
            <field name="name">Bulk Student Course Registration Status</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">student.course.registration.bulk.status.update</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="odoocms.model_odoocms_student"/>
            <field name="binding_view_types">list,form</field>
            <field name="groups_id" eval="[(4, ref('odoocms_fee.group_fee_manager'))]"/>
        </record>

    </data>
</odoo>
