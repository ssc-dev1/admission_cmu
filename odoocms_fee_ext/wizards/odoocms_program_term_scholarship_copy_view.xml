<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_odoocms_program_term_scholarship_copy_wiz_form" model="ir.ui.view">
            <field name="name">odoocms_program_term_scholarship_copy_wiz_view</field>
            <field name="model">odoocms.program.term.scholarship.copy.wiz</field>
            <field name="arch" type="xml">
                <form string="Program Term Scholarship Copy">
                    <group>
                        <group>
                            <field name="copy_to_term" required="1" options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Scholarship" name="prev_scholarship_ids">
                            <field name="prev_scholarship_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="term_id"/>
                                    <field name="program_id"/>
                                    <field name="scholarship_ids" widget="many2many_tags" optional="hide"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button name="action_copy_scholarships" string="Copy Scholarship" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_odoocms_program_term_scholarship_copy" model="ir.actions.act_window">
            <field name="name">Copy Scholarship</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">odoocms.program.term.scholarship.copy.wiz</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="odoocms_fee_ext.model_odoocms_program_term_scholarship"/>
            <field name="binding_view_types">list,form</field>
            <field name="groups_id" eval="[(4, ref('odoocms_fee.group_fee_manager'))]"/>
        </record>

    </data>
</odoo>
