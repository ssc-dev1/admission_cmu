<odoo>

    <template id="odoocms_fee_ext.odoocms_fee_defaulter_student_report_document">
        <t t-call="web.basic_layout">
            <div class="page" style='font-size: 13px; padding:10px; margin:5em; font-family: "Times New Roman", Times, serif;"'>
                <div class="row">
                    <div class="col col-12" style="font-size:18px; font-weight:bold; text-align:center;">
                        <span>Fee Defaulter/Withdraw Report</span>
                    </div>
                </div>

                <div class="col-xs-12" style="margin:auto">
                    <table class="table">
                    </table>
                </div>


                <table class="table table-bordered" style="width:100%;">
                    <tr>
                        <th style="text-align:center;">Sr#</th>
                        <th style="text-align:center;">Registration No.</th>
                        <th style="text-align:center;">Name</th>
                        <th style="text-align:center;">Faculty</th>
                        <th style="text-align:center;">Program</th>
                        <th style="text-align:center;">Amount</th>
                        <th style="text-align:center;">Fine Amount</th>
                        <th style="text-align:center;">Registration Status</th>
                    </tr>
                    <t t-foreach="o.lines" t-as="l">
                        <tr style="font-size:12px;">
                            <td style="text-align:left;">
                                <span t-esc="l_index + 1"/>
                            </td>
                            <td style="text-align:left;">
                                <span t-esc="l.student_code"/>
                            </td>
                            <td style="text-align:left;">
                                <span t-esc="l.student_name"/>
                            </td>
                            <td style="text-align:left;">
                                <span t-esc="l.institute_name"/>
                            </td>
                            <td style="text-align:left;">
                                <span t-esc="l.program_name"/>
                            </td>
                            <td style="text-align:right;">
                                <span t-esc="l.amount"/>
                            </td>
                            <td style="text-align:right;">
                                <span t-esc="l.fine_amount"/>
                            </td>
                            <td style="text-align:right;">
                                <span t-esc="l.registration_status"/>
                            </td>
                        </tr>
                    </t>
                </table>
                <br/>
                <br/>


                <table class='table table-condensed' width='100%'>
                    <tbody>
                        <tr>
                            <td>
                                <span style="font-weight:bold;font-size:11px;">Print Date:</span>
                            </td>
                            <td style="font-weight:bold;font-size:11px;">
                                <span style="padding-left:5px;" t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y %H:%M')"/>
                            </td>
                            <td style="font-weight:bold;font-size:11px;">
                                <span>Print User:</span>
                            </td>
                            <td style="font-weight:bold;font-size:11px;">
                                <span style="padding-left:5px;" t-esc="request.env.user.name"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </t>
    </template>

    <template id="odoocms_fee_ext.odoocms_fee_defaulter_student_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="odoocms_fee_ext.odoocms_fee_defaulter_student_report_document"/>
            </t>
        </t>
    </template>

</odoo>
