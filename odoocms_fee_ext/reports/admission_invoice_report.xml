<!--                            </td>-->
<!--                        </tr>-->

                        <!--***** Semester Gross Fee *****-->
<!--                        <tr>-->
<!--                            <td style="font-size:10px;text-align:left;width:70%;border:1px solid black;">-->
<!--                                <span>Total Payable Semester Fee</span>-->
