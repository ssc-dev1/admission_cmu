<!--                                    <span t-esc="'{0:,.0f}'.format(inv.sudo().get_installment_amount())"/>-->
<!--                                </t>-->
<!--                            </td>-->
<!--                        </tr>-->

                        <!--***** Remaining Fee *****-->
                        <tr style="border:1px solid black;">
                            <td style="font-size:10px;text-align:left;width:70%;border:1px solid black;">
                                <span>Remaining Fee (
                                    <span t-if="doc.invoice_remaining_amount > 0" t-esc="doc.invoice_remaining_due_date"/>
                                    )
                                </span>
<!--                                <span>Remaining Fee (with due date)</span>-->
                            </td>
                            <td style="border:1px solid black;">
                                <t t-if="doc.invoice_remaining_amount > 0">
                                    <span t-esc="'{0:,.0f}'.format(doc.invoice_remaining_amount)"/>
                                </t>
<!--                                <span t-esc="'{0:,.0f}'.format(inv.sudo().get_challan_remaining_amount())"/>-->
                            </td>
                        </tr>

                        <!--***** Payable Fine *****-->
