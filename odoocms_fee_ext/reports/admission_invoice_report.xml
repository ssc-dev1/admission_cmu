                                    <span t-esc="'{0:,.0f}'.format(inv.scholarship_continue_policy_line_id.value)"/>%
                                </t>
                                <t t-elif="inv.waiver_ids and inv.waiver_ids[0].line_ids">
                                    <span t-esc="'{0:,.0f}'.format(inv.waiver_ids[0].line_ids[0].percentage)"/>%
                                </t>

                            </td>
                        </tr>

                        <!--***** Scholarship Amount *****-->
                        <tr>
                            <td style="font-size:10px;text-align:left;width:70%;border:1px solid black;">
