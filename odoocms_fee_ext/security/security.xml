<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="seq_odoocms_student_scholarship_eligibility" model="ir.sequence">
            <field name="name">Student Scholarship Eligibility</field>
            <field name="code">odoocms.student.scholarship.eligibility</field>
            <field name="prefix"/>
            <field name="padding">5</field>
        </record>

        <!--***** Unregister Fee Payment Group *****-->
        <record id="group_unregister_fee_payment" model="res.groups">
            <field name="name">Unregister Fee Payment</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!--***** Other Fine Discount Group *****-->
        <record id="group_other_fine_discount_user" model="res.groups">
            <field name="name">Other Fine Discount User.</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

        <!--***** Finance Clearance Group *****-->
        <record id="group_odoo_finance_clearance_user" model="res.groups">
            <field name="name">Finance Clearance User.</field>
            <field name="category_id" ref="base.module_category_hidden"/>
        </record>

