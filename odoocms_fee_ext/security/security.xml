            <field name="name">Student Scholarship Eligibility multi-company</field>
            <field name="model_id" ref="model_odoocms_student_scholarship_eligibility"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

