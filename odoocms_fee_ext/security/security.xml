        </record>

        <record model="ir.rule" id="odoocms_student_special_scholarship_comp_rule">
            <field name="name">Student Special Scholarship multi-company</field>
            <field name="model_id" ref="model_odoocms_student_special_scholarship"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>




