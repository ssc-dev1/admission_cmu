<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_odoocms_student_fine_discounts_form" model="ir.ui.view">
            <field name="name">odoocms.student.fine.discounts.form.view</field>
            <field name="model">odoocms.student.fine.discounts</field>
            <field name="arch" type="xml">
                <form string="Student Fine Discount">
                    <header>
                        <button name="action_approve_fine_discounts" type="object" states="draft" class="oe_highlight" string="Approved"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="student_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_create':True}"/>
                                <field name="term_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"
                                       options="{'no_quick_create':True,'no_create_edit':True,'no_create':True}"/>
                                <field name="fine_discount_type" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                            <group>
                                <field name="total_fine" readonly="1"/>
                                <field name="total_discount" readonly="1"/>
                                <field name="due_amount" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Fine Detail">
                                <field name="lines" colspan="4" nolabel="1" attrs="{'readonly':[('state','!=','draft')]}">
                                    <tree editable="top" delete="false" create="false" limit="150" decoration-success="apply_discount"
                                          widget="section_and_note_one2many">
                                        <field name="sequence" widget="handle"/>
                                        <field name="class_id" readonly="1" attrs="{'column_invisible': [('parent.fine_discount_type', '=', 'other_fine')]}"/>
                                        <field name="other_fine_type"/>
                                        <field name="date_class" string="Date" readonly="1"/>
                                        <field name="fine" readonly="1" sum="sum_fine"/>
                                        <field name="discount" sum="sum_discount" attrs="{'readonly':[('apply_discount','=',False)]}"/>
                                        <field name="due_amount" sum="sum_discount"/>
                                        <field name="apply_discount"/>
                                        <field name="remarks" attrs="{'readonly':[('apply_discount','=',False)]}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_odoocms_student_fine_discounts_tree" model="ir.ui.view">
            <field name="name">odoocms.student.fine.discounts.tree.view</field>
            <field name="model">odoocms.student.fine.discounts</field>
            <field name="arch" type="xml">
                <tree string="Fine Discount" decoration-success="state=='approved'" decoration-primary="state=='draft'" decoration-danger="state=='cancel'">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="term_id"/>
                    <field name="date"/>
                    <field name="total_fine"/>
                    <field name="total_discount"/>
                    <field name="due_amount"/>
                    <field name="state" widget="badge" decoration-success="state=='approved'" decoration-primary="state=='draft'" decoration-danger="state=='cancel'"/>
                    <field name="create_uid" string="Created By" optional="show" widget="many2one_avatar_user"/>
                </tree>
            </field>
        </record>

        <record id="view_odoocms_student_fine_discounts_search" model="ir.ui.view">
            <field name="name">odoocms.student.fine.discounts.search.view</field>
            <field name="model">odoocms.student.fine.discounts</field>
            <field name="arch" type="xml">
                <search string="Fine Discount">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="term_id"/>
                    <newline/>
                    <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                    <filter name="approved" string="Approved" domain="[('state', '=', 'approved')]"/>
                    <filter name="cancel" string="Canclled" domain="[('state', '=','cancel')]"/>
                    <separator/>
                    <filter name="date_filter" string="Date" date="date"/>
                    <group expand="0" string="Group By...">
                        <filter string="Student" name="group_by_student" domain="[]" context="{'group_by':'student_id'}"/>
                        <filter string="Term" name="group_by_term" domain="[]" context="{'group_by':'term_id'}"/>
                        <filter string="Type" name="group_by_fine_discount_type" domain="[]" context="{'group_by':'fine_discount_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_odoocms_student_fine_discounts" model="ir.actions.act_window">
            <field name="name">Student Fine Discounts</field>
            <field name="res_model">odoocms.student.fine.discounts</field>
            <field name="context">{}</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem
                id="menu_student_fine_discounts"
                action="action_odoocms_student_fine_discounts"
                name="Fine Discounts"
                parent="odoocms_fee.menu_student_fee_request_root"
                sequence="660"/>
    </data>
</odoo>

