<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record id="odoocms_student_attendance_fine_tree" model="ir.ui.view">
            <field name="name">odoocms.student.attendance.fine.tree</field>
            <field name="model">odoocms.student.attendance.fine</field>
            <field name="arch" type="xml">
                <tree string="Attendance Fine" edit="false">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="institute_id"/>
                    <field name="program_id"/>
                    <field name="term_id"/>
                    <field name="date"/>
                    <field name="fine"/>
                    <field name="discount"/>
                    <field name="net_amount"/>
                    <field name="move_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="odoocms_student_attendance_fine_form" model="ir.ui.view">
            <field name="name">odoocms.student.attendance.fine.form</field>
            <field name="model">odoocms.student.attendance.fine</field>
            <field name="arch" type="xml">
                <form string="attendance Fine" create="false" delete="false">
<!--                    <header>-->
<!--                        <button name="action_cancel_invoice_group" string="Cancel" type="object" class="oe_highlight" states="draft"/>-->
<!--                        <field name="state" widget="statusbar"/>-->
<!--                    </header>-->
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="student_id" readonly="1"/>
                                <field name="institute_id" readonly="1"/>
                                <field name="program_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="date" readonly="1"/>
                                <field name="term_id" readonly="1"/>
                                <field name="fine" readonly="1"/>
                                <field name="discount"/>
                                <field name="net_amount" readonly="1"/>
                                <field name="move_id" readonly="1"/>
                            </group>
                        </group>
<!--                        <field name="description"/>-->

                        <notebook colspan="4">
                            <page string="Detail">
                                <field name="line_ids" nolabel="1">
                                    <tree string="Fine Detail" edit="false" create="false" delete="false">
                                        <field name="date"/>
                                        <field name="type"/>
                                        <field name="amount" string="Amount" sum="sum_amount"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="odoocms_student_attendance_fine_action" model="ir.actions.act_window">
            <field name="name">Attendance Fine</field>
            <field name="res_model">odoocms.student.attendance.fine</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                id="odoocms_student_attendance_fine_menu"
                parent="odoocms_fee.menu_student_fee_request_root"
                name="Attendance Fine"
                action="odoocms_student_attendance_fine_action"
                groups="odoocms_fee.group_fee_coordinator,odoocms_fee.group_fee_manager"
                sequence="660"/>
    </data>
</odoo>
