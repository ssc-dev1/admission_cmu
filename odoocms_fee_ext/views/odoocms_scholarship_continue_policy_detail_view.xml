<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_odoocms_scholarship_continue_policy_line_form" model="ir.ui.view">
            <field name="name">odoocms.scholarship.continue.policy.line.form.view</field>
            <field name="model">odoocms.scholarship.continue.policy.line</field>
            <field name="arch" type="xml">
                <form string="Scholarship Continue Policy Detail" delete="false" create="false" edit="false">
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="scholarship_id" readonly="1"/>
                                <field name="credit_hours" readonly="1"/>
                                <field name="course_count" readonly="1"/>
                                <field name="cgpa" readonly="1"/>
                                <field name="sgpa" readonly="1"/>
                                <field name="current_credit_hours" readonly="1"/>
                                <field name="current_course_count" readonly="1"/>
                            </group>
                            <group>
                                <field name="program_id" readonly="1"/>
                                <field name="policy_id" readonly="1"/>
                                <field name="value" readonly="1"/>
                                <field name="merge_policy_line" readonly="1"/>
                            </group>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_odoocms_scholarship_continue_policy_line_tree" model="ir.ui.view">
            <field name="name">odoocms.scholarship.continue.policy.line.tree.view</field>
            <field name="model">odoocms.scholarship.continue.policy.line</field>
            <field name="arch" type="xml">
                <tree string="Scholarship Continue Policy Detail" delete="false" decoration-info="state=='draft'" decoration-success="state=='lock'">
                    <field name="sequence" widget="handle"/>
                    <field name="scholarship_id"/>
                    <field name="credit_hours"/>
                    <field name="course_count"/>
                    <field name="cgpa"/>
                    <field name="sgpa"/>
                    <field name="current_credit_hours"/>
                    <field name="current_course_count"/>
                    <field name="value"/>
                    <field name="program_id" optional="hide"/>
                    <field name="program_code" optional="show"/>
                    <field name="program_name" optional="hide"/>
                    <field name="create_uid" string="Created By" optional="show" widget="many2one_avatar_user"/>
                    <field name="state" widget="badge" decoration-info="state=='draft'" decoration-success="state=='lock'"/>
                </tree>
            </field>
        </record>


        <record id="view_odoocms_scholarship_continue_policy_line_search" model="ir.ui.view">
            <field name="name">odoocms.scholarship.continue.policy.line.search</field>
            <field name="model">odoocms.scholarship.continue.policy.line</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Scholarship Continue Policy Detail">
                    <field name="scholarship_id"/>
                    <field name="credit_hours"/>
                    <field name="cgpa"/>
                    <field name="value"/>
                    <field name="program_id"/>
                    <field name="program_code"/>
                    <field name="program_name"/>
                    <separator/>
                    <group expand="0" string="Group By...">
                        <filter string="Scholarship" name="group_by_scholarship" domain="[]" context="{'group_by':'scholarship_id'}"/>
                        <filter string="Program" name="group_by_program" domain="[]" context="{'group_by':'program_id'}"/>
                        <filter string="Status" name="group_by_status" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="action_odoocms_scholarship_continue_policy_line" model="ir.actions.act_window">
            <field name="name">Scholarship Continue Policy Detail</field>
            <field name="res_model">odoocms.scholarship.continue.policy.line</field>
            <field name="context">{}</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                id="menu_odoocms_scholarship_continue_policy_line"
                name="Scholarship Continue Policy Detail"
                sequence='11'
                parent="menu_student_fee_scholarship_main"
                action="action_odoocms_scholarship_continue_policy_line"
                groups="odoocms_fee.group_fee_manager"
        />

    </data>
</odoo>