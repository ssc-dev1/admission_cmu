<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="ucp_welcome_letter_view_form" model="ir.ui.view">
        <field name="name">ucp_welcome_letter_view_form</field>
        <field name="model">ucp.welcome.letter</field>
        <field name="arch" type="xml">
            <form string="UCP Welcome Letter">
                <header>
                    <button name="send_mail" attrs="{'invisible':[('is_blacklisted', '=', True)]}" type="object" string="Send Mail" class="btn btn-primary"/>
                    <button name="action_print_welcome_letter" string="Print" type="object" class="btn btn-secondary"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Welcome Letter" bg_color="bg-success"/>
                    <widget name="web_ribbon" title="BlackList" attrs="{'invisible':[('is_blacklisted', '=', False)]}" bg_color="bg-danger"/>
                    <h3 style="text-align: center;">Welcome Letter</h3>
                    
                    <group>
                        <group>
                            <field name="applicant_id" required="1"/>
                            <field name="reference_no" invisible="1"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="is_blacklisted"/>
                            <field name="program_id"/>
                        </group>
                    </group>
                    
                    <separator string="Letter Preview"/>
                    <field name="letter_body" readonly="1" nolabel="1" widget="html" class="oe_form_html_full_width"/>
                    
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="ucp_welcome_letter_view_tree" model="ir.ui.view">
        <field name="name">ucp_welcome_letter_view_tree</field>
        <field name="model">ucp.welcome.letter</field>
        <field name="arch" type="xml">
            <tree string="UCP Welcome Letter" decoration-warning="is_blacklisted">
                <field name="is_blacklisted" />
                <field name="applicant_id" required="1"/>
                <field name="reference_no"/>
                <field name="program_id"/>
            </tree>
        </field>
    </record>

    <record id="ucp_welcome_letter_search" model="ir.ui.view">
        <field name="name">ucp.welcome.letter.search</field>
        <field name="model">ucp.welcome.letter</field>
        <field name="arch" type="xml">
            <search>
                <field name="reference_no"/>
                <field name="applicant_id" required="1"/>
                <field name="is_blacklisted" />
                <field name="program_id"/>
            </search>
        </field>
    </record>

    <record id="ucp_welcome_letter_action" model="ir.actions.act_window">
        <field name="name">Welcome Letter</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ucp.welcome.letter</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('ucp_welcome_letter_view_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('ucp_welcome_letter_view_form')})]"
        />
    </record>

    <menuitem
            id="ucp_welcome_letter_menu"
            name="Welcome Letter"
            action="ucp_welcome_letter_action"
            sequence="20"
            parent="odoocms_admission_ucp.ucp_offer_menu"
    />
</odoo>