<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Company Form: Setup tab with challan config + portal signup toggle -->
        <record id="view_company_form_challan_config" model="ir.ui.view">
            <field name="name">res.company.form.challan.config</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Setup" name="challan_config">
                        <group string="Challan Generation Checks" name="challan_checks">
                            <field name="challan_check_merit_list"/>
                            <field name="challan_check_document_verification"/>
                            <field name="challan_check_scholarship"/>
                            <field name="challan_check_offer_letter"/>
                        </group>

                        <group string="Admission Portal" name="admission_portal_config">
                            <field name="allow_signups"/>
                        </group>
                        <group string="Need Based Scholarship" name="Need based Checkbox">
                         <!-- Checkbox to show/hide Need Based Scholarship on portal -->
                            <field name="visible_need_based_scholarship"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
