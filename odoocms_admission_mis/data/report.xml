<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <report
            id="action_report_welcome_letter"
            model="ucp.welcome.letter"
            string="Welcome Letter"
            report_type="qweb-pdf"
            name="odoocms_admission_mis.report_welcome_letter_template"
            file="odoocms_admission_mis.report_welcome_letter_template"
            attachment_use="False"
        />

        <template id="report_welcome_letter_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="applicant">
                    <t t-call="web.basic_layout">
                        <div class="page">
                            <div class="container">
                                <t t-out="applicant.letter_body"/>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>