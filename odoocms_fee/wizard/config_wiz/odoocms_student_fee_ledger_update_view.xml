<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_odoocms_student_fee_ledger_update_form" model="ir.ui.view">
            <field name="name">odoocms.student.fee.ledger.update.view</field>
            <field name="model">odoocms.student.fee.ledger.update</field>
            <field name="arch" type="xml">
                <form string="Studnet Fee Ledger Update">
                    <group>
                        <group>
                            <field name="student_id" readonly="1"/>
                            <field name="ledger_id" options="{'no_quick_create':True,'no_create_edit':True,'no_create':True, 'no_open': True}"
                                   domain="[('student_id','=',student_id)]" required="1"/>
                        </group>
                        <group>
                        </group>

                        <group>
                            <field name="old_debit" readonly="1" attrs="{'invisible':[('old_credit','>',0)]}"/>
                            <field name="old_credit" readonly="1" attrs="{'invisible':[('old_debit','>',0)]}"/>
                        </group>
                        <group>
                            <field name="new_debit" attrs="{'invisible':[('old_credit','>',0)],'required':[('old_debit','>',0)]}"/>
                            <field name="new_credit" attrs="{'invisible':[('old_debit','>',0)], 'required':[('old_credit','>',0)]}"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_update_student_ledger" string="Update Student Ledger" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="act_odoocms_student_fee_ledger_update" model="ir.actions.act_window">
            <field name="name">Student Fee Ledger Update</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">odoocms.student.fee.ledger.update</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="odoocms.model_odoocms_student"/>
            <field name="binding_view_types">list,form</field>
            <field name="groups_id" eval="[(4, ref('odoocms_fee.group_fee_super_user'))]"/>
        </record>

    </data>
</odoo>
