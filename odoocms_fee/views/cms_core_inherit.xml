<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_odoocms_campus_form_inherit_fee" model="ir.ui.view">
            <field name="name">odoocms.campus.form.inherit.fee</field>
            <field name="model">odoocms.campus</field>
            <field name="inherit_id" ref="odoocms_base.view_odoocms_campus_form"/>
            <field name="arch" type="xml">
                <field name="code" position="after">
                    <field name="analytic_tag_id"/>
                </field>
                <xpath expr="//notebook" position="inside">
                    <page string="Fee">
                        <group>
                            <field name="fee_instructions" widget="html" options="{'codeview': true}"/>
                        </group>
                        <group>
                            <field name="fee_instructions_admission" widget="html" options="{'codeview': true}"/>
                        </group>
                        <group>
                            <field name="fee_instructions_short" widget="html" options="{'codeview': true}"/>
                        </group>
                        <group>
                            <group>
                                <field name="fee_banks"/>
                            </group>
                            <group>
                                <field name="late_fee_per_day_fine"/>
                                <field name="late_fee_max_fine"/>
                            </group>
                            <group>
                                <field name="fee_query_email"/>
                                <field name="fee_query_phone"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_odoocms_batch_tree_fee" model="ir.ui.view">
            <field name="name">odoocms.batch.tree.fee</field>
            <field name="model">odoocms.batch</field>
            <field name="inherit_id" ref="odoocms.view_odoocms_batch_tree"/>
            <field name="arch" type="xml">
                <field name="session_id" position="before">   <!-- groups="odoocms.group_cms_manager" -->
                    <field name="fee_structure_id"/>
                </field>
            </field>
        </record>

        <record id="view_odoocms_batch_form_inherit_fee" model="ir.ui.view">
            <field name="name">odoocms.batch.form.inherit.fee</field>
            <field name="model">odoocms.batch</field>
            <field name="inherit_id" ref="odoocms.view_odoocms_batch_form"/>
            <field name="arch" type="xml">
                <group name="out" position="after">
                    <group name="add_new_grp">
                        <field name="late_fee_per_day_fine"/>
                        <field name="late_fee_max_fine"/>
                    </group>
                </group>
            </field>
        </record>

        <record id="view_odoocms_fee_category_tree" model="ir.ui.view">
            <field name="name">account.payment.term.term.tree</field>
            <field name="model">account.payment.term.term</field>
            <field name="arch" type="xml">
                <tree string="Payment Term - Count" editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="company_id"/>
                    <field name="payment_term_id"/>
                    <field name="term_id" domain="[('company_id','=',company_id)]"/>
                    <field name="allowed"/>
                    <field name="actual"/>
                </tree>
            </field>
        </record>

        <record id="action_account_payment_term_term" model="ir.actions.act_window">
            <field name="name">Payment Term - Count</field>
            <field name="res_model">account.payment.term.term</field>
            <field name="view_mode">tree</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem
                id="menu_account_payment_term_term"
                action="action_account_payment_term_term"
                parent="menu_student_fee_policy_payment"
                groups="odoocms_fee.group_fee_coordinator"
                sequence="30"/>

    </data>
</odoo>
