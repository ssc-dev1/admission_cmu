<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_odoocms_student_fee_refund_request_form" model="ir.ui.view">
            <field name="name">odoocms.fee.refund.request.form</field>
            <field name="model">odoocms.fee.refund.request</field>
            <field name="arch" type="xml">
                <form string="Fee Refund Requests">
                    <header>
                        <button name="action_approve_refund" string="Approve" type="object" class="oe_highlight" states="draft"/>
                        <button name="action_turn_to_draft" string="Turn To Draft" type="object" class="oe_highlight" states="approve"/>
                        <button name="action_refund_paid" string="Paid" type="object" class="oe_highlight" states="approve"/>
                        <button name="action_refund_cancel" string="Cancel" type="object" class="oe_highlight" states="draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approve,done,cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="student_id" required="True" options="{'no_create':True, 'limit': 10}"/>
                                <field name="session_id" options="{'no_create':True}"/>
                                <field name="career_id" options="{'no_create':True}"/>
                                <field name="term_id" options="{'no_create':True}"/>
                                <field name="batch_id" options="{'no_create':True}"/>
                            </group>
                            <group>
                                <field name="semester_id" options="{'no_create':True}"/>
                                <field name="institute_id" options="{'no_create':True}"/>
                                <field name="campus_id" options="{'no_create':True}"/>
                                <field name="discipline_id" options="{'no_create':True}"/>
                            </group>

                            <group>
                                <field name="date"/>
                                <field name="refund_type_domain" invisible="1"/>
                                <field name="refund_type" domain="refund_type_domain"
                                       options="{'no_create':True, 'limit': 10, 'no_open':True}"/>
                                <field name="total_amount"/>
                                <field name="total_refund_amount"/>
                                <field name="refund_invoice_id" readonly="1"/>
                                <!-- context="{'form_view_ref': 'odoocms_fee.odoocms_receipt_form'}"-->
                                <field name="student_ledger_id" readonly="1" attrs="{'invisible':[('state','!=','done')]}"/>
                            </group>
                            <group>
                                <field name="invoice_type" attrs="{'readonly':[('state','=','done')]}" required="1"/>
                                <field name="invoice_term_id" attrs="{'readonly':[('state','=','done')]}" required="1" options="{'no_create':True,'no_open':True}"/>
                                <field name="invoice_id" domain="[('student_id','=',student_id),('term_id','=',invoice_term_id),('payment_state','in',['in_payment','paid'])]"
                                       attrs="{'readonly':[('state','=','done')]}"
                                       required="1" options="{'no_create':True}"
                                       context="{'form_view_ref': 'odoocms_fee.odoocms_receipt_form'}"/>
                                <field name="reason_id" options="{'no_create':True, 'limit': 10}"
                                       attrs="{'readonly':[('state','=','done')]}"/>
                                <field name="refund_by" attrs="{'readonly':[('state','=','done')]}" required="1"/>
                                <field name="payment_journal_id" options="{'no_create':True}"
                                       attrs="{'required':[('state','=','approve'),('refund_by','!=','adjustment')], 'invisible':[('refund_by','=','adjustment')], 'readonly':[('state','=','done')]}"/>
                                <field name="payment_id" readonly="1" attrs="{'invisible':[('state','!=','done')]}"/>
                            </group>
                        </group>

                        <group>
                            <field name="description" colspan="4"/>
                        </group>

                        <notebook>
                            <page string="Refund Details">
                                <field name="refund_line_ids" nolabel="1">
                                    <tree string="Refunds" editable="bottom"
                                          decoration-primary="state=='draft'" decoration-info="state=='approve'" decoration-success="state == 'done'" decoration-danger="state=='cancel'">
                                        <field name="sequence" widget="handle"/>
                                        <field name="refund_id" invisible="1"/>
                                        <field name="invoice_id" invisible="1"/>
                                        <field name="refund_type_domain" invisible="1"/>
                                        <field name="refund_type" required="1"
                                               domain="refund_type_domain"
                                               options="{'no_create':True, 'limit': 10, 'no_open':True}"/>
                                        <field name="invoice_line_id" readonly="1"
                                               options="{'no_create':True, 'limit': 10, 'no_open':True}"
                                               domain="[('move_id','=',invoice_id),('credit','>',0)]"/>
                                        <field name="description" readonly="1"/>
                                        <field name="actual_amount" sum="sum_actual_amount" readonly="1"/>
                                        <field name="refund_amount" sum="sum_refund_amount" attrs="{'readonly':[('state','!=','draft')]}"/>
                                        <field name="state" readonly="1"/>
                                    </tree>
                                    <form>
                                        <header>
                                            <field name="state" widget="statusbar"/>
                                        </header>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="refund_type" required="1"/>
                                                    <field name="invoice_id"/>
                                                    <field name="invoice_line_id" readonly="1"/>
                                                </group>
                                                <group>
                                                    <field name="description"/>
                                                    <field name="actual_amount"/>
                                                    <field name="refund_amount"/>
                                                </group>
                                            </group>
                                            <group>
                                                <field name="remarks"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page name="other_info" string="Other Info">
                                <group>
                                    <group>
                                        <field name="student_payment_ledger_id" readonly="1"/>
                                    </group>
                                    <group>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_odoocms_student_fee_refund_request_tree" model="ir.ui.view">
            <field name="name">odoocms.fee.refund.request.tree</field>
            <field name="model">odoocms.fee.refund.request</field>
            <field name="arch" type="xml">
                <tree string="Fee Refund Requests" decoration-primary="state=='draft'" decoration-info="state=='approve'" decoration-success="state == 'done'" decoration-danger="state=='cancel'">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="session_id"/>
                    <field name="career_id"/>
                    <field name="term_id"/>
                    <field name="semester_id" optional="1"/>
                    <field name="institute_id" optional="1"/>
                    <field name="discipline_id" optional="1"/>
                    <field name="campus_id" optional="1"/>
                    <field name="date"/>
                    <field name="refund_type"/>
                    <field name="description" string="Description" optional="hide"/>
                    <field name="total_amount" sum="sum_total_amount"/>
                    <field name="total_refund_amount" sum="sum_total_refund_amount"/>
                    <field name="invoice_type" optional="show"/>
                    <field name="invoice_term_id" optional="show"/>
                    <field name="invoice_id" optional="show"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="view_odoocms_student_fee_refund_request_search" model="ir.ui.view">
            <field name="name">odoocms.fee.refund.request.search</field>
            <field name="model">odoocms.fee.refund.request</field>
            <field name="arch" type="xml">
                <search string="Fee Refund Requests">
                    <field name="student_id"/>
                    <field name="session_id"/>
                    <field name="career_id"/>
                    <field name="term_id"/>
                    <field name="semester_id"/>
                    <field name="institute_id"/>
                    <field name="discipline_id"/>
                    <field name="campus_id"/>
                    <field name="date"/>
                    <field name="description"/>

                    <field name="refund_type"/>

                    <field name="invoice_type"/>
                    <field name="invoice_term_id"/>
                    <field name="invoice_id"/>
                    <field name="state"/>

                    <filter name="draft" string="Submitted" domain="[('state', '=', 'draft')]"/>
                    <filter name="approve" string="Approve" domain="[('state', '=','approve')]"/>
                    <filter name="done" string="Done" domain="[('state', '=','Done')]"/>
                    <filter name="cancel" string="Cancel" domain="[('state', '=','Cancel')]"/>
                    <separator/>

                    <group expand="0" string="Group By...">
                        <separator/>
                        <filter name="group_by_session" string="Session" domain="[]" context="{'group_by':'session_id'}"/>
                        <filter name="group_career" string="Career" domain="[]" context="{'group_by':'career_id'}"/>
                        <filter name="group_term" string="Term" domain="[]" context="{'group_by':'term_id'}"/>
                        <filter name="group_semester" string="Semester" domain="[]" context="{'group_by':'semester_id'}"/>
                        <filter name="group_institute" string="Institute" domain="[]" context="{'group_by':'institute_id'}"/>
                        <separator/>
                        <filter string="Status" name="group_by_status" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Refund Type" name="group_by_refund_type" domain="[]" context="{'group_by':'refund_type'}"/>
                        <separator/>
                        <filter string="Invoice Type" name="group_by_invoice_type" domain="[]" context="{'group_by':'invoice_type'}"/>
                        <filter string="Invoice Term" name="group_by_invoice_term_id" domain="[]" context="{'group_by':'invoice_term_id'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="view_odoocms_student_fee_refund_request_pivot" model="ir.ui.view">
            <field name="name">view.odoocms.student.fee.refund.request.pivot</field>
            <field name="model">odoocms.fee.refund.request</field>
            <field name="arch" type="xml">
                <pivot string="Fee Fund Pivot View">
                    <field name="institute_code" type="row"/>
                    <field name="refund_type" type="col"/>
                    <field name="total_refund_amount" string="Refund Amount" type="measure"/>
                </pivot>
            </field>
        </record>

        <record id="action_odoocms_student_fee_refund_request" model="ir.actions.act_window">
            <field name="name">Student Fee Refund Request</field>
            <field name="res_model">odoocms.fee.refund.request</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>

        <menuitem
                id="menu_odoocms_student_fee_refund_request"
                action="action_odoocms_student_fee_refund_request"
                parent="menu_student_fee_request_root"
                groups="odoocms_fee.group_fee_coordinator,odoocms_fee.group_fee_manager,odoocms_fee.group_fee_readonly_user"
                sequence="20"/>

        <menuitem
                id="menu_odoocms_student_fee_refund_request"
                action="action_odoocms_student_fee_refund_request"
                parent="menu_student_fee_request_root"
                groups="odoocms_fee.group_fee_coordinator,odoocms_fee.group_fee_manager,odoocms_fee.group_fee_readonly_user"
                sequence="30"/>

    </data>
</odoo>
