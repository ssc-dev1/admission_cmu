<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_selected_candidate_challan_report_wiz" model="ir.ui.view">
        <field name="name">selected.candidate.challan.report.wiz.view</field>
        <field name="model">selected.candidate.challan.report.wiz</field>
        <field name="arch" type="xml">
            <form string="Selected Candidate Challan Report">
                <sheet>
                    <group>
                        <group>
                            <field name="bulk_challan_id" readonly="1"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <footer>
                        <button string="PDF Report" name="print_report" type="object" class="oe_highlight"/>
                        <button string="Excel Report" name="make_excel" type="object" class="oe_highlight"/>
                        <button string="Cancel" special='cancel' class="oe_highlight"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_selected_candidate_challan_report_wiz" model="ir.actions.act_window">
        <field name="name">Print Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">selected.candidate.challan.report.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="odoocms_admission_fee.model_generate_invoice"/>
        <field name="binding_view_types">list,form</field>
        <field name="view_id" ref="view_selected_candidate_challan_report_wiz"/>
        <field name="binding_type">report</field>
    </record>


    <record id="view_excel_reports_save_wizard_form" model="ir.ui.view">
        <field name="name">excel.reports.save.wizard.form</field>
        <field name="model">excel.reports.save.wizard</field>
        <field name="arch" type="xml">
            <form string="Excel Reports">
                <field name="name" invisible="1"/>
                <div>
                    <h2>Report Generated</h2>
                    <p>Here is the Excel Sheet:
                        <field name="data" readonly="1" filename="name"/>
                    </p>
                </div>
                <footer>
                    <button string="Close" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


</odoo>
