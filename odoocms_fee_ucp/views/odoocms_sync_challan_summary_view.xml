<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--***** Sync Challan Summary *****-->
        <record id="view_odoocms_sync_challan_summary_from" model="ir.ui.view">
            <field name="name">odoocms.sync.challan.summary.form.view</field>
            <field name="model">odoocms.sync.challan.summary</field>
            <field name="arch" type="xml">
                <form string="Sync Challan Summary">
                    <header></header>
                    <sheet>
                        <group>
                            <group>
                                <field name="date" readonly="1"/>
                                <field name="total_challan" readonly="1"/>
                                <field name="total_amount" readonly="1"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                            <page string="Detail">
                                <field name="lines" readonly="1">
                                    <tree>
                                        <field name="institute_id"/>
                                        <field name="challan_type"/>
                                        <field name="challan_count" sum="sum_challan_cnt"/>
                                        <field name="challan_amount" sum="sum_challan_amt"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="view_odoocms_sync_challan_summary_tree" model="ir.ui.view">
            <field name="name">odoocms.sync.challan.summary.tree.view</field>
            <field name="model">odoocms.sync.challan.summary</field>
            <field name="arch" type="xml">
                <tree string="Sync Challan Summary ">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="name"/>
                    <field name="total_challan"/>
                    <field name="total_amount"/>
                </tree>
            </field>
        </record>

        <record id="view_odoocms_sync_challan_summary_search" model="ir.ui.view">
            <field name="name">odoocms.sync.challan.summary.search.view</field>
            <field name="model">odoocms.sync.challan.summary</field>
            <field name="arch" type="xml">
                <search string="Sync Challan Summary">
                    <field name="date"/>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <record id="action_odoocms_sync_challan_summary" model="ir.actions.act_window">
            <field name="name">Sync Chllan Summary</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">odoocms.sync.challan.summary</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                id="menu_odoocms_sync_challan_summary"
                name="Sync Challan Summary"
                groups="group_odoo_fee_sql_connector_user"
                parent="menu_odoo_fee_sql_connector_sync_pool_main"
                action="action_odoocms_sync_challan_summary"
                sequence="20"/>

        <!--***** Sync Challan Summary Detail *****-->
        <record id="view_odoocms_sync_challan_summary_line_from" model="ir.ui.view">
            <field name="name">odoocms.sync.challan.summary.line.form.view</field>
            <field name="model">odoocms.sync.challan.summary.line</field>
            <field name="arch" type="xml">
                <form string="Sync Challan Summary Detail">
                    <header></header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="date" readonly="1"/>
                                <field name="summary_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="institute_id" readonly="1"/>
                                <field name="challan_type" readonly="1"/>
                                <field name="challan_count" readonly="1"/>
                                <field name="challan_amount" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="view_odoocms_sync_challan_summary_line_tree" model="ir.ui.view">
            <field name="name">odoocms.sync.challan.summary.line.tree.view</field>
            <field name="model">odoocms.sync.challan.summary.line</field>
            <field name="arch" type="xml">
                <tree string="Sync Challan Summary Detail">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="institute_id"/>
                    <field name="challan_type"/>
                    <field name="challan_count"/>
                    <field name="challan_amount"/>
                </tree>
            </field>
        </record>

        <record id="view_odoocms_sync_challan_summary_line_search" model="ir.ui.view">
            <field name="name">odoocms.sync.challan.summary.line.search.view</field>
            <field name="model">odoocms.sync.challan.summary.line</field>
            <field name="arch" type="xml">
                <search string="Sync Challan Summary">
                    <field name="date"/>
                    <field name="name"/>
                    <field name="institute_id"/>
                    <field name="challan_type"/>
                </search>
            </field>
        </record>

        <!--***** Pivot View *****-->
        <record id="view_odoocms_sync_challan_summary_line_pivot_view" model="ir.ui.view">
            <field name="name">odoocms.sync.challan.summary.line.pivot.view</field>
            <field name="model">odoocms.sync.challan.summary.line</field>
            <field name="arch" type="xml">
                <pivot string="Sync Challan Summary Analysis" display_quantity="true">
                    <field name="institute_id" type="row"/>
                    <field name="challan_type" type="col"/>
                    <field name="date" interval="month" type="col"/>
                </pivot>
            </field>
        </record>

        <!--***** Graph View *****-->
        <record id="view_doocms_sync_challan_summary_line_graph_view" model="ir.ui.view">
            <field name="name">doocms.sync.challan.summary.line.graph</field>
            <field name="model">odoocms.sync.challan.summary.line</field>
            <field name="arch" type="xml">
                <graph string="Sync Challan Summary Analysis">
                    <field name="institute_id" type="row"/>
                    <field name="challan_type" type="col"/>
                    <field name="date" interval="month" type="col"/>
                </graph>
            </field>
        </record>

        <record id="action_odoocms_sync_challan_summary_line" model="ir.actions.act_window">
            <field name="name">Sync Chllan Summary Detail</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">odoocms.sync.challan.summary.line</field>
            <field name="view_mode">tree,form,pivot,graph</field>
        </record>

        <menuitem
                id="menu_odoocms_sync_challan_summary_line"
                name="Sync Challan Summary Detail"
                groups="group_odoo_fee_sql_connector_user"
                parent="menu_odoo_fee_sql_connector_sync_pool_main"
                action="action_odoocms_sync_challan_summary_line"
                sequence="30"/>
    </data>
</odoo>