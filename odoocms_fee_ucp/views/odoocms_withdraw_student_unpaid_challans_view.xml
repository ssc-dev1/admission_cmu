<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_odoocms_withdraw_student_unpaid_challans_form" model="ir.ui.view">
            <field name="name">odoocms.withdraw.student.unpaid.challans.form.view</field>
            <field name="model">odoocms.withdraw.student.unpaid.challans</field>
            <field name="arch" type="xml">
                <form string="Withdraw Student Unpaid Chalalns" create="true" delete="true" edit="true" duplicate="false">
                    <header>
                        <button name="get_detail" type="object" class="oe_highlight" string="Get Detail" states="draft"/>
                        <button name="action_done" type="object" class="oe_highlight" string="Done" states="draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="student_id" readonly="0" options="{'no_quick_create':True,'no_create_edit':True,'no_create':True}"/>
                                <field name="date" readonly="1"/>
                            </group>
                            <group>
                                <field name="program_id" readonly="1"/>
                                <field name="institute_id" readonly="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Detail" name="lines">
                                <field name="lines">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="term_id"/>
                                        <field name="move_id"/>
                                        <field name="amount"/>
                                        <field name="action"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_odoocms_withdraw_student_unpaid_challans_tree" model="ir.ui.view">
            <field name="name">odoocms.withdraw.student.unpaid.challans.tree.view</field>
            <field name="model">odoocms.withdraw.student.unpaid.challans</field>
            <field name="arch" type="xml">
                <tree string="Withdraw Student Unpaid Challans" decoration-success="state=='done'" decoration-primary="state=='draft'" decoration-danger="state=='cancel'">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="program_id" optional="hide"/>
                    <field name="institute_id" optional="hide"/>
                    <field name="date"/>
                    <field name="state" widget="badge" decoration-success="state=='approved'" decoration-primary="state=='draft'" decoration-danger="state=='cancel'"/>
                    <field name="create_uid" string="Created By" optional="show" widget="many2one_avatar_user"/>
                </tree>
            </field>
        </record>

        <record id="view_odoocms_withdraw_student_unpaid_challans_search" model="ir.ui.view">
            <field name="name">odoocms.withdraw.student.unpaid.challans.search.view</field>
            <field name="model">odoocms.withdraw.student.unpaid.challans</field>
            <field name="arch" type="xml">
                <search string="Withdraw Student Unpaid Challans">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="date"/>
                    <field name="state"/>

                    <newline/>
                    <filter name="draft" string="Unpaid" domain="[('state', '=', 'draft')]"/>
                    <filter name="done" string="Paid" domain="[('state', '=', 'done')]"/>
                    <filter name="cancel" string="Cancelled" domain="[('state', '=','cancel')]"/>
                    <separator/>
                    <filter name="date_filter" string="Date" date="date"/>

                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Student" name="group_by_student" domain="[]" context="{'group_by':'student_id'}"/>
                        <separator/>
                        <filter string="Date" name="group_by_date" domain="[]" context="{'group_by':'date'}"/>
                        <separator/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_odoocms_withdraw_student_unpaid_challans" model="ir.actions.act_window">
            <field name="name">Withdraw Student Unpaid Challans</field>
            <field name="res_model">odoocms.withdraw.student.unpaid.challans</field>
            <field name="context">{}</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem
                id="menu_odoocms_withdraw_student_unpaid_challans"
                action="action_odoocms_withdraw_student_unpaid_challans"
                name="Withdraw Student Unpaid Challans"
                parent="odoocms_fee.menu_student_fee_request_root"
                sequence="680"/>
    </data>
</odoo>

