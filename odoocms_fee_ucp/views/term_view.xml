<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_integration_odoocms_academic_term_form" model="ir.ui.view">
        <field name="name">integration.odoocms.academic.term.form</field>
        <field name="model">odoocms.academic.term</field>
        <field name="inherit_id" ref="odoocms.view_odoocms_academic_term_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Integration" name="integration">
                    <group>
                        <group>
                            <field name="integration_code" required="1"/>
                            <field name="ax_billing_cycle" required="0"/>
                            <field name="ax_sem_code" required="0"/>
                        </group>
                        <group>
                            <field name="ax_session_code" required="0"/>
                            <field name="ax_academic_year" required="0"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
