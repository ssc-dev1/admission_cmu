<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- ***** Form View ***** -->
        <record id="view_odoocms_fee_unpaid_student_withdraw_form" model="ir.ui.view">
            <field name="name">odoocms.fee.unpaid.student.withdraw.form.view</field>
            <field name="model">odoocms.fee.unpaid.student.withdraw</field>
            <field name="arch" type="xml">
                <form string="Fee Unpaid Student Withdraw">
                    <header>
                        <button name="action_get_students" type="object" class="oe_highlight" string="Get Students" states="draft"/>
                        <button name="action_withdraw" type="object" class="oe_highlight" string="Withdraw" states="draft"/>
                        <button name="action_cancel" type="object" class="oe_highlight" string="Cancel" states="draft"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="term_id" required="1" attrs="{'readonly':[('state','!=','draft')]}" options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                                <field name="date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </group>
                            <group>
                            </group>
                        </group>

                        <notebook>
                            <page string="Detail" name="line_detail">
                                <field name="lines" readonly="1">
                                    <tree decoration-info="state=='draft'" decoration-danger="state=='cancel'" decoration-success="state=='withdraw'">
                                        <field name="sequence" widget="handle"/>
                                        <field name="student_id"/>
                                        <field name="institute_id" string="Faculty" optional="show"/>
                                        <field name="program_id" string="Program" optional="show"/>
                                        <field name="total_dues"/>
                                        <field name="unpaid_challans" widget="many2many_tags"/>
                                        <field name="unpaid_invoices" widget="many2many_tags"/>
                                        <field name="registration_status" optional="show"/>
                                        <field name="remarks" optional="show"/>
                                        <field name="state" optional="hide" widget="badge" decoration-info="state=='draft'" decoration-danger="state=='cancel'" decoration-success="state=='with'"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="student_id"/>
                                                <field name="institute_id"/>
                                                <field name="program_id"/>
                                            </group>
                                            <group>
                                                <field name="total_dues"/>
                                                <field name="registration_status"/>
                                            </group>
                                        </group>

                                        <notebook>
                                            <page string="Unpaid Invoices">
                                                <field name="unpaid_invoices" readonly="1"/>
                                            </page>
                                            <page string="Unpaid Challans">
                                                <field name="unpaid_challans" readonly="1"/>
                                            </page>
                                        </notebook>
                                    </form>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- ***** Tree View  ***** -->
        <record id="view_odoocms_fee_unpaid_student_withdraw_tree" model="ir.ui.view">
            <field name="name">odoocms.fee.unpaid.student.withdraw.tree.view</field>
            <field name="model">odoocms.fee.unpaid.student.withdraw</field>
            <field name="arch" type="xml">
                <tree string="Fee Unpaid Student Withdraw" decoration-info="state=='draft'" decoration-danger="state=='withdraw'" decoration-success="state=='confirm'">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="term_id"/>
                    <field name="date"/>
                    <field name="create_uid" string="Created By" optional="hide" widget="many2one_avatar_user"/>
                    <field name="state" widget="badge" decoration-info="state=='draft'" decoration-danger="state=='withdraw'" decoration-success="state=='confirm'"/>
                </tree>
            </field>
        </record>

        <!--***** Search View *****-->
        <record id="view_odoocms_fee_unpaid_student_withdraw_search" model="ir.ui.view">
            <field name="name">odoocms.fee.unpaid.student.withdraw.search</field>
            <field name="model">odoocms.fee.unpaid.student.withdraw</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Fee Unpaid Students Withdraw">
                    <field name="name"/>
                    <field name="term_id"/>
                    <field name="date"/>
                    <field name="state"/>

                    <newline/>
                    <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                    <filter name="withdraw" string="Withdraw" domain="[('state', '=','withdraw')]"/>
                    <filter name="cancel" string="Cancel" domain="[('state', '=','Cancel')]"/>
                    <separator/>
                    <filter name="date" string="Date" date="date"/>
                    <newline/>

                    <group expand="0" string="Group By...">
                        <filter string="Term" name="group_by_term_id" domain="[]" context="{'group_by':'term_id'}"/>
                        <separator/>
                        <filter string="Date" name="group_by_date" domain="[]" context="{'group_by':'date'}"/>
                        <separator/>
                        <filter string="Status" name="group_by_status" domain="[]" context="{'group_by':'state'}"/>
                        <separator/>
                    </group>
                </search>
            </field>
        </record>

        <!--***** Action *****-->
        <record id="action_odoocms_fee_unpaid_student_withdraw" model="ir.actions.act_window">
            <field name="name">Fee Unpaid Students Withdraw</field>
            <field name="res_model">odoocms.fee.unpaid.student.withdraw</field>
            <field name="context">{}</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                id="menu_odoocms_fee_unpaid_student_withdraw"
                action="action_odoocms_fee_unpaid_student_withdraw"
                name="Students Withdraw"
                parent="odoocms_fee.menu_student_fee_request_root"
                sequence="660"/>
    </data>
</odoo>