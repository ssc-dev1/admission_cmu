<?xml version="1.0"?>
<odoo>

    <record id="fee_defaulter_rep_wiz_view" model="ir.ui.view">
        <field name="name">fee.defaulter.rep.wiz.view</field>
        <field name="model">fee.defaulter.rep.wiz</field>
        <field name="arch" type="xml">
            <form string="Fee Defaulter Report">
                <group>
                    <group>
                        <field name="term_id" required="1" options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                        <field name="label_id" required="1"/>
                    </group>
                    <group>
                        <field name="exclude_due_date" widget="checkbox"/>
                        <field name="exclude_withdraw_students" widget="checkbox"/>
                    </group>
                </group>
                <notebook>
                    <page name="faculty_ids" string="Select Faculty">
                        <field name="faculty_ids" options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                    </page>
                </notebook>
                <footer>
                    <button name="print_report" string="Generate PDF Report" type="object" class="btn-primary"/>
                    <button name="make_excel" string="Generate Excel Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fee_defaulter_rep_wiz" model="ir.actions.act_window">
        <field name="name">Fee Defaulter Report</field>
        <field name="res_model">fee.defaulter.rep.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <menuitem
            id="menu_fee_defaulter_rep_wiz"
            name="Fee Defaulter Report"
            action="action_fee_defaulter_rep_wiz"
            parent="odoocms_fee.menu_fee_reports"
            groups="odoocms_fee.group_fee_user,odoocms_fee.group_fee_coordinator,odoocms_fee.group_fee_manager"
            sequence="410"/>

</odoo>
