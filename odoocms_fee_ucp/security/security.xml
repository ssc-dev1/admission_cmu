<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!--***** Module Category *****-->
        <record model="ir.module.category" id="ucp_fee_integration_category">
            <field name="name">Fee Integration</field>
            <field name="sequence">13</field>
        </record>

        <!--***** User *****-->
        <record id="group_odoo_fee_sql_connector_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="odoocms_fee_ucp.ucp_fee_integration_category"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!--***** Manager *****-->
        <record id="group_odoo_fee_sql_connector_manager" model="res.groups">
            <field name="name">SQL Connection Manager</field>
            <field name="category_id" ref="odoocms_fee_ucp.ucp_fee_integration_category"/>
            <field name="implied_ids" eval="[(4, ref('odoocms_fee_ucp.group_odoo_fee_sql_connector_user'))]"/>
        </record>

        <record model="ir.rule" id="odoocms_show_challan_on_portal_comp_rule">
            <field name="name">Show Challan On Portal multi-company</field>
            <field name="model_id" ref="model_odoocms_show_challan_on_portal"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>



    </data>
</odoo>
