<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="register_candidate_view_form" model="ir.ui.view">
        <field name="name">register.candidate.view.form</field>
        <field name="model">register.candidate</field>
        <field name="arch" type="xml">
            <form string="register_candidate_form">
                <sheet>
                    <widget name="web_ribbon" title="Sign UP" bg_color="bg-success"/>
                    <h3 style="text-align: center;">Register New Candidate</h3>
                    <group>
                        <group>
                            <field  name="first_name" tabindex='-1' />
                            <field tabindex='2' name="last_name"/>
                            <field  name="fee_receipt_no" readonly="1"/>
                            <field tabindex='5' name="cnic" required="1" placeholder="0000000000000"/>
                            <field name="country_id" required="1" options="{'no_open': True, 'no_create': True}" ></field>
                            <field name="applicant_id" attrs="{'invisible':[('applicant_id', '=', False)]}" ></field>
                        </group>
                        <group>
                            <field tabindex='-1' name="email"/>
                            <field tabindex='4' name="phone" required="1" placeholder="030XXXXXXXX"/>
                            <field name="amount" readonly="1"/>
                            <!--<field name="province_id" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('country_id', '!=', 177)],'required': [('country_id', '==', 177)]}" ></field>-->
                            <field name="province_id" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('country_id', '!=', 177)]}" ></field>
                            <!--<field name="domicile_id" domain="[('province_id', '=', province_id)]" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('country_id', '!=', 177)],'required': [('country_id', '==', 177)]}" ></field>-->
                            <field name="domicile_id" domain="[('province_id', '=', province_id)]" options="{'no_open': True, 'no_create': True}" attrs="{'invisible': [('country_id', '!=', 177)]}" ></field>
                            <!--<field name="province" attrs="{'invisible': [('country_id', '==', 177)],'required': [('country_id', '!=', 177)]}"></field>-->
                            <field name="province" attrs="{'invisible': [('country_id', '==', 177)]}"></field>
                        </group>
                    </group>
                    <button name="sign_up" type="object" class="oe_highlight" string="Sign Up" groups="base.group_user"
                            bg_color="bg-success"/>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="register_candidate_view_tree" model="ir.ui.view">
        <field name="name">register.candidate.view.tree</field>
        <field name="model">register.candidate</field>
        <field name="arch" type="xml">
            <tree string="register_candidate_tree">
                
                <field name="first_name"/>
                <field name="email"/>
                <field name="applicant_id"/>
                <field name="reference_no"/>
                <field name="fee_receipt_no"/>
                <field name="first_name"/>
                <field name="phone"/>
                <field name="amount"/>
            </tree>
        </field>
    </record>
    <record id="register_candidate_action" model="ir.actions.act_window">
        <field name="name">Register New Candidate</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">register.candidate</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create Your Test Center here.
            </p>
        </field>
    </record>
    <!-- This Menu Item must have a parent and an action -->
    <menuitem
            id="register_candidate_menu"
            name="Register New Candidate"
            parent="odoocms_admission.admission_applicant_menu"
            action="register_candidate_action"
            groups="odoocms_admission.group_admission_manager"
            sequence="10"/>
</odoo>
