                        <div style='text-align:right' class="col-3">Candidate CNIC/B-Form:</div>
                        <div style='border-bottom:1px solid black !important;text-align:left;' class="col-9 p-0">
                            <t t-out="application.cnic or application.passport"/>
                        </div>
                    </div>
                    <div class="container row m-0">
                        <div style='text-align:right' class="col-3">Candidate's Father Name:</div>
                        <div style='border-bottom:1px solid black !important;text-align:left;' class="col-9 p-0">
                            <t t-out="application.father_name"/>
                        </div>
                    </div>
                </div>
                <div class="col-3 p-0" style='text-align:center;vertical-align:top;padding-top:0px !important;'>
                    <img width='150px' height='150px' style='max-width:150px !important;max-height:150px !important;background-color:white !important;padding:3px !important;border:2px solid #ddd !important;display:block !important;margin:0 auto !important;' t-if='application.image' t-att-src='image_data_uri(application.image)'/>
                </div>
            </div>

            <div class="container row m-0">
                <div style='text-align:right' class="col-3">CNIC of Fee Payer:</div>
                <div style='border-bottom:1px solid black !important;text-align:left;' class="col-3 p-0">
                    <t t-out="application.fee_payer_cnic"/>
                </div>
                <div class="col-6 row">
                    <div style='text-align:right' class="col-4">Fee Payer Name:</div>
                    <div style='border-bottom:1px solid black !important;text-align:left;' class="col-8 p-0">
                        <t t-out="application.fee_payer_name"/>
                    </div>
                </div>
            </div>

            <div class="container row m-0">
                <div style='text-align:right' class="col-3">Date of Birth:</div>
                <div style='border-bottom:1px solid black !important;text-align:left;' class="col-3 p-0">
                    <t t-out="application.date_of_birth"/>
                </div>
                <div class="col-6 row">
                    <div style='text-align:right' class="col-4">Nationality:</div>
                    <div style='border-bottom:1px solid black !important;text-align:left;' class="col-8 p-0">
                        <t t-out="application.nationality.name"/>
                    </div>
                </div>
            </div>

            <div class="container row m-0">
                <div style='text-align:right' class="col-3">Religion:</div>
                <div style='border-bottom:1px solid black !important;text-align:left;' class="col-3 p-0">
                    <t t-out="application.religion_id.name"/>
                </div>
                <div class="col-6 row">
                    <div style='text-align:right' class="col-4">Gender:</div>
                    <div style='border-bottom:1px solid black !important;text-align:left;' class="col-8 p-0">
                        <t t-out="dict(application.fields_get('gender')['gender']['selection'])[application.gender]"/>
                    </div>
                </div>
            </div>

            <hr style='border:1px solid black'/>
            <h6 class=' m-0 mt-1 mb-1'>
                <span class='px-3 py-1' style='background-color:black !important;color:white;'>ACADEMIC DETAILS</span>
            </h6>
            <table style='border:1px solid black' class="table table-bordered">
                <thead style='background-color:#87CEEB !important;color:black !important;border:1px solid black !important'>
                    <th style='border:1px solid black !important;' class='text-center m-0 p-0'>Title of Certificate/Diploma/ Degree</th>
                    <th style='border:1px solid black !important;' class='text-center m-0 p-0'>Degree Title </th>
                    <th style='border:1px solid black !important;' class='text-center m-0 p-0'>Passing Year</th>
                    <th style='border:1px solid black !important;' class='text-center m-0 p-0'>Total Marks/CGPA</th>
                    <th style='border:1px solid black !important;' class='text-center m-0 p-0'>Obtained Marks/CGPA</th>
                    <th style='border:1px solid black !important;' class='text-center m-0 p-0'>Percentage</th>
                    <th style='border:1px solid black !important;' class='text-center m-0 p-0'>Board/University</th>
                    <th style='border:1px solid black !important;' class='text-center m-0 p-0'>Status</th>
                </thead>
                <tbody>
                    <t t-foreach="application.applicant_academic_ids" t-as="education">

                        <tr class='p-0 m-0' style='border:1px solid black !important'>
                            <td style='border:1px solid black !important;' class='text-center m-0 p-0'>
                                <t t-out="education.degree_level_id.name"/>
                            </td>
                            <td style='border:1px solid black !important;' class='text-center m-0 p-0'>
                                <t t-out="education.group_specialization.short_name if education.group_specialization else education.degree_name.name"/>
                            </td>
                            <td style='border:1px solid black !important;' class='text-center m-0 p-0'>
                                <t t-out="education.year"/>
                            </td>
                            <td style='border:1px solid black !important;' class='text-center m-0 p-0'>
                                <t t-out="education.total_marks if not education.cgpa_check else 4"/>
                            </td>
                            <td style='border:1px solid black !important;' class='text-center m-0 p-0'>
                                <t t-out="education.obt_marks if not education.cgpa_check else education.obtained_cgpa"/>
                            </td>
                            <td style='border:1px solid black !important;' class='text-center m-0 p-0'>
                                <t t-out="education.percentage"/>
                            </td>
                            <t t-set="board" t-value="request.env['odoocms.application.board'].sudo().search([('name','ilike',education.board)],limit=1)"/>
                            <td style='border:1px solid black !important;' class='text-center m-0 p-0'>
                                <t t-out="board.sh_name if education.board else education.institute"/>
                            </td>
                            <td style='border:1px solid black !important;' class='text-center m-0 p-0'>
                                <t t-if="education.result_status=='complete'">
                                    Completed
                                </t>
                                <t t-else="">
                                    Waiting
                                </t>
                            </td>
                        </tr>
                    </t>


                </tbody>

            </table>

            <h6 t-if='application.pre_test_id' class=' m-0 mt-2 mb-1'>
                <span class='px-3 py-1' style='background-color:black !important;color:white;'>APTITUDE TEST</span>
            </h6>
            <table t-if='application.pre_test_id' style='border:1px solid black' class="table table-bordered">
                <thead>
                    <thead style='background-color:#87CEEB !important;color:black !important;border:1px solid black !important'>
                        <th style='border:1px solid black !important;' class='text-center m-0 p-0'>Name</th>
                        <th style='border:1px solid black !important;' class='text-center m-0 p-0'>Marks  </th>
                        <th style='border:1px solid black !important;' class='text-center m-0 p-0'>Total Marks</th>
                    </thead>
                    <tbody class='m-0 p-0'>
                        <tr class='m-0 p-0'>
                            <td class='m-0 p-0'>
                                <t t-out="application.pre_test_id.name"/>
                            </td>
                            <td class='m-0 p-0'>
                                <t t-out="application.pre_test_marks"/>
                            </td>
                            <td class='m-0 p-0'>
                                <t t-out="application.pre_test_id.pre_test_total_marks"/>
                            </td>
                        </tr>
                    </tbody>
                </thead>
                <tbody>

                </tbody>
            </table>
            <t t-set="entry_test" t-value="request.env['applicant.entry.test'].sudo().search([('student_id','=',application.id),('paper_conducted','=',True)],limit=1)"/>
            <h6 t-if='entry_test' class=' m-0 mt-2 mb-1'>
                <span class='px-3 py-1' style='background-color:black !important;color:white;'>Entry TEST</span>
            </h6>
            <table t-if='entry_test' style='border:1px solid black' class="table table-bordered">
                <thead>
                    <thead style='background-color:#87CEEB !important;color:black !important;border:1px solid black !important'>
                        <th style='border:1px solid black !important;' class='text-center m-0 p-0'>Date</th>
                        <th style='border:1px solid black !important;' class='text-center m-0 p-0'>Marks  </th>
                        <th style='border:1px solid black !important;' class='text-center m-0 p-0'>Total Marks</th>
                    </thead>
                    <tbody class='m-0 p-0'>
                        <tr class='m-0 p-0 text-center'>
                            <td class='m-0 p-0'>
                                <t t-out="entry_test.date"/>
                            </td>
                            <td class='m-0 p-0'>
                                <t t-out="entry_test.cbt_marks"/>
                            </td>
                            <td class='m-0 p-0'>
                                <t t-out="entry_test.entry_test_marks"/>
                            </td>
                        </tr>
                    </tbody>
                </thead>
            </table>



            <table t-if='entry_test' style='border:1px solid black' class="table table-bordered">
                <thead style='background-color:#87CEEB !important;color:black !important;border:1px solid black !important'>
                    <th style='border:1px solid black !important;' class='text-center m-0 p-0'>Subject Name</th>
                    <th style='border:1px solid black !important;' class='text-center m-0 p-0'>Marks  </th>
                    <th style='border:1px solid black !important;' class='text-center m-0 p-0'>Total Marks</th>
                </thead>
                <tbody class='m-0 p-0'>
                    
                    <t t-foreach="list(set(entry_test.applicant_line_ids.mapped('name')))" t-as="subj">
                        <t t-set="s" t-value="entry_test.applicant_line_ids.filtered(lambda x:x.name==subj )[0]"/>
                        <tr class='m-0 p-0 text-center'>
                            <td class='m-0 p-0'>
                                <t t-out="s.name"/>
                            </td>
                            <td class='m-0 p-0'>
                                <t t-out="s.obtained_marks"/>
                            </td>
                            <td class='m-0 p-0'>
                                <t t-out="s.total_marks"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>

            <br/>
            <div class="container d-flex justify-content-between text-center">
                <div class="col-4 my-0 p-0">
                    <span style='border-bottom:1px solid black;' class='px-5 my-0'>
                        <t t-out="application.application_submit_date.strftime('%A %d %B %Y') if application.application_submit_date else application.application_date.strftime('%A %d %B %Y')"/>
                    </span>
                    <br/>
                    <span class='p-0 my-0'>Date</span>
                </div>
                <div class="col-4 my-0 p-0">
                    <span style='border-bottom:1px solid black;' class='px-5 my-0'>
                        <t t-out="application.father_name or application.guardian_name"/>
                    </span>
                    <br/>
                    <span class='p-0 my-0'>Father's Signature</span>

                </div>
                <div class="col-4 my-0 p-0">
                    <span style='border-bottom:1px solid black;' class='px-5 my-0'>
                        <t t-out="application.name"/>
                    </span>
                    <br/>
                    <span class='p-0 my-0'>Candidate's Signature</span>
                </div>
            </div>



        </t>
    </t>
</t>
</template>


<record id="admission_app_form_paperformat" model="report.paperformat">
<field name="name">Admission Application Form Format</field>
<field name="format">A4</field>
<field name="orientation">Portrait</field>
<field name="default" eval="False" />
<field name="dpi" eval="90" />
<field name="margin_top" eval="5" />
<field name="margin_right" eval="2" />
<field name="margin_bottom" eval="2" />
<field name="margin_left" eval="7" />
<field name="header_line" eval="False" />
<field name="header_spacing" eval="35" />
</record>

<record id="action_application_interview_report" model="ir.actions.report">
<field name="name">Interview Letter (with contact information)</field>
<field name="model">odoocms.application</field>
<field name="report_type">qweb-pdf</field>
<field name="report_name">odoocms_admission.application_interview_report</field>
<field name="report_file">odoocms_admission.application_interview_report</field>
<field name="binding_model_id" ref="model_odoocms_application"/>
<field name="binding_type">report</field>
<field name="paperformat_id" ref='admission_app_form_paperformat'/>
</record>

<record id="action_application_interview_report_no_contact" model="ir.actions.report">
<field name="name">Interview Letter (without contact information)</field>
<field name="model">odoocms.application</field>
<field name="report_type">qweb-pdf</field>
<field name="report_name">odoocms_admission.application_interview_report_no_contact</field>
<field name="report_file">odoocms_admission.application_interview_report_no_contact</field>
<field name="binding_model_id" ref="model_odoocms_application"/>
<field name="binding_type">report</field>
<field name="paperformat_id" ref='admission_app_form_paperformat'/>
</record>


