<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="allocate_slot_wizard_form" model="ir.ui.view">
        <field name="name">allocate.slot.wizard</field>
        <field name="model">allocate.slot.wizard</field>
        <field name="arch" type="xml">
            <form string="Form Wizard">
                <sheet>
                    <group>
                        <group>
                            <field name="register_id" domain="[('state', '=', 'application')]" ></field>

                        </group>
                    </group>
                    <notebook>
                        <page string="Allocate Slot" name="allocate_slot_page">
                            <field name="applicant_ids" domain="[('register_id', '=', register_id),('fee_voucher_state', '=', 'verify'),('state', 'not in', ('draft','done','reject'))]" />
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="allocate_slot" string="Allocate Slot" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="allocate_slot_wizard_action" model="ir.actions.act_window">
        <field name="name">Allocate Test/Interview Slot</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">allocate.slot.wizard</field>
        <field name="view_mode">form</field>
        <field name="binding_view_types">list,form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="odoocms_admission.model_odoocms_application" />

    </record>

    <menuitem
        id="allocate_slot_wizard_action_menu"
        name="Allocate Test/Interview Slot"
        action="allocate_slot_wizard_action"
        parent="odoocms_admission.menu_admission_configuration"
        />



</odoo>