<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="1">
    
        
        <record id="mail_template_waiting_email" model="mail.template">
            <field name="name">Admission CUST Waiting Email</field>
            <field name="email_from">{{ctx.get('admission_mail')}}</field>
            <field name="subject">Merit Waiting List</field>
            <field name="email_to">{{ctx.get('mail_to')}}</field>
            <field name="model_id" ref="odoocms_merit_ucp.model_odoocms_merit_registers" />
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" width="100%" height="100%" style="box-sizing:border-box;border-collapse:collapse;font-family:arial;font-size:40px;line-height: 1.6;">
                    <tbody>
                        <tr>
                            <td width="370px" style="height:100%;width:280px;">
                                <table height="100%" width="280" border="0" style="box-sizing:border-box;border-collapse:collapse;background-color:#102b4c">
                                    <tbody>
                                        <tr height="50%">
                                            <td style="vertical-align:top; text-align:center">
                                                <img data-imagetype="External" src="/web/image/1173-f7f6d124/UCP%20logo%20w-01.png?access_token=7c1e9ee1-55fe-4943-bf06-d699f8781c52" style="border-style:none;box-sizing:border-box;vertical-align:middle;margin-top: 2em; width: 200px; height: 200px;" width="200px" height="200"/>
                                            </td>
                                        </tr>
                                        <tr height="50%" style="text-align:center; color:#fff">
                                            <td valign="bottom" style="font-size: 16px;">
                                                <a t-attf-href="{{request.env.company.website}}" style="box-sizing:border-box;background-color:transparent;text-decoration: none;color:#ffffff"><t t-out="request.env.company.website"/><br/></a>
                                                <a style="box-sizing:border-box;background-color:transparent;text-decoration: none;color:#ffffff" t-attf-href="mailto:{{request.env.company.admission_mail}}" target="_blank" rel="noopener noreferrer" data-auth="NotApplicable" class="x_m-0" data-linkindex="1"><t t-out="request.env.company.admission_mail"/></a>
                                                <p style="margin:0px 0 12px 0;box-sizing:border-box;"><t t-out="request.env.company.admission_phone"/></p>
                                                <p style="margin:0px 0 12px 0;box-sizing:border-box;"><t t-out="request.env.company.street"/>,<br/> <t t-out="request.env.company.street2"/>, Pakistan.</p>
                                        
                                                <p style="margin:0px 0 12px 0;box-sizing:border-box;font-size:20px;vertical-align:middle; display:inline-block;">&amp;nbsp;</p>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                            <td width="90%" style="padding:0 20px">
                                <table border="0" cellspacing="0" cellpadding="0" width="100%" height="100%" style="box-sizing:border-box;background-repeat-y:no-repeat;background-repeat-x:no-repeat;background-position-y:bottom;background-position-x:right;border-collapse:collapse;background-size:200px;background-position: right bottom;background-repeat: no-repeat;">
                                    <tbody style="margin:0; padding:0">
                                        <tr style="vertical-align:top">
                                            <td>
                                                <div style="font-family:arial;font-size:30px;color:#102b4c;font-weight:100">&amp;nbsp;</div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="height:100%" valign="top">
                                                <div style="font-family:arial;font-size:18px;line-height:1.6;">
                                                    <!--CONTENT OF EMAIL WILL START HERE-->
                                                    <span style="font-weight:700;">Dear Applicant,</span>&amp;nbsp;<br/>
                                                <br/>Thank you for applying for admission at <t t-out="request.env.company.name"/>.
                                                On the basis of of your perfomance in the test and past academic record, you have been placed on the waiting list. 
                                                <br/>Please wait for the further correspondence
                                                <br/>
                                                Wish you the BEST OF LUCK
                                                <br/>
                                                Admission Office:
                                                <br/><t t-out="request.env.company.name"/>
                                                <br/><t t-out="request.env.company.street"/>, <t t-out="request.env.company.street2"/> <t t-out="request.env.company.city"/>.
                                                <br/><t t-out="request.env.company.admission_phone"/> (9:00 am to 5:00 pm)
                                                <br/><t t-out="request.env.company.admission_mail"/>
                                            </div>
                                        </td>
                                         
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
            </field>

        </record>
        <record id="mail_template_rejected_email" model="mail.template">
            <field name="name">Admission Cust Rejected Email</field>
            <field name="email_from">{{ctx.get('admission_mail')}}</field>
            <field name="subject">Merit Rejection</field>
            <field name="email_to">{{ctx.get('mail_to')}}</field>
            <field name="model_id" ref="odoocms_merit_ucp.model_odoocms_merit_registers" />
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" width="100%" height="100%" style="box-sizing:border-box;border-collapse:collapse;font-family:arial;font-size:40px;line-height: 1.6;">
                    <tbody>
                        <tr>
                            <td width="370px" style="height:100%;width:280px;">
                                <table height="100%" width="280" border="0" style="box-sizing:border-box;border-collapse:collapse;background-color:#102b4c">
                                    <tbody>
                                        <tr height="50%">
                                            <td style="vertical-align:top; text-align:center">
                                                <img data-imagetype="External" src="/web/image/1173-f7f6d124/UCP%20logo%20w-01.png?access_token=7c1e9ee1-55fe-4943-bf06-d699f8781c52" style="border-style:none;box-sizing:border-box;vertical-align:middle;margin-top: 2em; width: 200px; height: 200px;" width="200px" height="200"/>
                                            </td>
                                        </tr>
                                        <tr height="50%" style="text-align:center; color:#fff">
                                            <td valign="bottom" style="font-size: 16px;">
                                                <a t-attf-href="{{request.env.company.website}}" style="box-sizing:border-box;background-color:transparent;text-decoration: none;color:#ffffff"><t t-out="request.env.company.website"/><br/></a>
                                                <a style="box-sizing:border-box;background-color:transparent;text-decoration: none;color:#ffffff" t-attf-href="mailto:{{request.env.company.admission_mail}}" target="_blank" rel="noopener noreferrer" data-auth="NotApplicable" class="x_m-0" data-linkindex="1"><t t-out="request.env.company.admission_mail"/></a>
                                                <p style="margin:0px 0 12px 0;box-sizing:border-box;"><t t-out="request.env.company.admission_phone"/></p>
                                                <p style="margin:0px 0 12px 0;box-sizing:border-box;"><t t-out="request.env.company.street"/>,<br/> <t t-out="request.env.company.street2"/>, Pakistan.</p>
                                        
                                                <p style="margin:0px 0 12px 0;box-sizing:border-box;font-size:20px;vertical-align:middle; display:inline-block;">&amp;nbsp;</p>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                            <td width="90%" style="padding:0 20px">
                                <table border="0" cellspacing="0" cellpadding="0" width="100%" height="100%" style="box-sizing:border-box;background-repeat-y:no-repeat;background-repeat-x:no-repeat;background-position-y:bottom;background-position-x:right;border-collapse:collapse;background-size:200px;background-position: right bottom;background-repeat: no-repeat;">
                                    <tbody style="margin:0; padding:0">
                                        <tr style="vertical-align:top">
                                            <td>
                                                <div style="font-family:arial;font-size:30px;color:#102b4c;font-weight:100">&amp;nbsp;</div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="height:100%" valign="top">
                                                <div style="font-family:arial;font-size:18px;line-height:1.6;">
                                                    <!--CONTENT OF EMAIL WILL START HERE-->
                                                    <span style="font-weight:700;">Dear Applicant,</span>&amp;nbsp;<br/>
                                                <br/>Thank you for applying for admission at <t t-out="request.env.company.name"/>.
                                                I regret to inform you that based on your past academic record and the marks obtained in the admission test, we are
                                                unable to offer you a seat at <t t-out="request.env.company.name"/>. Therefore, your application for admission
                                                has been rejected.
                                                <br/>
                                                We wish you the very best of luck in your future academic endeavours.
                                                <br/>
                                                Good Luck!
                                                <br/>
                                                Admission Office:
                                                <br/><t t-out="request.env.company.name"/>
                                                <br/><t t-out="request.env.company.street"/>, <t t-out="request.env.company.street2"/> <t t-out="request.env.company.city"/>.
                                                <br/><t t-out="request.env.company.admission_phone"/> (9:00 am to 5:00 pm)
                                                <br/><t t-out="request.env.company.admission_mail"/>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
            </field>

        </record>
    
    
    </data>
    
</odoo>