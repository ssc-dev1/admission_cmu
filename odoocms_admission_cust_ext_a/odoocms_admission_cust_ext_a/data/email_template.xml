<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="mail_template_pre_test_verification_confirm" model="mail.template">
            <field name="name">Pre Test Verification</field>
            <field name="model_id" ref="base.model_res_users" />
            <field name="subject">Pre Test Verification</field>
            <field name="email_from">{{ctx.get('email_from')}}</field>
            <field name="email_to">{{ctx.get('email')}}</field>
            <field name="body_html" type="html">
                <table border="0" cellpadding="0" cellspacing="0" width="100%" height="100%"
                    style="box-sizing:border-box;border-collapse:collapse;font-family:arial;font-size:16px;line-height: 1.6;">
                    <tbody>
                        <tr>
                            <td width="370px" style="height:100%;width:280px;">
                                <table height="100%" width="280" border="0"
                                    style="box-sizing:border-box;border-collapse:collapse;background-color:#102b4c">
                                    <tbody>
                                        <tr height="50%">
                                            <td style="vertical-align:top; text-align:center">
                                                <img data-imagetype="External"
                                                   t-attf-src="data:image/*;base64,{{ctx.get('logo')}}" t-att-alt="ctx.get('company_name')"
                                                    style="border-style:none;box-sizing:border-box;vertical-align:middle;margin-top: 2em; width: 200px; height: 200px;"
                                                    width="200px" height="200" />
                                            </td>
                                        </tr>
                                        <tr height="50%" style="text-align:center; color:#fff">
                                            <td valign="bottom" style="font-size: 16px;">
                                                <a href="{{ctx.get('company_website')}}"
                                                    style="box-sizing:border-box;background-color:transparent;text-decoration: none;color:#ffffff">
                                                    <t t-out="ctx.get('company_website')" />
                                                    <br />
                                                </a>
                                                <a href="mailto:{{ctx.get('company_email')}}"
                                                    style="box-sizing:border-box;background-color:transparent;text-decoration: none;color:#ffffff"
                                                    target="_blank" rel="noopener noreferrer">
                                                     <t t-out="ctx.get('company_email')" />
                                                </a>
                                                <p style="margin:0px 0 12px 0;box-sizing:border-box;">
                                                     <t t-out="ctx.get('company_phone')" />
                                                </p>
                                                <p style="margin:0px 0 12px 0;box-sizing:border-box;">
                                                     <t t-out="ctx.get('company_address')" />
                                                </p>
                                                <p style="margin:0px 0 12px 0;box-sizing:border-box;font-size:20px;vertical-align:middle; display:inline-block;">
                                                    &#160;
                                                </p>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                            <td width="90%" style="padding:0 20px">
                                <table border="0" cellspacing="0" cellpadding="0" width="100%" height="100%">
                                    <tbody style="margin:0; padding:0">
                                        <tr style="vertical-align:top"></tr>
                                        <tr style="vertical-align:top">
                                            <td>
                                                <div style="font-family:arial;font-size:30px;color:#102b4c;font-weight:100">
                                                    &#160;
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="height:100%;font-size:16px !important;" valign="top">
                                                Dear <t t-out="ctx.get('applicant_name')" />
                                                <br/><br/>
                                                Your admission test has been exempted on the basis of your <t t-out="ctx.get('pre_test_name')" />-approved test claim.
                                                <br/><br/>
                                                Please be advised that you will have to provide a copy of the <t t-out="ctx.get('pre_test_name')" />-approved test result at the time of document submissions in the admission office.
                                                <br/><br/>
                                                Please wait for the merit list to be uploaded at <t t-out="ctx.get('company_name')" /> admission portal. Good Luck!
                                                <br/><br/>
                                                Should you have any queries, please feel free to email us at  <t t-out="ctx.get('company_email')" />
                                                <br/><br/>
                                                Admission Office
                                                <br/>
                                                 <t t-out="ctx.get('company_name')" />
                                                <br/>
                                                 <t t-out="ctx.get('company_address')" />
                                                <br/>
                                                 <t t-out="ctx.get('company_phone')" /> (9:00 am to 5:00 pm)
                                                <br/>
                                                 <t t-out="ctx.get('company_email')" />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </field>
            <field name="auto_delete" eval="True" />
        </record>

        <record id="mail_template_tuition_fee_verification_cust" model="mail.template">
            <field name="name">Admission Fee Verification cust</field>
            <field name="email_from">{{ ctx.get('company').admission_mail }}</field>
