<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_odoocms_application_tag_change" model="ir.ui.view">
            <field name="name">odoocms.application.tag.change</field>
            <field name="model">odoocms.application.tag.change</field>
            <field name="arch" type="xml">
                <form string="Change Application Tag">
                    <group>
                        <group>
                            <field name="action" required="1"/>
                            <field name="tag_id"
                                   required="1"
                                   options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True}"/>
                        </group>

                        <group>
                            <field name="date_effective" required="1"/>
                        </group>
                    </group>

                    <group>
                        <field name="description" required="1"/>
                    </group>

                    <notebook>
                        <page string="Applications">
                            <field name="application_ids">
                                <tree string="Applications">
                                    <field name="application_no"/>
                                    <field name="name"/>
                                    <field name="prefered_program_id"/>
                                    <field name="email"/>
                                    <field name="mobile"/>
                                    <field name="state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                    <footer>
                        <button name="change_application_tag"
                                string="Apply"
                                type="object"
                                class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-default"/>
                    </footer>

                </form>
            </field>
        </record>

        <record id="act_odoocms_change_application_tag" model="ir.actions.act_window">
            <field name="name">Change Application Tag</field>
            <field name="res_model">odoocms.application.tag.change</field>
            <field name="binding_model_id" ref="odoocms_admission.model_odoocms_application"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
