<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_odoocms_batch_fee_tree" model="ir.ui.view">
        <field name="name">odoocms.batch.fee.tree.view</field>
        <field name="model">odoocms.batch</field>
        <field name="arch" type="xml">
            <tree string="Batch Wise Fee">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="department_id"/>
                <field name="career_id"/>
                <field name="program_id"/>
                <field name="session_id"/>
                <field name="per_credit_hour_fee"/>
                <field name="admission_fee"/>
                <field name="batch_tuition_structure_head" optional="hide"/>
                <field name="admission_tuition_structure_head" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="odoocms_batch_fee_action" model="ir.actions.act_window">
        <field name="name">Batch Wise Fee</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odoocms.batch</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem
            id="menu_odoocms_batch_fee"
            name="Batch Wise Fee"
            parent="odoocms_fee.menu_odoocms_fee_others_main"
            action="odoocms_batch_fee_action"
            groups="odoocms_fee.group_fee_manager,odoocms_fee.group_fee_readonly_user,odoocms_fee.group_fee_user,odoocms_fee.group_fee_coordinator"
            sequence="50"/>

</odoo>
