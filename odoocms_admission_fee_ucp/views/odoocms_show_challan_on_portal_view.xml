            <field name="name">odoocms.show.challan.on.portal.line.search</field>
            <field name="model">odoocms.show.challan.on.portal.line</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Show Challan On Portal Detail">
                    <field name="name"/>
                    <field name="term_id"/>
                    <field name="type"/>
                    <field name="date"/>
                    <field name="state"/>

                    <newline/>
                    <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                    <filter name="confirm" string="Confirm" domain="[('state', '=','confirm')]"/>
                    <filter name="cancel" string="Cancel" domain="[('state', '=','Cancel')]"/>
                    <separator/>
                    <filter name="date" string="Date" date="date"/>

                    <newline/>
                    <group expand="0" string="Group By...">
                        <filter string="Term" name="group_by_term_id" domain="[]" context="{'group_by':'term_id'}"/>
                        <separator/>
                        <filter string="Date" name="group_by_date" domain="[]" context="{'group_by':'date'}"/>
                        <separator/>
                        <filter string="Type" name="group_by_type" domain="[]" context="{'group_by':'type'}"/>
                        <separator/>
                        <filter string="Status" name="group_by_status" domain="[]" context="{'group_by':'state'}"/>
                        <separator/>
                        <filter string="Company" name="group_by_company" domain="[]" context="{'group_by':'company_id'}"/>
                        <separator/>
                    </group>
                </search>
            </field>
        </record>


        <record id="action_odoocms_show_challan_on_portal_line" model="ir.actions.act_window">
            <field name="name">Show Challan On Portal Line</field>
            <field name="res_model">odoocms.show.challan.on.portal.line</field>
            <field name="context">{}</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                id="menu_odoocms_show_challan_on_portal_line"
                name="Show Challan On Portal Detail"
                sequence="20"
                parent="menu_odoocms_show_challan_on_portal_main"
                action="action_odoocms_show_challan_on_portal_line"
                groups="odoocms_fee.group_fee_coordinator,odoocms_fee.group_fee_manager,odoocms_fee.group_fee_readonly_user"
        />

    </data>
</odoo>