<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherited_view_odoocms_application_form" model="ir.ui.view">
            <field name="name">inherited.odoocms.application.form.view</field>
            <field name="model">odoocms.application</field>
            <field name="inherit_id" ref="odoocms_admission.view_odoocms_application_form"/>
            <field name="arch" type="xml">
                <field name="degree" position="after">
                    <field name="scholarship_id" attrs="{'invisible':[('scholarship_ids','=',False)]}"/>
                </field>
                <xpath expr="//notebook" position="inside">
                    <page name="scholarship_ids" string="Scholarship">
                        <field name="scholarship_ids_domain" invisible="1"/>
                        <field name="scholarship_ids" domain="scholarship_ids_domain" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}">
                            <tree>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="waiver_type" string="Scholarship Type"/>
                                <field name="amount" string="Percentage"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="inherited_view_odoocms_application_scholarship_form" model="ir.ui.view">
            <field name="name">inherited.odoocms.application.scholarship.form.view</field>
            <field name="model">odoocms.application</field>
            <field name="inherit_id" ref="odoocms_admission_ucp.view_odoocms_application_scholarship_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="scholarship_ids" string="Scholarship">
                        <field name="scholarship_ids_domain" invisible="1"/>
                        <field name="scholarship_ids" domain="scholarship_ids_domain" options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True, 'limit': 10}">
                            <tree>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="waiver_type" string="Scholarship Type"/>
                                <field name="amount" string="Percentage"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
