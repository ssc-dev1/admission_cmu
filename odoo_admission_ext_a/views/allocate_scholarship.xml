        <record id="action_odoocms_application_scholarship_ext_a" model="ir.actions.act_window">
            <field name="name">Application Scholarship</field>
            <field name="res_model">odoocms.application</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>    <!--  -->
            <field name="view_ids" eval="[(5, 0, 0),
    (0, 0, {'view_mode': 'tree', 'view_id': ref('view_odoocms_application_scholarship_tree_ext_a')}),
    (0, 0, {'view_mode': 'form', 'view_id': ref('odoocms_admission_ucp.view_odoocms_application_scholarship_form')})]"/>
            <field name="search_view_id" ref="odoocms_admission_ucp.view_odoocms_application_sholarship_search"/>
            <field name="context">{}</field>
            <field name="domain">[('fee_voucher_state', '=', 'verify'), ('state', '=', 'submit')]</field>

            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create the First Application Scholarship here.
                </p>
            </field>
        </record>

