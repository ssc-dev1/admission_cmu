<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_odoocms_batch_form_academic" model="ir.ui.view">
            <field name="name">odoocms.batch.form</field>
            <field name="model">odoocms.batch</field>
            <field name="inherit_id" ref="odoocms.view_odoocms_batch_form" />
            <field name="arch" type="xml">
                <field name="career_id" position="after">
                    <field name="grade_method_id"
                           options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                </field>
            </field>
        </record>

        <record id="view_odoocms_batch_form_academic_dbs" model="ir.ui.view">
            <field name="name">odoocms.batch.form</field>
            <field name="model">odoocms.batch</field>
            <field name="priority">64</field>
            <field name="arch" type="xml">
                <form string="Program Batch">
                    <header>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code" required="1"/>
                            </group>
                            <group>
                                <field name="department_id"
                                    options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                                <field name="career_id"
                                    options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                                <field name="grade_method_id"
                                    options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                            </group>
                            <group>
                                <field name="session_id"
                                    options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                                <field name="term_id"
                                    options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                                <field name="semester_id"
                                    options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                            </group>
                            <group name="program">
                                <field name="program_id"
                                       domain="[('career_id','=',career_id),('department_id','=',department_id)]"
                                       options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name='grade_classes' string="Grade Classes">
                                <field name="grade_class_ids" context="{'disposal':True}">
                                    <tree decoration-info="dbs_action=='new'" decoration-success="dbs_action=='approve'" decoration-danger="dbs_action=='revise'"
                                          create="false" delete="false">
                                        <field name="dbs_action" invisible="1"/>
                                        <field name="name"/>
                                        <field name="code"/>
                                        <field name="student_count"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>

                </form>
            </field>
        </record>
        <record id="action_odoocms_batch_dbs" model="ir.actions.act_window">
            <field name="name">Program Batch</field>
            <field name="res_model">odoocms.batch</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids"
               eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'tree', 'view_id': ref('odoocms.view_odoocms_batch_tree')}),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('view_odoocms_batch_form_academic_dbs')}),
               ]"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>

        </record>

        <menuitem
                id="menu_odoocms_batch_dbs"
                name="Program Batch"
                action="action_odoocms_batch_dbs"
                parent="menu_odoocms_academic_main"
                sequence="20"/>
    </data>
</odoo>
