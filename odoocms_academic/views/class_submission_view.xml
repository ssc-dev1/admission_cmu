<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_odoocms_class_submission_tree" model="ir.ui.view">
        <field name="name">odoocms.class.submission.tree</field>
        <field name="model">odoocms.class.submission</field>
        <field name="arch" type="xml">
            <tree string="Class Submissions" delete="false">
                <field name="class_id"/>
                <field name="name"/>
                <field name="description"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_odoocms_class_submission_form" model="ir.ui.view">
        <field name="name">odoocms.class.submission.form</field>
        <field name="model">odoocms.class.submission</field>
        <field name="arch" type="xml">
            <form string="Class Submission" delete="false">
                <sheet>
                    <group>
                        <group>
                            <field name="class_id"/>
                            <field name="name"/>
                            <field name="status"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Labs for Submission">
                            <field name="lab_ids" nolabel="1">
                                <tree editable="top">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Attachments">
                            <field name="attachment_ids" nolabel="1">
                                <tree editable="top">
                                    <field name="file_name"/>
                                    <field name="attachment" filename="file_name" widget="binary"/>
                                    <field name="status"/>
<!--                                    <field name="document" filename="document_fname" widget="binary"/>-->
<!--                                    <field name="document_fname" invisible="1"/>-->
                                </tree>
                            </field>
                        </page>
                        <page string="Students Submissions">
                            <field name="student_submission_ids" nolabel="1">
                                <tree create="false" edit="false">
                                    <field name="student_id" readonly="1"/>
                                    <field name="date_submit" readonly="1"/>
                                    <field name="ipaddress" readonly="1"/>
                                    <field name="lab_id" readonly="1"/>
                                    <field name="attachment_ids" readonly="1"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="submission_id" readonly="1"/>
                                            </group>
                                            <group>
                                                <field name="student_id" readonly="1"/>
                                                <field name="class_id" readonly="1"/>
                                            </group>
                                            <group>
                                                <field name="date_submit" readonly="1"/>
                                                <field name="ipaddress" readonly="1"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="attachment_ids" readonly="1">
                                                <tree>
                                                    <field name="file_name" readonly="1"/>
                                                    <field name="attachment" widget="binary" readonly="1"/>
                                                </tree>
                                            </field>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_odoocms_class_submission_search" model="ir.ui.view">
        <field name="name">odoocms.class.submission.search</field>
        <field name="model">odoocms.class.submission</field>
        <field name="arch" type="xml">
            <search string="Class Submission">
                <field name="class_id"/>
                <field name="name"/>
                <field name="description"/>
                <newline/>
                <filter name='current' string="Status On" domain="[('status','=',True)]"/>
                <filter name='passed' string="Status Off" domain="[('status','=',False)]"/>
                <newline/>
                <group expand="0" string="Group By...">
                    <filter name="class" string="Class" domain="[]" context="{'group_by':'class_id'}"/>
                    <filter name="start_date" string="Start Date" domain="[]" context="{'group_by':'start_date'}"/>
                    <filter name="end_date" string="End Date" domain="[]" context="{'group_by':'end_date'}"/>
                    <filter name="status" string="Status" domain="[]" context="{'group_by':'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_odoocms_class_submission" model="ir.actions.act_window">
        <field name="name">Class Submissions</field>
        <field name="res_model">odoocms.class.submission</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_odoocms_class_submission_search"/>
        <field name="domain">[]</field>
        <field name="context">{
            'search_default_class':1,
            }
        </field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create the First Class Submission here.
            </p>
        </field>
    </record>

    <menuitem
            id="menu_odoocms_class_submission_root"
            name="Class Submissions"
            parent="menu_odoocms_class_activities_root"
            sequence="20"/>

    <menuitem
            id="menu_odoocms_class_submission"
            name="Submissions"
            parent="menu_odoocms_class_submission_root"
            action="action_odoocms_class_submission"
            sequence="10"/>

</odoo>