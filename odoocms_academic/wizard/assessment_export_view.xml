<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="act_odoocms_activities_export_wizard" model="ir.actions.act_window">
			<field name="name">Assessment Report</field>
			<field name="res_model">odoocms.activities.export.wizard</field>
			<field name="binding_model_id" ref="odoocms_registration.model_odoocms_class"/>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

<!--		<act_window-->
