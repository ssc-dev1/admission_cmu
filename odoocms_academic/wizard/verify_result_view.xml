<?xml version="1.0"?>
<odoo>

    <record id="odoocms_verify_result_wiz_form" model="ir.ui.view">
        <field name="name">odoocms.verify.result.wiz.form</field>
        <field name="model">odoocms.verify.result.wiz</field>
        <field name="arch" type="xml">
            <form string="Verify Result">
                <group>
                	<group>
						<field name="term_id"
                            options="{'no_quick_create':True, 'no_create_edit': True, 'limit': 10}"/>
		            </group>
		            <group>
		            </group>
                </group>
                <!-- domain="[('term_id','=',term_id),('state','=','verify')]" -->
                <group>
                     <field name="grade_class_ids"
                            domain="[('term_id','=',term_id),('state','=','verify')]"
                               options="{'no_create': True, 'no_quick_create':True, 'no_create_edit': True}">
                            <tree class="tree_no_open">
                                <field name="name"/>
                                <field name="code"/>
                                <field name="state" invisible="1"/>
                            </tree>
                        </field>
                </group>
                <footer>
                    <button name="verify_result" string="Result Verified" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

     <record id="action_odoocms_verify_result_wiz" model="ir.actions.act_window">
        <field name="name">Verify Result</field>
        <field name="res_model">odoocms.verify.result.wiz</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_odoocms_verify_result_wiz"
        name="Verify Result"
        action="action_odoocms_verify_result_wiz"
        parent="odoocms_academic.menu_odoocms_academic_result"
        sequence="400"/>


</odoo>
