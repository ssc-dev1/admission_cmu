<?xml version="1.0" encoding="utf-8"?>
<odoo>
	
     <record model="ir.module.category" id="module_category_odoocms_academic">
        <field name="name">CMS Academic</field>
        <field name="description">Helps you handle your CMS Academic needs.</field>
        <field name="sequence">14</field>
     </record>

	 <record id="group_academic_user" model="res.groups">
        <field name="name">Odoo Academic User</field>
        <field name="category_id" ref="odoocms_academic.module_category_odoocms_academic"/>
         <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_academic_coordinator" model="res.groups">
        <field name="name">Odoo Academic Coordinator</field>
        <field name="category_id" ref="odoocms_academic.module_category_odoocms_academic"/>
        <field name="implied_ids" eval="[(4, ref('odoocms_academic.group_academic_user'))]"/>
    </record>

    <record id="group_academic_dbs" model="res.groups">
        <field name="name">DBS Approval</field>
        <field name="category_id" ref="base.module_category_hidden"/>
<!--        <field name="implied_ids" eval="[(4, ref('odoocms_academic.group_academic_user'))]"/>-->
    </record>

    <record id="group_academic_manager" model="res.groups">
        <field name="name">Odoo Academic Manager</field>
        <field name="category_id" ref="odoocms_academic.module_category_odoocms_academic"/>
        <field name="implied_ids" eval="[(4, ref('odoocms_academic.group_academic_coordinator'))]"/>
    </record>

    <record id="odoocms_assessment_user_rule" model="ir.rule">
        <field name="name">Assessment Access for Users</field>
        <field name="model_id" ref="model_odoocms_assessment"/>
        <field name="global" eval="False"/>
        <field name="domain_force">[('class_id.program_id.user_ids','in',[user.id])]</field>
        <field name="groups" eval="[(4, ref('odoocms_academic.group_academic_user'))]"/>
    </record>

    <record id="odoocms_assessment_coordinator_rule" model="ir.rule">
        <field name="name">Assessment Access for Coordinators</field>
        <field name="model_id" ref="model_odoocms_assessment"/>
        <field name="global" eval="False"/>
        <field name="domain_force">[('class_id.program_id.user_ids','in',[user.id])]</field>
        <field name="groups" eval="[(4, ref('odoocms_academic.group_academic_coordinator'))]"/>
    </record>

    <record id="odoocms_assessment_manager_rule" model="ir.rule">
        <field name="name">Assessment Access for Manager</field>
        <field name="model_id" ref="model_odoocms_assessment"/>
        <field name="global" eval="False"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('odoocms_academic.group_academic_manager'))]"/>
    </record>

    <record model="ir.rule" id="odoocms_class_submission_comp_rule">
        <field name="name">Class Submission multi-company</field>
        <field name="model_id" ref="model_odoocms_class_submission"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
