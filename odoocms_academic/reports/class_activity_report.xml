<odoo>
    <template id="class_activity_report_template">
       <t t-call="web.html_container">
           <t t-call="web.basic_layout">
               <style>
                       td{padding:2px !important;}
               </style>
               <t t-set="report_title" t-value="'Class Activity Report'"/>
               <t t-call="odoocms_assets.custom_header_report"/>

               <table t-if='data' class="table table-bordered table-striped">
                   <thead>
                     <tr style='padding:2px'>
                       <th >Sr#</th>
                       <t t-foreach="data[0].keys()" t-as="header">
                         <th style='padding-top:2px;padding-bottom:2px;'><t t-esc="header"/></th>
                       </t>
                     </tr>
                   </thead>
                   <tbody>
                    <!-- <t t-esc=""/> -->
                    <t t-foreach="data" t-as="line">
                      
                      <tr>
                        <td><t t-esc="line_index+1"/></td>
                        <t t-foreach="list(data[0].keys())" t-as="key">
                          <td><t t-esc="line[key]"/></td>
                        </t>
                      </tr>
                    </t>
                    
                   </tbody>
                 </table>
              
<br/>
</t>
<br/>


       </t>
   </template>
</odoo>