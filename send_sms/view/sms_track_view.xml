<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--***** Form *****-->
        <record id="sms_track_form_view" model="ir.ui.view">
            <field name="name">smstrack.form</field>
            <field name="model">sms_track</field>
            <field name="arch" type="xml">
                <form string="SMS Track" create="false" edit="false">
                    <header>
                        <field name="status" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="send_to"/>
                                <field name="mobile_no"/>
                                <field name="mobile_network"/>
                                <field name="sms_nature"/>
                                <field name="department_id"/>
                                <field name="institute_id"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="model_id"/>
                                <field name="gateway_id"/>
                                <field name="response_id"/>
                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                            </group>
                        </group>
                        <group string="Body">
                            <field name="message_id"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--***** Tree *****-->
        <record id="sms_track_tree_view" model="ir.ui.view">
            <field name="name">smstrack.list</field>
            <field name="model">sms_track</field>
            <field name="arch" type="xml">
                <tree string="SMS Track" default_order="create_date desc" create="false" edit="false"
                      decoration-success="status=='1'" decoration-danger="not status=='1'">
                    <field name="name"/>
                    <field name="send_to"/>
                    <field name="mobile_no"/>
                    <field name="mobile_network"/>
                    <field name="model_id" optional="show"/>
                    <field name="sms_nature" optional="show"/>
                    <field name="department_id" optional="hide"/>
                    <field name="institute_id" optional="hide"/>
                    <field name="gateway_id"/>
                    <field name="date" optional="show"/>
                    <field name="create_date" optional="hide"/>
                    <field name="status" widget="badge" decoration-success="status=='1'" decoration-danger="not status=='1'"/>
                    <field name="create_uid" string="Created By" optional="hide" widget="many2one_avatar_user"/>
                    <field name="company_id" groups="base.group_multi_company" optional="show"/>
                </tree>
            </field>
        </record>

        <!--***** Search View *****-->
        <record id="view_sms_track_search" model="ir.ui.view">
            <field name="name">sms.track.select</field>
            <field name="model">sms_track</field>
            <field name="arch" type="xml">
                <search string="SMS Track">
                    <field name="send_to"/>
                    <field name="mobile_no"/>
                    <field name="status"/>
                    <field name="sms_nature"/>
                    <field name="department_id"/>
                    <field name="gateway_id"/>

                    <newline/>
                    <filter name="delivered" string="Delivered" domain="[('status', '=', '1')]"/>
                    <filter name="account_expired" string="Account Expired" domain="[('status', '=', '4')]"/>
                    <newline/>

                    <group expand="0" string="Group By...">
                        <filter string="Send To" name="group_by_send_to" domain="[]" context="{'group_by':'send_to'}"/>
                        <separator/>
                        <filter string="Status" name="group_by_status" domain="[]" context="{'group_by':'status'}"/>
                        <separator/>
                        <filter string="SMS Nature" name="group_by_sms_nature" domain="[]" context="{'group_by':'sms_nature'}"/>
                        <separator/>
                        <filter string="Type" name="group_by_type" domain="[]" context="{'group_by':'type'}"/>
                        <separator/>
                        <filter string="Department" name="group_by_department_id" domain="[]" context="{'group_by':'department_id'}"/>
                        <separator/>
                        <filter string="Faculty" name="group_by_institute_id" domain="[]" context="{'group_by':'institute_id'}"/>
                        <separator/>
                        <filter string="Date" name="group_by_date" domain="[]" context="{'group_by':'date'}"/>
                        <separator/>
                        <filter string="Mobile Network" name="group_by_mobile_network" domain="[]" context="{'group_by':'mobile_network'}"/>
                        <separator/>
                        <filter string="Company" name="group_by_company" domain="[]" context="{'group_by':'company_id'}"/>
                        <separator/>
                    </group>

                </search>
            </field>
        </record>

        <!--***** Action *****-->
        <record id="action_sms_track" model="ir.actions.act_window">
            <field name="name">SMS History</field>
            <field name="res_model">sms_track</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" eval="view_sms_track_search"/>
            <field name="context">{}</field>
            <field name="help">use for send sms</field>
        </record>

        <!--***** Menu *****-->
        <menuitem action="action_sms_track"
                  id="menu_action_sms_track"
                  parent="menu_send_sms_history_main"
                  groups="send_sms.group_odoo_sms_user,send_sms.group_odoo_sms_manager"
                  sequence="10"/>
    </data>
</odoo>
