<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!--***** Students SMS Form *****-->
        <record id="view_send_sms_student_form" model="ir.ui.view">
            <field name="name">send.sms.student.form.view</field>
            <field name="model">send.sms.student</field>
            <field name="arch" type="xml">
                <form string="Employee SMS">
                    <header>
                        <button name="action_generate_detail" string="General Detail" states="draft" type="object" class="btn-primary"/>
                        <button name="action_student_sms" string="Send" states="detail" confirm="Are You Sure For This Action" type="object" class="btn-primary"/>
                        <button name="action_cancel" string="Cancel" states="draft,detail" type="object" class="btn-primary"/>
                        <button name="action_turn_to_draft" string="Turn To Draft" states="cancel,detail" type="object" class="btn-primary"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="type" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="sms_length"/>
                            </group>
                            <group>
                                <field name="date" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="gateway_id" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
                                <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}" attrs="{'readonly': [('state','not in',('draft'))]}"/>
                            </group>
                        </group>
                        <group string="Message Detail">
                            <field name="sms_body" nolabel="1" required="1"/>
                        </group>

                        <separator/>
                        <notebook name="notebook_1">
                            <page string="Batches">
                                <field name="batch_ids" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </page>
                            <page string="Programs">
                                <field name="program_ids" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </page>
                            <page string="Sessions">
                                <field name="session_ids" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </page>
                            <page string="Faculties">
                                <field name="institute_ids" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </page>
                            <page string="Students">
                                <field name="student_ids" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </page>
                        </notebook>

                        <separator/>
                        <notebook name="notebook_2">
                            <page string="Excluded Batches">
                                <field name="excluded_batch_ids" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </page>
                            <page string="Excluded Programs">
                                <field name="excluded_program_ids" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </page>
                            <page string="Excluded Sessions">
                                <field name="excluded_session_ids" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </page>
                            <page string="Excluded Faculties">
                                <field name="excluded_institute_ids" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </page>
                            <page string="Excluded Students">
                                <field name="excluded_student_ids" attrs="{'readonly':[('state','!=','draft')]}"/>
                            </page>
                        </notebook>

                        <separator/>
                        <notebook name="notebook_3">
                            <page string="Detail">
                                <field name="lines" readonly="1">
                                    <tree>
                                        <field name="student_code" string="Code" optional="show"/>
                                        <field name="student_name" string="Name" optional="show"/>
                                        <field name="mobile_no" string="Mobile#" optional="show"/>
                                        <field name="batch_id" optional="hide"/>
                                        <field name="program_id" optional="hide"/>
                                        <field name="institute_id" optional="hide"/>
                                        <field name="date" optional="hide"/>
                                        <field name="state" optional="hide"/>
                                        <field name="sent" optional="show"/>
                                    </tree>
                                    <form>
                                        <header>
                                            <field name="state" widget="statusbar"/>
                                        </header>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="student_code"/>
                                                    <field name="student_name"/>
                                                    <field name="mobile_no"/>
                                                </group>
                                                <group>
                                                    <field name="batch_id"/>
                                                    <field name="program_id"/>
                                                    <field name="institute_id"/>
                                                    <field name="date"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!--***** Students SMS Tree *****-->
        <record id="view_send_sms_student_tree_view" model="ir.ui.view">
            <field name="name">send.sms.student.tree</field>
            <field name="model">send.sms.student</field>
            <field name="arch" type="xml">
                <tree string="Student SMS" decoration-primary="state=='draft'" decoration-success="state=='sent'" decoration-danger="state=='cancel'">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="type"/>
                    <field name="sms_length" optional="show"/>
                    <field name="state" optional="hide"/>
                    <field name="gateway_id" optional="hide"/>
                    <field name="create_date" optional="hide"/>
                    <field name="state" widget="badge" decoration-primary="state=='draft'" decoration-success="state=='sent'" decoration-danger="state=='cancel'"/>
                    <field name="create_uid" string="Created By" optional="hide" widget="many2one_avatar_user"/>
                    <field name="company_id" groups="base.group_multi_company" optional="show"/>
                </tree>
            </field>
        </record>

        <!--***** Student SMS Search View *****-->
        <record id="view_send_sms_student_search" model="ir.ui.view">
            <field name="name">send.sms.student.select</field>
            <field name="model">send.sms.student</field>
            <field name="arch" type="xml">
                <search string="Student SMS">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="type"/>
                    <field name="state"/>
                    <field name="gateway_id"/>

                    <group expand="0" string="Group By...">
                        <filter string="Type" name="group_by_type" domain="[]" context="{'group_by':'type'}"/>
                        <separator/>
                        <filter string="Status" name="group_by_state" domain="[]" context="{'group_by':'state'}"/>
                        <separator/>
                        <filter string="Company" name="group_by_company" domain="[]" context="{'group_by':'company_id'}"/>
                        <separator/>
                        <filter string="Date" name="group_by_date" domain="[]" context="{'group_by':'date'}"/>
                        <separator/>
                          <filter string="Company" name="group_by_company" domain="[]" context="{'group_by':'company_id'}"/>
                        <separator/>
                    </group>

                </search>
            </field>
        </record>

        <!--***** Student SMS Kanban View *****-->
        <record id="view_send_sms_student_kanban" model="ir.ui.view">
            <field name="name">send.sms.student.kanban</field>
            <field name="model">send.sms.student</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" create="0" sample="1">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="type"/>
                    <field name="state"/>
                    <field name="sms_length"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click container">
                                <div class="row no-gutters">
                                    <div class="col-12 badge badge-pill  bg-info text-white">
                                        <strong class="o_kanban_record_title">
                                            <t t-esc="record.name.raw_value"/>
                                        </strong>
                                    </div>
                                </div>

                                <div class="row no-gutters justify-content-end" style="font-size:10px;">
                                    <div class="col-3" style="font-weight:bold;">
                                        <span>Type:</span>
                                    </div>
                                    <div class="col-9 ">
                                        <strong>
                                            <field name="type"/>
                                        </strong>
                                    </div>
                                </div>

                                <div class="row no-gutters justify-content-end" style="font-size:10px;">
                                    <div class="col-3" style="font-weight:bold;">
                                        <span>Date:</span>
                                    </div>
                                    <div class="col-9">
                                        <strong>
                                            <field name="date"/>
                                        </strong>
                                    </div>
                                </div>


                                <div class="row no-gutters justify-content-end" style="font-size:10px;">
                                    <div class="col-3" style="font-weight:bold;">
                                        <span>SMS Length:</span>
                                    </div>
                                    <div class="col-9 ">
                                        <strong>
                                            <field name="sms_length"/>
                                        </strong>
                                    </div>
                                </div>

                                <div class="row no-gutters justify-content-end" style="font-size:10px;">
                                    <div class="col-3" style="font-weight:bold;">
                                        <span>Status:</span>
                                    </div>
                                    <div class="col-9 ">
                                        <strong>
                                            <field name="state"/>
                                        </strong>
                                    </div>
                                </div>

                            </div>
                        </t>
                    </templates>

                </kanban>
            </field>
        </record>


        <!--***** Action *****-->
        <record id="view_send_sms_student_action" model="ir.actions.act_window">
            <field name="name">Student SMS</field>
            <field name="res_model">send.sms.student</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" eval="view_send_sms_student_search"/>
            <field name="context">{}</field>
        </record>

        <!--***** Menu *****-->
        <menuitem
                id="menu_send_sms_student"
                parent="menu_send_sms_main"
                action="view_send_sms_student_action"
                groups="send_sms.group_odoo_sms_user,send_sms.group_odoo_sms_manager"
                sequence="30"/>
    </data>
</odoo>
