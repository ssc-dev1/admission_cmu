<odoo>

    <!-- Semester -->
    <record id="view_odoocms_semester_tree" model="ir.ui.view">
        <field name="name">odoocms.semester.tree</field>
        <field name="model">odoocms.semester</field>
        <field name="arch" type="xml">
            <tree string="Semester" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="number"/>
<!--                <field name="color" widget="color" optional="show"/>-->
            </tree>
        </field>
    </record>

    <record id="action_odoocms_semester" model="ir.actions.act_window">
        <field name="name">Semester</field>
        <field name="res_model">odoocms.semester</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create the First Semester here.
            </p>
        </field>
    </record>

    <!-- Week Days -->
    <record id="view_odoocms_week_day_tree" model="ir.ui.view">
        <field name="name">odoocms.week,day.tree</field>
        <field name="model">odoocms.week.day</field>
        <field name="arch" type="xml">
            <tree string="Week Days" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="number"/>
<!--                <field name="color" widget="color" optional="show"/>-->
            </tree>
        </field>
    </record>

    <record id="action_odoocms_week_day" model="ir.actions.act_window">
        <field name="name">Week Days</field>
        <field name="res_model">odoocms.week.day</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
