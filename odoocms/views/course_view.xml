    <record id="view_odoocms_course_type_search" model="ir.ui.view">
        <field name="name">odoocms.course.type.search</field>
        <field name="model">odoocms.course.type</field>
        <field name="priority" eval="14"/>
        <field name="arch" type="xml">
        <search string="Course Type">
            <field name="name" string="Subject Type" filter_domain="['|', ('name','ilike',self), ('code','ilike',self)]"/>
            <separator/>
            <newline />
                <group expand="0" string="Group By...">
                    <filter string="Type" domain="[]" name="type" context="{'group_by':'type'}" />
                </group>
        </search>
        </field>
    </record>

